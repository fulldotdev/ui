---
import { getCollection } from 'astro:content'
import Category from 'fulldev-ui/layouts/Category.astro'
import { getHref } from 'fulldev-ui/lib/getHref'

export async function getStaticPaths() {
  const collection = await getCollection('categories')
  return collection.map((entry) => ({
    params: {
      category: getHref(entry),
    },
    props: entry,
  }))
}
---

<Category {...Astro.props} />
