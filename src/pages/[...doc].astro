---
import { getCollection } from 'astro:content'
import DocLayout from 'fulldev-ui/layouts/DocLayout.astro'
import { getHref } from 'fulldev-ui/utils/getHref.ts'

export async function getStaticPaths() {
  const collection = await getCollection('docs')
  return collection.map((entry) => ({
    params: {
      doc: getHref(entry.collection, entry.slug),
    },
    props: entry,
  }))
}
---

<DocLayout {...Astro.props} />
