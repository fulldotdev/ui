---
import { getCollection } from 'astro:content'
import Product from 'fulldev-ui/layouts/Product.astro'
import { getHref } from 'fulldev-ui/lib/getHref'

export async function getStaticPaths() {
  const collection = await getCollection('products')
  return collection.map((entry) => ({
    params: {
      product: getHref(entry),
    },
    props: entry,
  }))
}
---

<Product {...Astro.props} />
