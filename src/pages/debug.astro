---
import "@/styles/globals.css"

import { Button } from "@/components/ui/button"
import { SectionSpread } from "@/components/ui/section"
import { Typography } from "@/components/ui/typography"
import Layout from "@/components/layout.astro"

// Core patterns for AI training
// Only includes patterns with typography + actions + media
const Section = "div"
const SectionContent = "div"
const SectionGroup = "div"
const SectionSplit = "div"
const SectionActions = "div"
const SectionPanel = "div"

const content =
  "px-4 lg:px-8 xl:px-16 py-16 flex flex-col gap-16 mx-auto max-w-screen-2xl w-full"
const split = "grid grid-cols-2 gap-16 has-[>[data-slot=section-content]]:gap-0"
const group = "flex flex-col gap-8"
const spread = "flex flex-col gap-8 lg:flex-row lg:justify-between"
const panel = "border bg-muted/50 rounded-xl"

const img = "w-full h-full object-cover"
---

<Layout>
  <div class="bg-primary text-primary-foreground p-1 text-center font-medium">
    Stack
  </div>
  <Section>
    <SectionContent class={content}>
      <SectionGroup class={group}>
        <Typography>
          <h1>Hello World</h1>
          <p>This is a test</p>
        </Typography>
        <SectionActions>
          <Button>Click me</Button>
          <Button>Click me</Button>
        </SectionActions>
      </SectionGroup>
      <img src="https://placehold.co/3000x800" alt="Test img" class={img} />
    </SectionContent>
  </Section>

  <div class="bg-primary text-primary-foreground p-1 text-center font-medium">
    Split
  </div>
  <Section>
    <SectionContent class={content}>
      <SectionSplit class={split}>
        <SectionGroup class={group}>
          <Typography>
            <h1>Hello World</h1>
            <p>This is a test</p>
          </Typography>
          <SectionActions>
            <Button>Click me</Button>
            <Button>Click me</Button>
          </SectionActions>
        </SectionGroup>
        <img src="https://placehold.co/1200" alt="Test img" class={img} />
      </SectionSplit>
    </SectionContent>
  </Section>

  <div class="bg-primary text-primary-foreground p-1 text-center font-medium">
    Spread
  </div>
  <Section>
    <SectionContent class={content}>
      <SectionSpread class={spread}>
        <SectionGroup class={group}>
          <Typography>
            <h1>Hello World</h1>
            <p>This is a test</p>
          </Typography>
        </SectionGroup>
        <SectionActions>
          <Button>Click me</Button>
          <Button>Click me</Button>
        </SectionActions>
      </SectionSpread>
      <img src="https://placehold.co/3000x800" alt="Test img" class={img} />
    </SectionContent>
  </Section>

  <div class="bg-primary text-primary-foreground p-1 text-center font-medium">
    Stack + Panel
  </div>
  <Section>
    <SectionContent class={content}>
      <SectionPanel class={panel}>
        <SectionContent class={content} data-slot="section-content">
          <SectionGroup class={group}>
            <Typography>
              <h1>Hello World</h1>
              <p>This is a test</p>
            </Typography>
            <SectionActions>
              <Button>Click me</Button>
              <Button>Click me</Button>
            </SectionActions>
          </SectionGroup>
          <img src="https://placehold.co/3000x800" alt="Test img" class={img} />
        </SectionContent>
      </SectionPanel>
    </SectionContent>
  </Section>

  <div class="bg-primary text-primary-foreground p-1 text-center font-medium">
    Stack + Panel (Image Inset)
  </div>
  <Section>
    <SectionContent class={content}>
      <SectionPanel class={panel}>
        <SectionContent class={content} data-slot="section-content">
          <SectionGroup class={group}>
            <Typography>
              <h1>Hello World</h1>
              <p>This is a test</p>
            </Typography>
            <SectionActions>
              <Button>Click me</Button>
              <Button>Click me</Button>
            </SectionActions>
          </SectionGroup>
        </SectionContent>
        <img src="https://placehold.co/3000x800" alt="Test img" class={img} />
      </SectionPanel>
    </SectionContent>
  </Section>

  <div class="bg-primary text-primary-foreground p-1 text-center font-medium">
    Split + Panel (Image Inset)
  </div>
  <Section>
    <SectionContent class={content}>
      <SectionPanel class={panel}>
        <SectionSplit class={split}>
          <SectionContent class={content} data-slot="section-content">
            <SectionGroup class={group}>
              <Typography>
                <h1>Hello World</h1>
                <p>This is a test</p>
              </Typography>
              <SectionActions>
                <Button>Click me</Button>
                <Button>Click me</Button>
              </SectionActions>
            </SectionGroup>
          </SectionContent>
          <img src="https://placehold.co/1200x800" alt="Test img" class={img} />
        </SectionSplit>
      </SectionPanel>
    </SectionContent>
  </Section>

  <div class="bg-primary text-primary-foreground p-1 text-center font-medium">
    Split (Image First)
  </div>
  <Section>
    <SectionContent class={content}>
      <SectionSplit class={split}>
        <img src="https://placehold.co/1200" alt="Test img" class={img} />
        <SectionGroup class={group}>
          <Typography>
            <h1>Hello World</h1>
            <p>This is a test</p>
          </Typography>
          <SectionActions>
            <Button>Click me</Button>
            <Button>Click me</Button>
          </SectionActions>
        </SectionGroup>
      </SectionSplit>
    </SectionContent>
  </Section>

  <div class="bg-primary text-primary-foreground p-1 text-center font-medium">
    Split + Panel (Image First)
  </div>
  <Section>
    <SectionContent class={content}>
      <SectionPanel class={panel}>
        <SectionSplit class={split}>
          <img src="https://placehold.co/3000x800" alt="Test img" class={img} />
          <SectionContent class={content} data-slot="section-content">
            <SectionGroup class={group}>
              <Typography>
                <h1>Hello World</h1>
                <p>This is a test</p>
              </Typography>
              <SectionActions>
                <Button>Click me</Button>
                <Button>Click me</Button>
              </SectionActions>
            </SectionGroup>
          </SectionContent>
        </SectionSplit>
      </SectionPanel>
    </SectionContent>
  </Section>

  <div class="bg-primary text-primary-foreground p-1 text-center font-medium">
    Spread + Panel
  </div>
  <Section>
    <SectionContent class={content}>
      <SectionPanel class={panel}>
        <SectionContent class={content} data-slot="section-content">
          <SectionSpread class={spread}>
            <SectionGroup class={group}>
              <Typography>
                <h1>Hello World</h1>
                <p>This is a test</p>
              </Typography>
            </SectionGroup>
            <SectionActions>
              <Button>Click me</Button>
              <Button>Click me</Button>
            </SectionActions>
          </SectionSpread>
          <img src="https://placehold.co/3000x800" alt="Test img" class={img} />
        </SectionContent>
      </SectionPanel>
    </SectionContent>
  </Section>

  <div class="bg-primary text-primary-foreground p-1 text-center font-medium">
    Stack + Full-Width Image Below
  </div>
  <Section>
    <SectionContent class={content}>
      <SectionGroup class={group}>
        <Typography>
          <h1>Hello World</h1>
          <p>This is a test</p>
        </Typography>
        <SectionActions>
          <Button>Click me</Button>
          <Button>Click me</Button>
        </SectionActions>
      </SectionGroup>
    </SectionContent>
    <img src="https://placehold.co/3000x800" alt="Test img" class={img} />
  </Section>

  <div class="bg-primary text-primary-foreground p-1 text-center font-medium">
    Split (Image Inset) - No Panel
  </div>
  <Section>
    <SectionContent class={content}>
      <SectionSplit class={split}>
        <SectionContent class={content} data-slot="section-content">
          <Typography>
            <h1>Hello World</h1>
            <p>This is a test</p>
          </Typography>
          <SectionActions>
            <Button>Click me</Button>
            <Button>Click me</Button>
          </SectionActions>
        </SectionContent>
        <img src="https://placehold.co/1200x800" alt="Test img" class={img} />
      </SectionSplit>
    </SectionContent>
  </Section>
</Layout>
