---
import Badge from '@/components/Badge.astro'
import Element from '@/components/Element.astro'
import type { ComponentProps, HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {
  variant?: ComponentProps<typeof Badge>['variant'] | undefined
  badges?: ComponentProps<typeof Badge>[] | undefined
}

const { variant, badges, ...rest } = Astro.props
---

<Element
  class:list="flex flex-wrap gap-2"
  {...rest}
>
  {
    badges?.map((badge) => (
      <Badge
        {variant}
        {...badge}
      />
    ))
  }
  <slot />
</Element>
