---
import type { ComponentProps, HTMLAttributes } from 'astro/types'
import Badge from 'fulldev-ui/components/Badge.astro'
import Element from 'fulldev-ui/components/Element.astro'

interface Props
  extends HTMLAttributes<'div'>,
    Pick<ComponentProps<typeof Badge>, 'variant' | 'size'> {
  badges?: ComponentProps<typeof Badge>[] | undefined
}

const { variant = 'outline', size = 'md', badges, ...rest } = Astro.props
---

<Element
  class:list="badges"
  {...rest}
>
  {
    badges?.map((badge) => (
      <Badge
        {variant}
        {size}
        {...badge}
      />
    ))
  }
  <slot />
</Element>

<style is:global>
  @layer fulldev {
    .badges {
      display: flex;
      flex-wrap: wrap;
      gap: var(--spacing-2);
    }
  }
</style>
