---
import type { ComponentProps } from 'astro/types'
import Badge from 'fulldev-ui/components/Badge.astro'
import Element from 'fulldev-ui/components/Element.astro'
interface Props extends ComponentProps<typeof Badge> {
  variant?: 'primary' | 'secondary' | 'outline' | undefined
  size?: 'sm' | 'md' | 'lg' | undefined
  badges?: ComponentProps<typeof Badge>[] | undefined
}

const { variant = 'outline', size = 'md', badges, ...rest } = Astro.props
---

<Element
  class:list="badges"
  {...rest}
>
  {
    badges?.map((badge) => (
      <Badge
        {variant}
        {size}
        {...badge}
      />
    ))
  }
</Element>

<style is:global>
  @layer fulldev {
    .badges {
      display: flex;
      flex-wrap: wrap;
      gap: var(--spacing-2);
    }
  }
</style>
