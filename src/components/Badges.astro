---
import type { ComponentProps } from 'astro/types'
import Badge from './Badge.astro'

interface Props extends ComponentProps<typeof Badge> {
  badge?: ComponentProps<typeof Badge> | undefined
  badges?: ComponentProps<typeof Badge>[] | undefined
}

const { badge, badges, ...rest } = Astro.props
---

{
  [badge, ...(badges || [])].filter(Boolean).map((badge) => (
    <Badge
      {...badge}
      {...rest}
    />
  ))
}
