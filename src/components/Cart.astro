---
import type { ComponentProps } from 'astro/types'
import CartList from 'fulldev-ui/components/CartList.astro'
import CartSummary from 'fulldev-ui/components/CartSummary.astro'
import Drawer from 'fulldev-ui/components/Drawer.astro'

interface Props extends ComponentProps<typeof Drawer> {}

const {
  icon = 'shopping-cart',
  color = 'brand',
  id = 'cart',
  if: ifProp,
  ...rest
} = Astro.props
---

<Drawer
  if={ifProp}
  class:list="cart"
  {icon}
  {color}
  {id}
  {...rest}
>
  <CartList />
  <CartSummary slot="footer" />
</Drawer>

<style  is:global>
  @layer fulldev {
    form {
      display: flex;
      flex-direction: column;
      gap: var(--space-4);
    }
  }
</style>
