---
// @ts-nocheck
import type { ComponentProps } from 'astro/types'
import Drawer from 'fulldev-ui/structures/Drawer.astro'

interface Props extends Omit<ComponentProps<typeof Drawer>, 'id' | 'icon'> {}

const { variant = 'ghost', size = 'md', ...rest } = Astro.props
---

<Drawer
  class:list="cart"
  id="cart"
  icon="shopping-cart"
  {variant}
  {size}
  {...rest}
/>

<style>
  @layer fulldev {
    form {
      display: flex;
      flex-direction: column;
      gap: var(--space-4);
    }
  }
</style>
