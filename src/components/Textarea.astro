---
import type { HTMLAttributes } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'
import Label from 'fulldev-ui/components/Label.astro'

interface Props extends HTMLAttributes<'textarea'> {
  size?: 'sm' | 'md' | 'lg' | undefined
  label?: string | undefined
}

const {
  label,
  placeholder,
  name = label || placeholder,
  id = name,
  size = 'md',
  rows = 3,
  value,
  disabled,
  readonly,
  required,
  minlength,
  maxlength,
  form,
  ...rest
} = Astro.props
---

<Element
  class:list={`textarea size-${size}`}
  for={id}
>
  <Label
    text={label}
    for={id}
  />
  <Element
    class:list="textarea-textarea"
    as="textarea"
    show={id}
    {id}
    {name}
    {placeholder}
    {rows}
    {value}
    {disabled}
    {readonly}
    {required}
    {minlength}
    {maxlength}
    {form}
    {...rest}
  />
</Element>

<style is:global>
  @layer textarea {
    .textarea {
      display: flex;
      flex-direction: column;

      .label {
        padding-bottom: var(--spacing-1-5);
      }

      textarea {
        display: flex;
        border: 1px solid var(--color-input);
        border-radius: var(--radius-md);
        background-color: var(--color-background);
        width: 100%;
        resize: vertical;
        color: var(--color-foreground);
        font-size: var(--text-sm);

        &::placeholder {
          color: var(--color-muted-foreground);
        }

        &:focus-visible {
          outline: none;
          box-shadow: 0 0 0 2px var(--color-ring);
        }

        &:disabled {
          opacity: 0.5;
          pointer-events: none;
        }

        &[readonly] {
          pointer-events: none;
        }
      }

      &.size-sm {
        textarea {
          padding-top: var(--spacing-1-5);
          padding-right: var(--spacing-2-5);
          padding-bottom: var(--spacing-1-5);
          padding-left: var(--spacing-2-5);
          min-height: var(--spacing-8);
        }
      }

      &.size-md {
        textarea {
          padding-top: var(--spacing-2);
          padding-right: var(--spacing-3);
          padding-bottom: var(--spacing-2);
          padding-left: var(--spacing-3);
          min-height: var(--spacing-10);
        }
      }

      &.size-lg {
        textarea {
          padding-top: var(--spacing-2-5);
          padding-right: var(--spacing-3-5);
          padding-bottom: var(--spacing-2-5);
          padding-left: var(--spacing-3-5);
          min-height: var(--spacing-11);
        }
      }
    }
  }
</style>
