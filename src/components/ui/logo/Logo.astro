---
import { cn } from "@/lib/utils"

interface Props {
  class?: string
  href?: string
}

const { class: className, href, ...props } = Astro.props

const Comp = href ? "a" : "div"
---

<Comp
  class={cn(
    "flex items-center justify-start gap-3 whitespace-nowrap text-base font-semibold",
    className
  )}
  href={href}
  {...props}
>
  <slot />
</Comp>
