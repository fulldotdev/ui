---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props
  extends HTMLAttributes<"header">,
    VariantProps<typeof variants> {}

const variants = cva(
  [
    "relative mx-auto flex min-h-12 items-center justify-between gap-8 py-1",
    "border border-transparent",
  ],
  {
    variants: {
      frame: {
        // Filled on every screen, with content width based on padding
        default: [
          "bg-foreground text-background w-full px-[max(var(--gutter),calc((100cqw-var(--banner-width))/2))]",
        ],
        // Contained on every screen, with a border and padding for box effect
        box: [
          "w-[calc(100%-2*var(--gutter))] max-w-(--banner-width)",
          "overflow-hidden",
          "border-border bg-foreground text-background border",
        ],
        // Contained on every screen, with a border, padding and rounded corners for panel effect
        panel: [
          "w-[calc(100%-2*var(--gutter))] max-w-(--banner-width)",
          "my-2 overflow-hidden rounded-xl",
          "bg-foreground text-background border-border border",
        ],
      },
      variant: {
        default: "",
        secondary: "bg-secondary text-secondary-foreground",
        outline: "border-border bg-background text-foreground border",
      },
    },
    defaultVariants: {
      frame: "default",
      variant: "default",
    },
  }
)

const { class: className, frame, variant, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

<script is:inline>
  // Inline because it needs to run before the banner is rendered
  if (sessionStorage.getItem("closedBanners")) {
    document.body.classList.add("banner-hidden")
  } else {
    document.body.classList.remove("banner-hidden")
  }
</script>

{
  slot?.trim().length > 0 && (
    <banner
      class={cn(variants({ frame, variant }), className)}
      data-slot="banner"
      data-frame={frame}
      {...props}
    >
      <Fragment set:html={slot} />
    </banner>
  )
}

<script>
  document.querySelectorAll("[data-slot='banner-close']").forEach((btn) => {
    btn.addEventListener("click", () => {
      sessionStorage.setItem("closedBanners", "true")
      document.body.classList.add("banner-hidden")
    })
  })
</script>

<style is:global>
  body.banner-hidden [data-slot="banner"] {
    display: none;
  }

  [data-slot="banner"] {
    --banner-width: var(--container);
  }
</style>
