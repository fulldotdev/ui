---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

const variants = cva("flex gap-4 w-full text-sm", {
  variants: {
    align: {
      start: "text-start",
      center: "text-center",
      end: "text-end",
    },
  },
  defaultVariants: {
    align: "center",
  },
})

interface Props extends HTMLAttributes<"div">, VariantProps<typeof variants> {}

const { align, class: className, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <div class={cn(variants({ align }), className)} {...props}>
      <Fragment set:html={slot} />
    </div>
  )
}
