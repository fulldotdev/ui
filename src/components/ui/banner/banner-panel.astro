---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

const variants = cva(
  "relative overflow-hidden rounded-2xl mx-auto flex w-full justify-between px-4 py-3 md:px-8 lg:px-12",
  {
    variants: {
      variant: {
        default: "bg-primary text-primary-foreground",
        outline: "border-border not-first:border-t not-last:border-b",
        secondary: "bg-secondary text-secondary-foreground",
        ghost: "bg-transparent",
      },
    },
    defaultVariants: {
      variant: "default",
    },
  }
)

interface Props extends HTMLAttributes<"div">, VariantProps<typeof variants> {}

const { class: className, variant, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <div
      data-slot="banner-panel"
      class={cn(variants({ variant }), className)}
      {...props}
    >
      <Fragment set:html={slot} />
    </div>
  )
}
