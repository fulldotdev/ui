---
import { Image } from "astro:assets"
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"

interface Props {
  class?: string
  src?: ComponentProps<typeof Image>["src"]
  alt?: ComponentProps<typeof Image>["alt"]
  width?: ComponentProps<typeof Image>["width"]
  height?: ComponentProps<typeof Image>["height"]
  sizes?: ComponentProps<typeof Image>["sizes"]
}

const { class: className, src, alt = "", ...props } = Astro.props
---

{
  src && (
    <Image
      class={cn("aspect-square size-full", className)}
      src={src as any}
      alt={alt}
      height="44"
      width="44"
      sizes="44px"
      {...props}
    />
  )
}
