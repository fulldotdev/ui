---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props
  extends HTMLAttributes<"footer">,
    VariantProps<typeof variants> {}

const variants = cva(
  "relative mx-auto flex scroll-m-(--footer-py) flex-col gap-16 px-(--footer-px) py-(--footer-py)",
  {
    variants: {
      frame: {
        // Filled on every screen, with content width based on padding
        default: ["w-full"],
        // Contained on every screen, with a border and padding for box effect
        box: [
          "w-[calc(100%-16px)] max-w-(--footer-width) lg:w-[calc(100%-2*var(--footer-px))]",
          "overflow-hidden",
          "bg-muted/50 border-border border",
        ],
        // Contained on every screen, with a border, padding and rounded corners for panel effect
        panel: [
          "w-[calc(100%-16px)] max-w-(--footer-width) lg:w-[calc(100%-2*var(--footer-px))]",
          "my-(--footer-py) overflow-hidden rounded-xl first:mt-2",
          "bg-muted/50 border-border border",
        ],
      },
      variant: {
        default: "",
        muted: "bg-muted/50 border-transparent",
        outline: "border-border bg-background border",
        accent: "bg-accent/50 border-transparent",
      },
    },
    defaultVariants: {
      frame: "default",
      variant: "default",
    },
  }
)

const { class: className, frame, variant, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot?.trim().length > 0 && (
    <footer
      class={cn(variants({ frame, variant }), className)}
      data-slot="footer"
      data-frame={frame}
      {...props}
    >
      <Fragment set:html={slot} />
    </footer>
  )
}

<style is:global>
  /* footer width and padding for inset calculations */
  [data-slot="footer"] {
    --footer-width: var(--container, var(--breakpoint-xl));
    --footer-py: 48px;
    --footer-px: max(24px, calc((100cqw - var(--footer-width)) / 2));
  }

  [data-slot="footer"][data-frame="box"],
  [data-slot="footer"][data-frame="panel"] {
    --footer-px: 16px;
  }

  @media (min-width: 1024px) {
    [data-slot="footer"] {
      --footer-py: 64px;
    }

    [data-slot="footer"][data-frame="box"],
    [data-slot="footer"][data-frame="panel"] {
      /* --footer-py: 48px; */
      /* --footer-px: 48px; */
      --footer-px: 64px;
    }
  }
</style>
