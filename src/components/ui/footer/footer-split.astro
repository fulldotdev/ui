---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

const variants = cva(
  "grid w-full auto-cols-fr items-start gap-16 lg:grid-flow-col",
  {
    variants: {
      align: {
        start: "items-start",
        center: "items-center",
        end: "items-end",
      },
    },
    defaultVariants: {
      align: "start",
    },
  }
)

interface Props extends HTMLAttributes<"div">, VariantProps<typeof variants> {}

const { align, class: className, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <div class={cn(variants({ align }), className)} {...props}>
      <Fragment set:html={slot} />
    </div>
  )
}
