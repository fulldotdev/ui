---
import type { HTMLAttributes } from "astro/types"

import { cn } from "@/lib/utils"

interface Props extends HTMLAttributes<"input"> {}

const { class: className, ...props } = Astro.props
---

<input
  data-slot="sidebar-input"
  data-sidebar="input"
  class={cn(
    "bg-background h-8 w-full shadow-none rounded-md border px-3 py-2 text-sm outline-none focus-visible:ring-2 focus-visible:ring-ring",
    className
  )}
  {...props}
/>
