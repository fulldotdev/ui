---
import { cn } from "@/lib/utils"

interface Props {
  class?: string
}

const { class: className, ...props } = Astro.props
const slot = await Astro.slots.render("default")
const hasSlot = slot.trim().length > 0
---

{
  hasSlot && (
    <ul class={cn("space-y-4", className)} {...props}>
      <Fragment set:html={slot} />
    </ul>
  )
}
