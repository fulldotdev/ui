---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props extends HTMLAttributes<"div">, VariantProps<typeof variants> {}

const variants = cva(
  [
    "size-full grid lg:auto-cols-fr lg:grid-flow-col lg:grid-cols-2",
    "gap-y-(--section-py) gap-x-(--section-px)",
  ],
  {
    variants: {
      align: {
        start: "items-start",
        center: "items-center",
        end: "items-end",
      },
      order: {
        default: "*:justify-self-start",
        reverse: ["lg:*:last:not-first:col-start-1 lg:*:first:-col-start-2"],
      },
    },
    defaultVariants: {
      align: "start",
      order: "default",
    },
  }
)

const { class: className, align, order, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <div
      class={cn(variants({ align, order }), className)}
      data-slot="section-split"
      {...props}
    >
      <Fragment set:html={slot} />
    </div>
  )
}
