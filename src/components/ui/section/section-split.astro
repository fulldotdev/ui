---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props extends HTMLAttributes<"div">, VariantProps<typeof variants> {}

const variants = cva(
  "grid w-full auto-cols-fr gap-16 items-start lg:grid-flow-col lg:grid-cols-2 h-full",
  {
    variants: {
      align: {
        start: "items-start",
        center: "items-center",
        end: "items-end",
      },
      order: {
        default: "",
        reverse: "lg:*:last:not-first:col-start-1 lg:*:first:-col-start-2",
      },
    },
    defaultVariants: {
      align: "start",
      order: "default",
    },
  }
)

const { class: className, align, order, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <div class={cn(variants({ align, order }), className)} {...props}>
      <Fragment set:html={slot} />
    </div>
  )
}
