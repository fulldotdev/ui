---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props extends HTMLAttributes<"div">, VariantProps<typeof variants> {}

const variants = cva(
  [
    "grid size-full gap-16 *:w-full @5xl:auto-cols-fr @5xl:grid-flow-col @5xl:grid-cols-2",
  ],
  {
    variants: {
      align: {
        start: "items-start",
        center: "items-center",
        end: "items-end",
        sticky:
          "items-start lg:*:sticky lg:*:top-[calc(var(--section-py)+var(--header-height,0px))]",
      },
      order: {
        default: "",
        reverse: [
          "@5xl:*:first:-col-start-2 @5xl:*:last:not-first:col-start-1",
        ],
      },
    },
    defaultVariants: {
      align: "start",
      order: "default",
    },
  }
)

const { class: className, align, order, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <div
      class={cn(variants({ align, order }), className)}
      data-slot="section-split"
      {...props}
    >
      <Fragment set:html={slot} />
    </div>
  )
}
