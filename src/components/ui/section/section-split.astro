---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props extends HTMLAttributes<"div">, VariantProps<typeof variants> {}

const variants = cva(["grid size-full gap-16 *:w-full @max-5xl:grid-cols-1"], {
  variants: {
    align: {
      start: "items-start",
      center: "items-center",
      end: "items-end",
      sticky:
        "items-start lg:*:sticky lg:*:top-[calc(var(--section-py)+var(--header-height,0px))]",
    },
    order: {
      default: "",
      reverse: ["@5xl:*:first:-col-start-2 @5xl:*:last:not-first:col-start-1"],
    },
    ratio: {
      "2/3": "@5xl:grid-cols-[2fr_3fr]",
      default: "@5xl:grid-cols-2",
      "3/2": "@5xl:grid-cols-[3fr_2fr]",
    },
  },
  defaultVariants: {
    align: "start",
    order: "default",
    ratio: "default",
  },
})

const { class: className, align, order, ratio, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot?.trim().length > 0 && (
    <div
      class={cn(variants({ align, order, ratio }), className)}
      data-slot="section-split"
      {...props}
    >
      <Fragment set:html={slot} />
    </div>
  )
}
