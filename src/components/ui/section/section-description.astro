---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

const variants = cva("text-foreground leading-[1.8]", {
  variants: {
    size: {
      sm: "text-sm",
      default: "text-base",
      lg: "text-lg",
    },
  },
  defaultVariants: {
    size: "default",
  },
})

interface Props extends HTMLAttributes<"p">, VariantProps<typeof variants> {}

const { class: className, size, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot?.trim().length > 0 && (
    <p class={cn(variants({ size }), className)} {...props}>
      <Fragment set:html={slot} />
    </p>
  )
}
