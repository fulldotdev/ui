---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props extends HTMLAttributes<"div">, VariantProps<typeof variants> {}

const variants = cva(
  "flex flex-col gap-8 w-full lg:flex-row items-start lg:justify-between",
  {
    variants: {
      align: {
        start: "lg:items-start",
        center: "lg:items-center",
        end: "lg:items-end",
      },
    },
    defaultVariants: {
      align: "start",
    },
  }
)

const { class: className, align, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <div class={cn(variants({ align }), className)} {...props}>
      <Fragment set:html={slot} />
    </div>
  )
}
