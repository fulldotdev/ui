---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props extends HTMLAttributes<"div">, VariantProps<typeof variants> {}

const variants = cva("w-full gap-6 space-y-6 *:break-inside-avoid", {
  variants: {
    size: {
      sm: "columns-3xs",
      default: "columns-2xs",
      lg: "columns-xs",
    },
  },
  defaultVariants: {
    size: "default",
  },
})

const { class: className, size, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot?.trim().length > 0 && (
    <div class={cn(variants({ size }), className)} {...props}>
      <Fragment set:html={slot} />
    </div>
  )
}
