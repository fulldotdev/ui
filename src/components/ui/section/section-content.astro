---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props extends HTMLAttributes<"div">, VariantProps<typeof variants> {}

const variants = cva(
  [
    "flex flex-col gap-16 w-full py-16 mx-auto max-w-screen-xl",
    "px-[calc(24px-var(--section-gutter))] md:px-6 xl:px-16",
  ],
  {
    variants: {
      align: {
        start: "items-start",
        center: "items-center",
        end: "items-end",
      },
      order: {
        default: "",
        reverse: "flex-col-reverse",
      },
    },
    defaultVariants: {
      align: "start",
      order: "default",
    },
  }
)

const { class: className, align, order, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <div
      data-slot="section-content"
      class={cn(variants({ align, order }), className)}
      {...props}
    >
      <Fragment set:html={slot} />
    </div>
  )
}
