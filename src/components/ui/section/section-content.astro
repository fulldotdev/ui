---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props extends HTMLAttributes<"div">, VariantProps<typeof variants> {}

const variants = cva(["relative flex flex-col gap-y-8"], {
  variants: {
    order: {
      default: "",
      reverse: "flex-col-reverse",
    },
    align: {
      start: "items-start",
      center: "items-center",
      end: "items-end",
    },
  },
  defaultVariants: {
    order: "default",
  },
})

const { class: className, align, order, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <div
      class={cn(variants({ order, align }), className)}
      data-slot="section-content"
      {...props}
    >
      <Fragment set:html={slot} />
    </div>
  )
}
