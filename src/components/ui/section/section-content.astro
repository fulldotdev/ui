---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props extends HTMLAttributes<"div">, VariantProps<typeof variants> {}

const variants = cva(
  [
    "flex flex-col gap-16 w-full mx-auto max-w-screen-xl h-full",
    "px-(--section-gutter) py-(--section-spacer)",
  ],
  {
    variants: {
      align: {
        start: "items-start",
        center: "items-center",
        end: "items-end",
      },
    },
    defaultVariants: {
      align: "start",
    },
  }
)

const { class: className, align, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <div
      data-slot="section-content"
      class={cn(variants({ align }), className)}
      {...props}
    >
      <Fragment set:html={slot} />
    </div>
  )
}
