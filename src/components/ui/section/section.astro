---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props
  extends HTMLAttributes<"section">,
    VariantProps<typeof variants> {}

const variants = cva("relative flex flex-col mx-auto", {
  variants: {
    variant: {
      default: "bg-transparent",
      outline: "border",
      muted: "bg-muted/50",
    },
    frame: {
      default: "w-full max-w-none border-x-0 border-t-0",
      float: [
        "rounded-xl my-16 overflow-hidden max-w-[calc(1280px-128px)]",
        "w-[calc(100%-16px)] md:w-[calc(100%-48px)] xl:w-[calc(100%-128px)]",
      ],
      inset: [
        "rounded-xl my-16 overflow-hidden max-w-screen-xl",
        "w-[calc(100%-16px)] md:w-[calc(100%-48px)] xl:w-[calc(100%-128px)]",
      ],
    },
    align: {
      start: "items-start",
      center: "items-center",
      end: "items-end",
    },
    order: {
      default: "",
      reverse: "flex-col-reverse",
    },
  },
  defaultVariants: {
    frame: "default",
    variant: "default",
    align: "start",
    order: "default",
  },
})

const { class: className, frame, variant, align, order, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <section
      class={cn(variants({ frame, variant, align, order }), className)}
      {...props}
      data-slot="section"
      data-frame={frame}
    >
      <Fragment set:html={slot} />
    </section>
  )
}

<style is:global>
  [data-slot="section"][data-frame="float"] {
    --section-gutter: 16px;
  }

  [data-slot="section"] {
    --section-gutter: 24px;
    --section-spacer: 64px;
  }

  @media (min-width: 1280px) {
    [data-slot="section"] {
      --section-gutter: 64px;
    }
  }
</style>
