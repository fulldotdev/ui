---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props
  extends HTMLAttributes<"section">,
    VariantProps<typeof variants> {}

const variants = cva("relative flex flex-col mx-auto", {
  variants: {
    variant: {
      default: "w-full max-w-none",
      float: [
        "bg-card border rounded-xl my-16 overflow-hidden max-w-screen-xl",
        "w-[calc(100%-16px)] md:w-[calc(100%-48px)] xl:w-[calc(100%-128px)]",
      ],
    },
    align: {
      start: "items-start",
      center: "items-center",
      end: "items-end",
    },
    order: {
      default: "",
      reverse: "flex-col-reverse",
    },
  },
  defaultVariants: {
    variant: "default",
    align: "start",
    order: "default",
  },
})

const { class: className, variant, align, order, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <section
      class={cn(variants({ variant, align, order }), className)}
      {...props}
      style={{
        "--section-gutter": variant === "float" ? "8px" : "0px",
      }}
    >
      <Fragment set:html={slot} />
    </section>
  )
}
