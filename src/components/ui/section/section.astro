---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props
  extends HTMLAttributes<"section">,
    VariantProps<typeof variants> {}

const variants = cva(
  [
    "relative flex flex-col mx-auto gap-16 px-(--section-px) py-(--section-py) scroll-m-(--section-py)",
  ],
  {
    variants: {
      variant: {
        // Filled on every screen, with content width based on padding
        default: ["w-full max-w-none"],
        // Filled on small and medium screens, contained on large screens
        contain: [
          "w-full max-w-[calc(var(--section-width)+2*var(--section-px))] overflow-hidden",
        ],
        // Filled on every screen, with content width based on padding, and a gutter around for floating effect
        floating: [
          "w-[calc(100%-16px)]",
          "ring ring-inset ring-border bg-muted rounded-lg my-2 overflow-hidden",
        ],
        // Contained on every screen, with a border, padding and rounded corners for panel effect
        panel: [
          "w-[calc(100%-16px)] sm:w-[calc(100%-2*var(--section-px))]",
          "max-w-[calc(var(--section-width)+2*var(--section-px))]",
          "ring ring-inset ring-border bg-muted rounded-lg my-(--section-py) overflow-hidden",
        ],
        // Contained on every screen, with a border and padding for box effect
        box: [
          "w-[calc(100%-16px)] sm:w-[calc(100%-48px)]",
          "max-w-[calc(var(--section-width)+2*var(--section-px))]",
          "ring ring-inset ring-border -mt-px overflow-hidden",
        ],
      },
      width: {
        sm: "",
        xl: "",
        "2xl": "",
      },
    },
    defaultVariants: {
      variant: "default",
      width: "xl",
    },
  }
)

const { class: className, variant, width, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <section
      class={cn(variants({ variant }), className)}
      data-slot="section"
      data-variant={variant}
      data-width={width}
      {...props}
    >
      <Fragment set:html={slot} />
    </section>
  )
}

<style is:global>
  [data-slot="section"] {
    --section-width: var(--breakpoint-xl);
    --section-py: 48px;
    --section-px: max(24px, calc((100cqw - var(--section-width)) / 2));
  }

  [data-slot="section"][data-width="sm"] {
    --section-width: var(--breakpoint-sm);
  }

  [data-slot="section"][data-width="2xl"] {
    --section-width: var(--breakpoint-2xl);
  }

  [data-slot="section"][data-variant="contain"] {
    --section-px: 24px;
  }

  [data-slot="section"][data-variant="box"],
  [data-slot="section"][data-variant="floating"],
  [data-slot="section"][data-variant="panel"] {
    --section-px: 16px;
  }

  @media (min-width: 640px) {
    [data-slot="section"][data-variant="box"],
    [data-slot="section"][data-variant="floating"],
    [data-slot="section"][data-variant="panel"] {
      --section-px: 24px;
    }
  }

  @media (min-width: 1280px) {
    [data-slot="section"] {
      --section-py: 64px;
    }

    [data-slot="section"][data-variant="contain"],
    [data-slot="section"][data-variant="box"],
    [data-slot="section"][data-variant="panel"] {
      --section-px: 48px;
    }

    [data-slot="section"][data-variant="floating"] {
      --section-px: calc((100cqw - var(--section-width)) / 2 - 8px);
    }
  }
</style>
