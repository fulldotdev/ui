---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props extends HTMLAttributes<"div">, VariantProps<typeof variants> {}

const variants = cva("relative *:size-full *:object-cover", {
  variants: {
    variant: {
      default: "*:rounded-lg",
      background: [
        "absolute inset-0 opacity-50 size-full *:size-full *:object-cover *:object-center",
      ],
      inset: [
        "-mx-[var(--section-gutter)] w-[calc(100%+var(--section-gutter)*2)]",
        "-my-[var(--section-spacer)] h-[calc(100%+var(--section-spacer)*2)]",
      ],
      "inset-x": [
        "-mx-[var(--section-gutter)] w-[calc(100%+var(--section-gutter)*2)]",
      ],
      "inset-y": [
        "-my-[var(--section-spacer)] h-[calc(100%+var(--section-spacer)*2)]",
      ],
      "inset-top": [
        "-mx-[var(--section-gutter)] w-[calc(100%+var(--section-gutter)*2)]",
        "-mt-[var(--section-spacer)] h-[calc(100%+var(--section-spacer))]",
      ],
      "inset-bottom": [
        "-mx-[var(--section-gutter)] w-[calc(100%+var(--section-gutter)*2)]",
        "-mb-[var(--section-spacer)] h-[calc(100%+var(--section-spacer))]",
      ],
      "inset-left": [
        "-ml-[var(--section-gutter)] w-[calc(100%+var(--section-gutter)*2)]",
      ],
      "inset-right": [
        "-mr-[var(--section-gutter)] w-[calc(100%+var(--section-gutter)*2)]",
      ],
    },
  },
  defaultVariants: {
    variant: "default",
  },
})

const { class: className, variant, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <div
      data-slot="section-media"
      class={cn(variants({ variant }), className)}
      {...props}
    >
      <Fragment set:html={slot} />
    </div>
  )
}
