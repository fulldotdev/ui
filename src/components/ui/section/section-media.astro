---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props extends HTMLAttributes<"div">, VariantProps<typeof variants> {}

const variants = cva(
  [
    "relative size-full overflow-hidden *:size-full *:object-cover max-h-[60vh] flex items-center justify-center",
  ],
  {
    variants: {
      variant: {
        default: "*:rounded-lg",
        background: "absolute inset-0 size-full opacity-25",
        inset: [
          "first:-mt-(--section-py) last:-mb-(--section-py) -mx-(--section-px) w-[calc(100%+2*var(--section-px))]",
          // split
          "lg:[&:is([data-slot=section-split]>&)]:-my-(--section-py) lg:[&:is([data-slot=section-split]>&)]:h-[calc(100%+2*var(--section-px))]", // y
          "lg:[&:is([data-slot=section-split]>&)]:mx-0 lg:[&:is([data-slot=section-split]>&)]:w-[calc(100%+1*var(--section-px))]", // x
          "lg:[&:is([data-slot=section-split]>&)]:first:-ml-(--section-px)", // left
          "lg:[&:is([data-slot=section-split]>&)]:last:-mr-(--section-px)", // right
        ],
      },
    },
    defaultVariants: {
      variant: "default",
    },
  }
)

const { class: className, variant, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <div
      data-slot="section-media"
      data-variant={variant}
      class={cn(variants({ variant }), className)}
      {...props}
    >
      <Fragment set:html={slot} />
    </div>
  )
}

<style lang="scss" is:global>
  [data-slot="section-media"][data-variant="inset"] {
    --ml: var(--section-px);
    --mr: var(--section-px);
    --mt: 0px;
    --mb: 0px;

    &:first-child {
      --mt: var(--section-py);
    }

    &:last-child {
      --mb: var(--section-py);
    }

    :is([data-order="reverse"] > &) {
      --ml: var(--section-px);
      --mr: var(--section-px);
      --mt: 0px;
      --mb: 0px;

      &:first-child {
        --mb: var(--section-py);
      }

      &:last-child {
        --mt: var(--section-py);
      }
    }

    @media (min-width: 1024px) {
      &:is([data-slot="section-split"] > &) {
        --mt: 0px;
        --mb: 0px;
        --mt: var(--section-py);
        --mb: var(--section-py);

        &:first-child {
          --ml: var(--section-px);
        }

        &:last-child {
          --mr: var(--section-px);
        }

        &:is([data-order="reverse"] > &) {
          --ml: var(--section-px);
          --mr: var(--section-px);
          --mt: 0px;
          --mb: 0px;

          &:first-child {
            --mr: var(--section-px);
          }

          &:last-child {
            --ml: var(--section-px);
          }
        }
      }
    }
  }
</style>
