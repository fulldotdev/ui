---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props extends HTMLAttributes<"div">, VariantProps<typeof variants> {}

const variants = cva(
  [
    "flex flex-col size-full",
    "gap-y-(--section-spacer)",
    // If SectionMedia is inset, add extra spacer
    "has-[>[data-slot=section-media][data-variant=inset]]:gap-y-[calc(2*var(--section-spacer))]",
  ],
  {
    variants: {
      align: {
        start: "items-start",
        center: "items-center",
        end: "items-end",
      },
      order: {
        default: "",
        reverse: "lg:*:last:not-first:col-start-1 lg:*:first:-col-start-2",
      },
    },
    defaultVariants: {
      align: "start",
      order: "default",
    },
  }
)

const { class: className, align, order, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <div class={cn(variants({ align, order }), className)} {...props}>
      <Fragment set:html={slot} />
    </div>
  )
}
