---
import { cn } from "@/lib/utils"

interface Props {
  class?: string
  id?: string
}

const { class: className, id, ...props } = Astro.props
const slot = await Astro.slots.render("default")
const hasSlot = slot.trim().length > 0
---

{
  hasSlot && (
    <header
      class={cn(
        "bg-background relative top-0 right-0 left-0 z-50 flex w-full items-center py-3",
        className
      )}
      id={id}
      {...props}
    >
      <Fragment set:html={slot} />
    </header>
  )
}
