---
import { cn } from "@/lib/utils"
import Social from "@/components/ui/social.astro"

interface Props {
  class?: string
  href?: string
  [key: string]: any
}

const { class: className, href, ...props } = Astro.props as Props
---

<Social
  class={cn("absolute right-4 bottom-4", className)}
  size="icon"
  href={href}
  variant="ghost"
  target="_blank"
  {...props}
/>
