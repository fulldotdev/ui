---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

type Props = VariantProps<typeof variants> &
  HTMLAttributes<"div"> &
  HTMLAttributes<"a">

const variants = cva(
  [
    "group/tile [a]:hover:bg-accent/50 focus-visible:border-ring focus-visible:ring-ring/50 relative flex flex-col items-start gap-6 rounded-md duration-100 outline-none focus-visible:ring-[3px] [a]:transition-all",
    // If SectionMedia is inset, add extra spacer
    "has-[>[data-slot=tile-media][data-position=inset]]:gap-y-[48px]",
  ],
  {
    variants: {
      frame: {
        default: "-m-3 bg-transparent p-3",
        panel: "bg-muted/50 overflow-hidden border p-6",
      },
      variant: {
        default: "",
        outline: "border-border",
        muted: "bg-muted/50 border-transparent",
        accent: "bg-accent/50 border-transparent",
      },
    },
    defaultVariants: {
      frame: "default",
      variant: "default",
    },
  }
)

const { class: className, variant, frame, href, ...props } = Astro.props

const slot = await Astro.slots.render("default")

const Comp = href ? "a" : "div"
---

{
  slot?.trim().length > 0 && (
    <Comp
      data-slot="tile"
      data-variant={variant}
      class={cn(variants({ variant, frame }), className)}
      href={href}
      {...props}
    >
      <Fragment set:html={slot} />
    </Comp>
  )
}
