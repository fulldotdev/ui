---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

type Props = VariantProps<typeof variants> &
  HTMLAttributes<"div"> &
  HTMLAttributes<"a">

const variants = cva(
  [
    "group/tile [a]:hover:bg-accent/50 focus-visible:border-ring focus-visible:ring-ring/50 relative flex flex-col items-start gap-6 overflow-hidden rounded-md duration-100 outline-none focus-visible:ring-[3px] [a]:transition-all",
    // If SectionMedia is inset, add extra spacer
    "has-[>[data-slot=tile-media][data-position=inset]]:gap-y-[48px]",
  ],
  {
    variants: {
      variant: {
        default:
          "[a]:hover:ring-accent/50 bg-transparent [a]:hover:ring-8 sm:[a]:hover:ring-12",
        outline: "border-border p-4 sm:p-6",
        muted: "bg-muted/50 p-4 sm:p-6",
        accent: "bg-accent/50 p-4 sm:p-6",
      },
      frame: {
        default: "-m-3 p-3",
        float: ["max-w-[calc(var(--section-width)-2*var(--section-gutter))]"],
        inset: null,
      },
    },
    defaultVariants: {
      variant: "default",
      // frame: "default",
    },
  }
)

const { class: className, variant, frame, href, ...props } = Astro.props

const slot = await Astro.slots.render("default")

const Comp = href ? "a" : "div"
---

{
  slot.trim().length > 0 && (
    <Comp
      data-slot="tile"
      data-variant={variant}
      class={cn(variants({ variant, frame }), className)}
      href={href}
      {...props}
    >
      <Fragment set:html={slot} />
    </Comp>
  )
}
