---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

type Props = VariantProps<typeof variants> &
  HTMLAttributes<"div"> &
  HTMLAttributes<"a">

const variants = cva(
  [
    "group/tile focus-visible:border-ring focus-visible:ring-ring/50 relative flex flex-col items-start gap-6 outline-none focus-visible:ring-[3px] [a]:transition-all",
  ],
  {
    variants: {
      frame: {
        default: "bg-transparent",
        panel:
          "bg-card text-card-foreground [a]:hover:bg-accent/50 overflow-hidden rounded-md border p-6 duration-100",
      },
      variant: {
        default: "",
        outline: "border-border border bg-transparent",
        muted: "bg-muted/50 border-0",
      },
    },
    defaultVariants: {
      frame: "default",
      variant: "default",
    },
  }
)

const { class: className, variant, frame, href, ...props } = Astro.props

const slot = await Astro.slots.render("default")

const Comp = href ? "a" : "div"
---

{
  slot?.trim().length > 0 && (
    <Comp
      data-slot="tile"
      data-variant={variant}
      data-frame={frame}
      class={cn(variants({ variant, frame }), className)}
      href={href}
      {...props}
    >
      <Fragment set:html={slot} />
    </Comp>
  )
}

<style is:global>
  [data-slot="tile"] {
    --tile-padding: 0px;
  }

  [data-slot="tile"][data-frame="panel"] {
    --tile-padding: 24px;
  }
</style>
