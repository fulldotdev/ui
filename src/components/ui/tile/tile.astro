---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

type Props = VariantProps<typeof variants> &
  HTMLAttributes<"div"> &
  HTMLAttributes<"a">

const variants = cva(
  [
    "group/tile relative overflow-hidden items-start flex flex-col gap-6 rounded-md transition-colors [a]:hover:bg-accent/50 [a]:transition-colors duration-100 outline-none focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px]",
    // If SectionMedia is inset, add extra spacer
    "has-[>[data-slot=tile-media][data-position=inset]]:gap-y-[48px]",
  ],
  {
    variants: {
      variant: {
        default: "bg-transparent p-2 -m-2 sm:p-3 sm:-m-3",
        outline: "border-border p-4 sm:p-6",
        muted: "bg-muted/50 p-4 sm:p-6",
        accent: "bg-accent/50 p-4 sm:p-6",
      },
      frame: {
        default: "p-3 -m-3",
        float: ["max-w-[calc(var(--section-width)-2*var(--section-gutter))]"],
        inset: null,
      },
    },
    defaultVariants: {
      variant: "default",
      // frame: "default",
    },
  }
)

const { class: className, variant, frame, href, ...props } = Astro.props

const slot = await Astro.slots.render("default")

const Comp = href ? "a" : "div"
---

{
  slot.trim().length > 0 && (
    <Comp
      data-slot="tile"
      data-variant={variant}
      class={cn(variants({ variant, frame }), className)}
      href={href}
      {...props}
    >
      <Fragment set:html={slot} />
    </Comp>
  )
}
