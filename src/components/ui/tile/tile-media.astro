---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

const variants = cva(
  [
    "flex shrink-0 items-center justify-center gap-2 group-has-[[data-slot=tile-description]]/tile:self-start [&_svg]:pointer-events-none group-has-[[data-slot=tile-description]]/tile:translate-y-0.5",
    "[&:is(a:hover>&)]:opacity-75 transition-opacity duration-100",
    "relative size-full overflow-hidden *:size-full *:object-cover",
  ],
  {
    variants: {
      position: {
        default: "*:rounded-md",
        background: "absolute inset-0 size-full *:opacity-25",
        inset: [
          "-mx-6 -mt-6 w-[calc(100%+48px)]",
          "[a:has(&)]:overflow-hidden",
          "[div:has(&)]:overflow-hidden",
        ],
      },
    },
    defaultVariants: {
      position: "default",
    },
  }
)

interface Props extends HTMLAttributes<"div">, VariantProps<typeof variants> {}

const { class: className, position, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <div
      data-slot="tile-media"
      class={cn(variants({ position }), className)}
      {...props}
    >
      <Fragment set:html={slot} />
    </div>
  )
}
