---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props extends HTMLAttributes<"p">, VariantProps<typeof variants> {}

const variants = cva("text-muted-foreground text-sm", {
  variants: {
    align: {
      start: "text-start",
      center: "text-center",
      end: "text-end",
    },
  },
  defaultVariants: {
    align: "start",
  },
})

const { class: className, align, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <p class={cn(variants({ align }), className)} {...props}>
      <Fragment set:html={slot} />
    </p>
  )
}
