---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

const variants = cva("flex flex-col gap-2 sm:flex-row", {
  variants: {
    align: {
      start: "max-sm:items-start sm:justify-start",
      center: "max-sm:items-center sm:justify-center",
      end: "max-sm:items-end sm:justify-end",
    },
  },
})

interface Props extends HTMLAttributes<"div">, VariantProps<typeof variants> {}

const { class: className, align, ...props } = Astro.props

const slot = await Astro.slots.render("default")
const hasSlot = slot?.trim().length > 0
---

{
  hasSlot && (
    <div class={cn(variants({ align }), className)} {...props}>
      <Fragment set:html={slot} />
    </div>
  )
}
