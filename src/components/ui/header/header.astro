---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props
  extends HTMLAttributes<"header">,
    VariantProps<typeof variants> {}

const variants = cva(
  [
    "relative sticky top-0 z-50 mx-auto flex h-(--header-height) items-center justify-between gap-8 border-b border-transparent py-4",
  ],
  {
    variants: {
      frame: {
        // Filled on every screen, with content width based on padding
        default: [
          "bg-background w-full px-[max(24px,calc((100cqw-var(--header-width))/2))]",
        ],
        // Contained on every screen, with a border and padding for box effect
        box: [
          "w-[calc(100%-16px)] max-w-(--header-width) px-4 lg:w-[calc(100%-48px)]",
          "overflow-hidden",
          "bg-muted border-b",
        ],
        // Contained on every screen, with a border, padding and rounded corners for panel effect
        panel: [
          "w-[calc(100%-16px)] max-w-(--header-width) px-4 lg:w-[calc(100%-48px)]",
          "top-2 mt-2 h-[calc(var(--header-height)-8px)] overflow-hidden rounded-xl",
          "bg-muted border-border border",
        ],
      },
      variant: {
        default: "",
        muted: "bg-muted border-transparent",
        outline: "border-border",
      },
    },
    defaultVariants: {
      frame: "default",
      variant: "default",
    },
  }
)

const { class: className, frame, variant, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot?.trim().length > 0 && (
    <header
      class={cn(variants({ frame, variant }), className)}
      data-slot="header"
      data-frame={frame}
      {...props}
    >
      <Fragment set:html={slot} />
    </header>
  )
}

<style is:global>
  [data-slot="header"] {
    --header-width: var(--container, 9999px);
  }

  :root:has([data-slot="header"]) {
    --header-height: 64px;
  }
</style>
