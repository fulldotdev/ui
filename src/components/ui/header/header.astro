---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props
  extends HTMLAttributes<"header">,
    VariantProps<typeof variants> {}

const variants = cva(
  "relative flex mx-auto gap-8 justify-between h-15 top-0 z-50 items-center sticky px-(--header-px)",
  {
    variants: {
      variant: {
        // Filled on every screen, with content width based on padding
        default: ["w-full max-w-[2560px] bg-background"],
        // Filled on every screen, with content width based on padding, and a gutter around for floating effect
        floating: [
          "w-[calc(100%-16px)] max-w-[2560px]",
          "ring ring-inset ring-border bg-muted rounded-xl my-2 top-2 overflow-hidden",
        ],
        // Contained on every screen, with a border, padding and rounded corners for panel effect
        panel: [
          "w-[calc(100%-16px)] lg:w-[calc(100%-2*var(--header-px))] max-w-(--header-width)",
          "ring ring-inset ring-border bg-muted rounded-xl my-2 top-2 overflow-hidden",
        ],
        // Contained on every screen, with a border and padding for box effect
        box: [
          "w-[calc(100%-16px)] lg:w-[calc(100%-2*var(--header-px))] max-w-(--header-width)",
          "ring ring-inset ring-border -mt-px overflow-hidden bg-background",
        ],
      },
      width: {
        sm: "",
        xl: "",
        "2xl": "",
      },
    },
    defaultVariants: {
      variant: "default",
      width: "xl",
    },
  }
)

const { class: className, variant, width, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <header
      class={cn(variants({ variant, width }), className)}
      data-slot="header"
      data-width={width}
      data-variant={variant}
      {...props}
    >
      <Fragment set:html={slot} />
    </header>
  )
}

<style is:global>
  /* Global variable for sticky and 100vh calculations */
  :root:has([data-slot="header"]) {
    --header-height: 60px;
  }
  :root:has(
    [data-slot="header"][data-variant="box"],
    [data-slot="header"][data-variant="floating"],
    [data-slot="header"][data-variant="panel"]
  ) {
    --header-height: 76px;
  }

  /* Header width and padding vor inset calculations */
  [data-slot="header"] {
    --header-width: var(--breakpoint-xl);
    --header-px: 24px;
  }

  [data-slot="header"][data-width="sm"] {
    --header-width: var(--breakpoint-sm);
  }

  [data-slot="header"][data-width="2xl"] {
    --header-width: var(--breakpoint-2xl);
  }

  [data-slot="header"][data-variant="box"],
  [data-slot="header"][data-variant="floating"],
  [data-slot="header"][data-variant="panel"] {
    --header-px: 16px;
  }

  @media (min-width: 1024px) {
    [data-slot="header"] {
      --header-px: min(
        max(48px, calc((100cqw - var(--header-width)) / 2)),
        calc((2560px - var(--header-width)) / 2)
      );
    }

    [data-slot="header"][data-variant="floating"] {
      --header-px: min(
        max(48px, calc((100cqw - 16px - var(--header-width)) / 2)),
        calc((2560px - var(--header-width)) / 2)
      );
    }
  }
</style>
