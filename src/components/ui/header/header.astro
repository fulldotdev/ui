---
import type { HTMLAttributes } from "astro/types"
import { cva, type VariantProps } from "class-variance-authority"

import { cn } from "@/lib/utils"

interface Props
  extends HTMLAttributes<"header">,
    VariantProps<typeof variants> {}

const variants = cva("relative flex mx-auto", {
  variants: {
    frame: {
      default: "w-full max-w-none",
      float: [
        "bg-card border rounded-xl my-3 overflow-hidden max-w-screen-xl",
        "w-[calc(100%-16px)] md:w-[calc(100%-48px)] xl:w-[calc(100%-128px)]",
      ],
    },
    variant: {
      default: "bg-transparent",
      outline: "border-border",
      muted: "bg-muted/50",
    },
    align: {
      start: "items-start",
      center: "items-center",
      end: "items-end",
    },
  },
  defaultVariants: {
    frame: "default",
    variant: "default",
    align: "start",
  },
})

const { class: className, frame, variant, align, ...props } = Astro.props

const slot = await Astro.slots.render("default")
---

{
  slot.trim().length > 0 && (
    <header
      class={cn(variants({ frame, variant, align }), className)}
      {...props}
      style={{
        "--header-gutter": frame === "float" ? "8px" : "0px",
      }}
    >
      <Fragment set:html={slot} />
    </header>
  )
}
