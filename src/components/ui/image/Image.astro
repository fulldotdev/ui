---
import { Image as AstroImage } from "astro:assets"
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"

type Props = Partial<ComponentProps<typeof AstroImage>>

const {
  class: className,
  alt = "",
  height = 1920,
  width = 1920,
  sizes = "100vw",
  src,
  ...props
} = Astro.props

const images = import.meta.glob("src/assets/**/*.{webp,png,jpg,jpeg,gif,svg}")
const foundPath =
  typeof src === "string" &&
  Object.keys(images).find((key) => key.endsWith(src))
const found = foundPath ? images[foundPath]() : undefined
---

{
  src && (
    <AstroImage
      class={cn("h-auto w-full", className)}
      src={found || src}
      alt={alt}
      height={height}
      width={width}
      sizes={sizes}
      {...(props as any)}
    />
  )
}
