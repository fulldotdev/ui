---
import { Image as AstroImage } from "astro:assets"
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"

type Props = Partial<ComponentProps<typeof AstroImage>>

const {
  class: className,
  alt = "",
  height = 1920,
  width = 1920,
  sizes = "100vw",
  ...props
} = Astro.props
---

{
  props.src && (
    <AstroImage
      class={cn("h-auto w-full", className)}
      alt={alt}
      height={height}
      width={width}
      sizes={sizes}
      {...(props as any)}
    />
  )
}
