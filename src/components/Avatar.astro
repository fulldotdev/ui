---
import type { ComponentProps } from 'astro/types'
import Image from 'fulldev-ui/components/Image.astro'

type Props = Omit<ComponentProps<typeof Image>, 'position'>

const { ...rest } = Astro.props
---

<Image
  class:list={'avatar'}
  {...rest}
/>

<style is:global lang="scss">
  @layer fulldev {
    .avatar {
      display: block;
      border: 1px solid var(--base-a6);
      border-radius: 999px;
      width: calc(2.8 * var(--space-4));
      height: calc(2.8 * var(--space-4));
      object-fit: cover;
    }
  }
</style>
