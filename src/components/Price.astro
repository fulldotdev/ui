---
import type { HTMLAttributes } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'
import type { GlobalProps } from 'fulldev-ui/types/global-props'
import { formatPrice } from 'fulldev-ui/utils/cart'

interface Props extends GlobalProps, HTMLAttributes<'div'> {
  size?: 'sm' | 'md' | 'lg' | undefined
  color?: 'base' | 'brand' | undefined
  contrast?: boolean | undefined
  value?: number | undefined
}

const { value, ...rest } = Astro.props
---

<Element
  class:list="price"
  {...rest}
>
  {value && <Fragment set:html={formatPrice(value)} />}
</Element>

<style is:global >
  @layer fulldev {
    .price {
      margin: 0;
      max-width: calc(var(--space-4) * 44);
      color: var(--color-12);
      font-size: var(--text-5);
      line-height: 1.25;
    }
  }
</style>
