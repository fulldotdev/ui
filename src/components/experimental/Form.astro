---
import type { HTMLAttributes } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'
import type { GlobalProps } from 'fulldev-ui/types/global-props'

interface Props extends GlobalProps, HTMLAttributes<'form'> {
  structure?: 'column' | 'row' | 'group' | undefined
}

const { structure = 'column', ...rest } = Astro.props
---

<Element
  class:list={`form ${structure}`}
  as="form"
  {...rest}
>
  <slot />
</Element>

<style is:global lang="scss">
  .form {
    display: flex;
    width: 100%;
    max-width: calc(var(--space-4) * 44);
  }
</style>
