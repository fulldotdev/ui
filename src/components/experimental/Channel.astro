---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Button from 'fulldev-ui/components/Button.astro'
import Column from 'fulldev-ui/components/Column.astro'
import Heading from 'fulldev-ui/components/Heading.astro'
import Text from 'fulldev-ui/components/Text.astro'
import Root from '../Root.astro'

type Props<As extends HTMLTag = 'div'> = Polymorphic<{ as: As }> & {
  size?: 'sm' | 'md' | 'lg' | undefined
  color?: 'base' | 'brand' | undefined
  variant?: 'primary' | 'secondary' | 'tertiary' | undefined
  structure?: 'row' | 'column' | undefined
  align?: 'start' | 'center' | 'end' | undefined
  heading?: string | undefined
  text?: string | undefined
  icon?: string | undefined
  href?: string | undefined
  target?: string | undefined
}

const {
  variant = 'secondary',
  structure = 'row',
  color = 'brand',
  align = 'start',
  target = '_blank',
  heading,
  text,
  icon,
  href,
  ...rest
} = Astro.props
---

<Root
  class:list={'channel'}
  {structure}
  align={structure === 'row' ? 'start' : align}
  {...rest}
>
  <Button
    {target}
    {variant}
    {color}
    {href}
    {icon}
  />
  <Column
    space="none"
    align={structure === 'row' ? 'start' : align}
  >
    <Heading
      level={6}
      html={heading}
    />
    <Text html={text} />
  </Column>
</Root>

<style>
  .channel {
    gap: var(--space-4);

    .column {
      gap: var(--space-1);
    }
  }
</style>
