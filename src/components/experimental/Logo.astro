---
import Image from 'fulldev-ui/components/Image.astro'
import Heading from '../Heading.astro'
import Root from '../Root.astro'

type Props = {
  logo?: string | undefined
}

const { logo, ...rest } = Astro.props

const isImage = logo?.startsWith('/') || logo?.startsWith('http')
---

<Root
  as="a"
  href="/"
  class:list="logo"
>
  {
    isImage ? (
      <Image {...rest} />
    ) : (
      <Heading
        as="p"
        level={3}
        html={logo}
      />
    )
  }
</Root>

<style is:global lang="scss">
  @layer fulldev {
    .logo {
      display: flex;
      align-items: center;

      img {
        max-width: calc(15 * var(--space-2));
        height: 100%;
        object-fit: contain;
      }
    }
  }
</style>
