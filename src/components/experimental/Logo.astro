---
import type { ComponentProps } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'
import Image from 'fulldev-ui/components/Image.astro'

interface Props extends ComponentProps<typeof Image> {
  company?: string | undefined
}

const { company, ...rest } = Astro.props as Props
---

<Element
  as="a"
  href="/"
  class:list="logo"
>
  {company ? <Fragment set:html={company} /> : <Image {...rest} />}
</Element>

<style is:global lang="scss">
  @layer fulldev {
    .logo {
      display: flex;
      align-items: center;
      color: var(--color-12);
      font-weight: 700;
      font-size: var(--text-6);
      line-height: 1.1;

      .image {
        max-width: calc(15 * var(--space-2));
        height: 100%;
        object-fit: contain;
      }
    }
  }
</style>
