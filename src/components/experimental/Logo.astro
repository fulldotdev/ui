---
import Element from 'fulldev-ui/components/Element.astro'
import Image from 'fulldev-ui/components/Image.astro'

type Props = {
  level?: 1 | 2 | 3 | 4 | 5 | 6
  logo?: string | undefined
}

const { logo, level = 3, ...rest } = Astro.props

const isImage = logo?.startsWith('/') || logo?.startsWith('http')
---

<Element
  as="a"
  href="/"
  class:list="logo"
>
  {isImage ? <Image {...rest} /> : <Fragment set:html={logo} />}
</Element>

<style is:global lang="scss">
  @layer fulldev {
    .logo {
      display: flex;
      align-items: center;
      color: var(--color-12);
      font-weight: 700;
      font-size: var(--text-6);
      line-height: 1.1;

      .image {
        max-width: calc(15 * var(--space-2));
        height: 100%;
        object-fit: contain;
      }
    }
  }
</style>
