---
import type { ComponentProps, HTMLAttributes } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'
import Logo from 'fulldev-ui/components/Logo.astro'
import Menu from 'fulldev-ui/components/Menu.astro'
import Themer from 'fulldev-ui/components/Themer.astro'
import type { GlobalProps } from 'fulldev-ui/types/global-props'
import Heading from './Heading.astro'
import Toc from './Toc.astro'

interface Props extends GlobalProps, HTMLAttributes<'aside'> {
  menu?: ComponentProps<typeof Menu>['groups']
  heading?: ComponentProps<typeof Heading>['text']
  render?: ComponentProps<typeof Toc>['render']
  logo?: ComponentProps<typeof Logo>
  toc?: ComponentProps<typeof Toc>['heading']
  company?: ComponentProps<typeof Logo>['company']
  themer?: boolean | undefined
  size?: 'sm' | 'md' | 'lg' | undefined
}

const {
  size = 'sm',
  logo,
  company,
  render,
  menu,
  toc,
  heading,
  themer,
  ...rest
} = Astro.props
---

<Element
  class:list="sidebar"
  as="aside"
  {size}
  {...rest}
>
  <Element
    class:list="sidebar-header"
    as="header"
  >
    <Logo
      {company}
      {size}
      {...logo}
    />
    <Heading
      level={4}
      text={heading}
    />
    <slot name="header" />
  </Element>
  <Element class:list="sidebar-content">
    <Menu
      groups={menu}
      {size}
    />
    <Themer
      if={themer}
      {size}
    />
    <slot />
  </Element>
</Element>

<style is:global>
  @layer fulldev {
    .sidebar {
      @apply sticky bottom-0 z-10 hidden h-full flex-col items-start justify-start bg-background lg:flex;

      --height: calc(var(--header-height, 0px) + var(--subheader-height, 0px));
      top: var(--height);
      width: var(--sidebar-width);
      max-height: calc(100vh - var(--height));

      &,
      & ~ * {
        --sidebar-width: 13rem;
      }

      .sidebar-header {
        @apply sticky flex h-14 w-full items-center px-gutter py-6;
      }

      .sidebar-content {
        @apply flex w-full flex-1 flex-col items-start gap-7 overflow-y-auto px-gutter pb-14 pt-6 first:pt-14;
        @apply scrollbar scrollbar-track-transparent scrollbar-thumb-accent scrollbar-thumb-rounded-full scrollbar-w-2 hover:scrollbar-thumb-accent-hover;
      }
    }
  }
</style>
