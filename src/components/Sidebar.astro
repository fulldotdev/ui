---
import type { HTMLAttributes } from 'astro/types'
import Box from 'fulldev-ui/components/Box.astro'

interface Props extends HTMLAttributes<'aside'> {}

const { ...rest } = Astro.props
---

<Box
  class:list="sidebar"
  as="aside"
  {...rest}
>
  <slot />
</Box>

<style is:global>
  @layer fulldev {
    .sidebar {
      display: none;
      position: sticky;
      top: var(--header-height);
      flex-shrink: 0;
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-8);
      background-color: var(--color-background);
      /* padding: var(--spacing-8); */
      width: var(--sidebar-width);
      max-width: var(--sidebar-width);
      max-height: calc(100vh - var(--header-height, 0px));
      overflow-y: auto;

      /* TODO: scrollbar styling */
      /* @apply scrollbar scrollbar-track-transparent scrollbar-thumb-accent scrollbar-thumb-rounded-full scrollbar-w-2 hover:scrollbar-thumb-accent-hover; */

      @media (min-width: 1024px) {
        display: flex;
      }

      &,
      & ~ * {
        @media (min-width: 1024px) {
          --sidebar-width: 14rem;
        }
      }
    }
  }
</style>
