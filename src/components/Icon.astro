---
import { Icon as AstroIcon } from 'astro-icon/components'
import type { ComponentProps } from 'astro/types'

interface Props extends ComponentProps<typeof AstroIcon> {
  set?: string
}

const { set = 'tabler', name, ...rest } = Astro.props
---

{
  name && (
    <AstroIcon
      class:list="icon"
      name={`${set}:${name}`}
      {...rest}
    />
  )
}

<style is:global>
  @layer fulldev {
    .icon {
      @apply inline-flex h-5 w-5 text-inherit;

      * {
        stroke-width: 1.7px;
      }
    }
  }
</style>
