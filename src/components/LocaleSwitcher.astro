---
import Select from 'fulldev-ui/components/Select.astro'
---

{
  Astro.props.locales && (
    <Select
      name="locale-switcher"
      options={Astro.props.locales}
      value={Astro.props.lang as string}
      placeholder={Astro.props.lang as string}
    />
  )
}

