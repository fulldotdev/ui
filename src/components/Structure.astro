---
import Box from '@/components/Box.astro'
import type { HTMLAttributes, HTMLTag } from 'astro/types'

interface Props extends HTMLAttributes<'section'> {
  structure?: 'stack' | 'split'
  frame?: 'fill' | 'panel'
  as?: HTMLTag
}

const { as = 'section', class: className, ...rest } = Astro.props
---

<Box
  class:list={['section relative w-full gap-x-8 gap-y-12 py-16', className]}
  {as}
  {...rest}
>
  <slot />
</Box>
