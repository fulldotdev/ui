---
import type { ComponentProps } from 'astro/types'
import Link from 'fulldev-ui/components/Link.astro'

interface Props extends ComponentProps<typeof Link> {
  link?: ComponentProps<typeof Link> | undefined
  links?: ComponentProps<typeof Link>[] | undefined
}

const { variant = 'muted', link, links, ...rest } = Astro.props
---

{
  [link, ...(links || [])].filter(Boolean).map((link) => (
    <Link
      {variant}
      {...rest}
      {...link}
    />
  ))
}
