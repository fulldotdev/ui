---
import type { ComponentProps, HTMLAttributes } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'
import type { GlobalProps } from 'fulldev-ui/types/global-props'
import Link from './Link.astro'

interface Props extends GlobalProps, HTMLAttributes<'div'> {
  variant?: ComponentProps<typeof Link>['variant']
  links?: ComponentProps<typeof Link>[] | undefined
  direction?: 'row' | 'column' | undefined
}

const { variant = 'muted', links, ...rest } = Astro.props
---

<Element
  class:list="links"
  {...rest}
>
  {
    links?.map((link) => (
      <Link
        {variant}
        {...link}
      />
    ))
  }
  <slot />
</Element>

<style is:global>
  @layer fulldev {
    .links {
      @apply flex items-center justify-stretch gap-x-4 gap-y-2;

      &.direction-column {
        @apply flex-col items-start;
      }
    }
  }
</style>
