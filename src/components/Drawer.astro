---
import type { ComponentProps, HTMLAttributes } from 'astro/types'
import Button from 'fulldev-ui/components/Button.astro'
import Element from 'fulldev-ui/components/Element.astro'
import Logo from 'fulldev-ui/components/experimental/Logo.astro'
import Menu from 'fulldev-ui/components/Menu.astro'
import type { GlobalProps } from 'fulldev-ui/types/global-props'
import Heading from './Heading.astro'

interface Props extends GlobalProps, HTMLAttributes<'aside'> {
  variant?: ComponentProps<typeof Button>['variant']
  text?: ComponentProps<typeof Button>['text']
  icon?: ComponentProps<typeof Button>['icon']
  heading?: ComponentProps<typeof Heading>['text']
  logo?: ComponentProps<typeof Logo> | undefined
  company?: ComponentProps<typeof Logo>['company']
  menu?: ComponentProps<typeof Menu>['groups']
}

const {
  id = 'drawer',
  size = 'sm',
  icon = 'menu-2',
  color,
  variant,
  text,
  heading,
  logo,
  company,
  menu,
  ...rest
} = Astro.props
---

<Button
  variant="secondary"
  class:list={['drawer-button', `${id}-button`]}
  onclick={`document.getElementById('${id}').showModal()`}
  {variant}
  {text}
  {icon}
  {color}
/>

<Element
  onclick={`event.target === this && this.close()`}
  class:list="drawer"
  as="dialog"
  {id}
  {text}
  {icon}
  {...rest}
>
  <Element class:list="drawer-body">
    <Element
      class:list="drawer-header"
      as="header"
    >
      <Logo
        {company}
        {...logo}
      />
      <Heading
        level={4}
        text={heading}
      />
      <Button
        variant="secondary"
        icon="x"
        onclick={`document.getElementById('${id}').close()`}
      />
      <slot name="header" />
    </Element>
    <Element class:list="drawer-content">
      <Menu groups={menu} />
      <slot />
    </Element>
  </Element>
</Element>

<style lang="scss" is:global>
  @layer fulldev {
    body:has(dialog[open]) {
      overflow: hidden;

      @media (min-width: 768px) {
        overflow: auto;
      }
    }

    .drawer {
      top: 0;
      bottom: 0;
      margin: 0;
      padding: 0;
      width: 100%;
      max-width: 100%;
      height: 100%;
      max-height: 100%;

      @media (min-width: 768px) {
        width: 360px;
      }

      &::backdrop {
        cursor: pointer;
        background: rgba(0, 0, 0, 0.5);
      }

      .drawer-body {
        flex-shrink: 1;
        border-right: 1px solid var(--color-a6);
        height: 100%;
        overflow: auto;
      }

      .drawer-header {
        display: flex;
        position: sticky;
        top: 0;
        align-items: center;
        border-bottom: 1px solid var(--color-a6);
        background-color: var(--base-background);
        padding: 0 var(--gutter);
        height: 56px;

        .button {
          margin-left: auto;
        }
      }

      .drawer-content {
        display: flex;
        flex-direction: column;
        padding: var(--space-6) var(--gutter);
      }
    }
  }
</style>
