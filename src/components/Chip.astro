---
import Box from '@/components/Box.astro'
import { buttonVariants } from '@/components/ui/button'
import type { HTMLAttributes } from 'astro/types'
import { badgeVariants, type BadgeVariants } from './ui/badge'

interface Props extends HTMLAttributes<'a'>, BadgeVariants {
  text?: string
  href?: string
}

const { href, text, variant, class: className, ...rest } = Astro.props
---

<Box
  class:list={[
    'chip',
    href ? buttonVariants({ variant }) : badgeVariants({ variant }),
    'h-7 rounded-full px-3.5 text-xs font-medium',
    className,
  ]}
  {href}
  {...rest}
>
  <Fragment set:html={text} />
  <slot />
</Box>
