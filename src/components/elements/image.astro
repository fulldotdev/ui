---
import { Image as AstroImage } from "astro:assets"
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"

interface Props {
  class?: string
  src?: ComponentProps<typeof AstroImage>["src"]
  alt?: ComponentProps<typeof AstroImage>["alt"]
  width?: ComponentProps<typeof AstroImage>["width"]
  height?: ComponentProps<typeof AstroImage>["height"]
  sizes?: ComponentProps<typeof AstroImage>["sizes"]
}

const { class: className, src, alt = "", ...props } = Astro.props
---

{
  src && (
    <AstroImage
      class={cn("h-auto w-full", className)}
      src={src as any}
      alt={alt}
      height={1920}
      width={1920}
      sizes="100vw"
      {...props}
    />
  )
}
