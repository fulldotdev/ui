---
interface Props {
  class?: string
  name: string
}

const { class: className, name, ...rest } = Astro.props

const icons = import.meta.glob(`node_modules/lucide-static/icons/*.svg`)
const icon = icons[`/node_modules/lucide-static/icons/${name}.svg`]

const module = (await icon()) as any
const Comp = module?.default
---

<Comp class={className} {...rest} />
