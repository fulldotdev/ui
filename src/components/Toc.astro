---
import type { MarkdownHeading } from 'astro'
import type { HTMLAttributes } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'
import Link from 'fulldev-ui/components/Link.astro'
import Links from './Links.astro'

interface Props extends HTMLAttributes<'div'> {
  size?: 'sm' | 'md' | 'lg' | undefined
  heading?: string | undefined
  headings?: MarkdownHeading[] | undefined
}

const { size = 'md', heading, headings, ...rest } = Astro.props

const filteredHeadings = headings?.filter((heading: any) => heading.depth <= 4)

const links = filteredHeadings?.map((button: any) => ({
  text: button.text,
  href: `#${button.slug}`,
  class: `depth-${button.depth}`,
}))
---

<Element
  class:list="toc"
  {...rest}
>
  <Link
    text={heading}
    href="#"
    size="sm"
  />
  <Links
    {size}
    {links}
  />

  <style is:global>
    @layer fulldev {
      .toc {
        @apply flex flex-col gap-2;

        .link:first-child {
          @apply font-bold text-foreground;
        }

        .link.depth-3 {
          @apply pl-3;
        }

        .link.depth-4 {
          @apply pl-6;
        }
      }
    }
  </style>
</Element>
