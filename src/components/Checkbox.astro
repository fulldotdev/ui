---
import Label from '@/components/Label.astro'
import { Checkbox as ShadcnCheckbox } from '@/components/shadcn/checkbox'
import type { HTMLAttributes } from 'astro/types'

interface Props extends Omit<HTMLAttributes<'input'>, 'type'> {
  size?: 'sm' | 'md' | 'lg' | undefined
  label?: string | undefined
}

const {
  label,
  name = label,
  id = name,
  size = 'md',
  checked,
  autofocus,
  disabled,
  readonly,
  required,
  min,
  max,
  step,
  form,
  ...rest
} = Astro.props
---

<form action="">
  <Label
    class:list={`checkbox size-${size}`}
    for={id}
    {...rest}
  >
    <ShadcnCheckbox client:load />
    <Fragment set:html={label} />
  </Label>
</form>

