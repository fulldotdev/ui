---
const {
  as: As = 'div',
  show = 'content',
  theme,
  variant,
  size,
  align,
  color,
  position,
  panel,
  contrast,
  structure,
  level,
  placement,
  reverse,
  open,
  lead,
  current,
  direction,
  center,
  frame,
  dark,
  muted,
  inset,
  ...rest
} = Astro.props

const slot = await Astro.slots.render('default')
const render = show === 'content' ? slot?.trim().length > 0 : show
---

{
  render && (
    <As
      class:list={[
        {
          contrast,
          panel,
          open,
          reverse,
          current,
          center,
          inset,
          dark,
          muted,
          [`size-${size}`]: size,
          [`color-${color}`]: color,
          [`level-${level}`]: level,
          [`frame-${frame}`]: frame,
          [`variant-${variant}`]: variant,
          [`structure-${structure}`]: structure,
          [`align-${align}`]: align,
          [`position-${position}`]: position,
          [`direction-${direction}`]: direction,
        },
      ]}
      {...rest}
    >
      <Fragment set:html={slot} />
    </As>
  )
}

<style is:global>
  @import 'tailwindcss/base' layer(fulldev);
  @import 'fulldev-ui/css/tailwind' layer(fulldev);
  @import 'fulldev-ui/css/fulldev' layer(fulldev);
  @import 'tailwindcss/components';
  @import 'tailwindcss/utilities';
</style>
