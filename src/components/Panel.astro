---
import Element from '@/components/Element.astro'
import type { HTMLAttributes, HTMLTag } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {
  as?: HTMLTag
}

const { ...rest } = Astro.props
---

<Element
  class:list="panel relative border-border border-1 rounded-lg bg-card color-card-foreground overflow-hidden w-full py-16 px-4 md:px-8 xl:px-16"
  {...rest}
>
  <slot />
</Element>
