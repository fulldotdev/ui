---
import type { HTMLAttributes } from 'astro/types'
import Box from 'fulldev-ui/components/Box.astro'

interface Props extends HTMLAttributes<'a'>, HTMLAttributes<'div'> {}

const { href, class: className, ...rest } = Astro.props
---

<Box
  class:list={[
    'card color-card-foreground relative flex flex-col gap-3 overflow-hidden rounded-lg border bg-card p-6',
    className,
  ]}
  as={href ? 'a' : 'div'}
  {href}
  {...rest}
>
  <slot />
</Box>
