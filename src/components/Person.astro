---
import type { HTMLAttributes } from 'astro/types'
import Abstract from 'fulldev-ui/components/Abstract.astro'
import Avatar from 'fulldev-ui/components/Avatar.astro'
import Box from 'fulldev-ui/components/Box.astro'

interface Props extends HTMLAttributes<'div'> {
  src?: string | undefined
  heading?: string | undefined
  text?: string | undefined
}

const { src, heading, text, ...rest } = Astro.props
---

<Box
  class:list="person"
  {...rest}
>
  <Avatar
    {src}
    alt={[heading, text].join(' - ')}
  />
  <Abstract>
    <Box
      as="h3"
      set:html={heading}
    />
    <Fragment set:html={text} />
  </Abstract>
</Box>

<style is:global>
  @layer fulldev {
    .person {
      display: flex;
      align-items: center;
      gap: var(--spacing-2);
      font-size: var(--text-sm);
      line-height: var(--text-sm--line-height);
    }
  }
</style>
