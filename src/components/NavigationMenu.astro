---
import { NavigationMenu as NavigationMenuComposite } from '@/components/composite/navigation-menu'
import type { ComponentProps } from 'astro/types'

type NavigationMenuProps = ComponentProps<typeof NavigationMenuComposite>

interface Props extends Omit<NavigationMenuProps, 'className'> {
  class?: NavigationMenuProps['className']
}

const { items, class: className, ...rest } = Astro.props
---

{
  items && (
    <NavigationMenuComposite
      client:load
      {className}
      {items}
      {...rest}
    />
  )
}
