---
import Element from '@/components/Element.astro'
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {
  align?: 'start' | 'center' | 'end' | 'sticky' | undefined
}

const { align = 'start', ...rest } = Astro.props
---

<Element
  class:list={[
    'split flex w-full flex-col lg:grid lg:grid-cols-2',
    {
      // align
      'lg:items-start': align === 'start',
      'lg:items-center': align === 'center',
      'lg:items-end': align === 'end',
      'lg:child:sticky lg:child:top-20 items-start': align === 'sticky',
    },
  ]}
  {...rest}
>
  <slot />
</Element>
