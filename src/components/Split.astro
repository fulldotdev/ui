---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Root from 'fulldev-ui/components/Root.astro'

type Props<As extends HTMLTag = 'div'> = Polymorphic<{ as: As }> & {
  color?: 'base' | 'brand' | undefined
  size?: 'sm' | 'md' | 'lg' | undefined
  align?: 'start' | 'center' | 'end' | undefined
  space?: 'none' | 'auto' | undefined
}

const { space = 'auto', align = 'center', ...rest } = Astro.props
---

<Root
  class:list="split"
  {align}
  {space}
  {...rest}
>
  <slot />
</Root>

<style is:global lang="scss">
  @layer fulldev {
    .split {
      display: grid;
      grid-template-columns: 1fr;
      column-gap: var(--space-7);
      width: 100%;

      @media (max-width: 1023.9999px) {
        &.space-auto {
          > * + * {
            margin-top: var(--space-auto);
          }
        }
      }

      @media (min-width: 1024px) {
        grid-auto-columns: 1fr;
        grid-auto-flow: column;
      }

      &.align-start {
        align-items: flex-start;
        text-align: left;
      }

      &.align-center {
        align-items: center;
      }

      &.align-end {
        align-items: flex-end;
      }
    }
  }
</style>
