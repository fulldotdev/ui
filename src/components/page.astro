---
import { type PageSchema } from "@/schemas/page"
import Article from "@/components/blocks/article.astro"
import Blog from "@/components/blocks/blog.astro"
import Collection from "@/components/blocks/collection.astro"
import Person from "@/components/blocks/person.astro"
import Product from "@/components/blocks/product.astro"
import Review from "@/components/blocks/review.astro"
import Section from "@/components/section.astro"

type Props = PageSchema

const props = Astro.props
---

{
  props.type === "article" && (
    <Article {...props}>
      <slot />
    </Article>
  )
}
{
  props.type === "blog" && (
    <Blog {...props}>
      <slot />
    </Blog>
  )
}
{
  props.type === "product" && (
    <Product {...props}>
      <slot />
    </Product>
  )
}
{
  props.type === "collection" && (
    <Collection {...props}>
      <slot />
    </Collection>
  )
}
{
  props.type === "person" && (
    <Person {...props}>
      <slot />
    </Person>
  )
}
{
  props.type === "review" && (
    <Review {...props}>
      <slot />
    </Review>
  )
}
{props.sections?.map((section) => <Section {...section} />)}
