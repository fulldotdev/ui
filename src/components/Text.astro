---
import type { HTMLAttributes } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'
import type { GlobalProps } from 'fulldev-ui/types/global-props'

interface Props extends GlobalProps, HTMLAttributes<'p'> {
  size?: 'sm' | 'md' | 'lg' | undefined
  color?: 'base' | 'brand' | undefined
  theme?: 'light' | 'dark' | undefined
  contrast?: boolean | undefined
  lead?: boolean | undefined
  text?: string | undefined
}

const { color = 'base', text, ...rest } = Astro.props
---

<Element
  class:list="text"
  as="p"
  {color}
  {...rest}
>
  <slot />
  <Fragment set:text={text} />
</Element>

<style is:global lang="scss">
  @layer fulldev {
    .text {
      margin: 0;
      max-width: calc(var(--space-4) * 44);
      color: var(--color-11);
      font-size: var(--text-3);
      line-height: 1.625;

      &.lead {
        font-size: var(--text-4);
        text-wrap: balance;
      }
    }
  }
</style>
