---
import type { HTMLAttributes } from 'astro/types'
import Box from 'fulldev-ui/components/Box.astro'

interface Props extends HTMLAttributes<'div'> {}

const { ...rest } = Astro.props
---

<Box
  class:list={[
    'prose',
    'flex-flex-col w-full',
    'child:mt-9 first:child:mt-0',
    'headings:scroll-mt-20 headings:text-pretty headings:font-semibold headings:tracking-tight',
    'h1:text-4xl h1:font-extrabold lg:h1:text-5xl',
    'h2:h1:text-3xl',
    'h3:text-2xl',
    'h4:text-xl',
    'h5:text-lg',
    'h6:text-base',
    'p:mt-6 p:leading-[1.8] p:text-foreground/80',
    'img:p:rounded-lg',
  ]}
  {...rest}
>
  <slot />
</Box>
