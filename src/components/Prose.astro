---
import Element from '@/components/Element.astro'
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {}

const { ...rest } = Astro.props
---

<Element
  class:list={[
    'prose',
    'flex-flex-col w-full max-w-screen-sm',
    'child:first:mt-0 child:mt-9',
    'headings:font-semibold headings:scroll-mt-20 headings:text-pretty headings:tracking-tight',
    'h1:text-4xl lg:h1:text-5xl h1:font-extrabold',
    'h2:h1:text-3xl',
    'h3:text-2xl',
    'h4:text-xl',
    'h5:text-lg',
    'h6:text-base',
    'p:leading-[1.8] p:text-foreground/80 p:mt-6',
  ]}
  {...rest}
>
  <slot />
</Element>
