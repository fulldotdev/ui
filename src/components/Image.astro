---
import type { HTMLAttributes } from 'astro/types'
import { Image as AstroImage } from 'astro:assets'

interface Props extends HTMLAttributes<'img'> {
  src?: string
  alt?: string
  height?: number
  width?: number
}

const { src, alt = '', height = 1920, width = 1920, class: className, ...rest } = Astro.props
---

{
  src && (
    <AstroImage
      class:list={['image block', className]}
      {alt}
      {src}
      {width}
      {height}
      {...rest}
    />
  )
}
