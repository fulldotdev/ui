---
import type { ImageSchema } from '@/schemas/components/image'
import type { ComponentProps, HTMLAttributes } from 'astro/types'
import { Image as AstroImage } from 'astro:assets'

interface Props extends HTMLAttributes<'img'>, ImageSchema {
  height?: ComponentProps<typeof AstroImage>['height']
  width?: ComponentProps<typeof AstroImage>['width']
}

const { src, alt = '', height = 1920, width = 1920, class: className, ...rest } = Astro.props
---

{
  src && (
    <AstroImage
      class:list={['image block', className]}
      alt={alt || ''}
      {src}
      {width}
      {height}
      {...rest}
    />
  )
}
