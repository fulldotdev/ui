---
import type { HTMLAttributes } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'
import type { GlobalProps } from 'fulldev-ui/types/global-props'

interface Props extends GlobalProps, HTMLAttributes<'span'> {
  text?: string | undefined
}

const { text, ...rest } = Astro.props
---

<Element
  class:list="tagline"
  as="span"
  {...rest}
>
  <slot />
  <Fragment set:text={text} />
</Element>

<style is:global lang="scss">
  @layer fulldev {
    .tagline {
      color: var(--color-11);
      font-size: var(--text-2);
      line-height: 1;
      text-align: left;
      white-space: nowrap;
    }
  }
</style>
