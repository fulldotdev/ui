---
import type { ComponentProps, HTMLAttributes } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'

interface Props extends ComponentProps<typeof Element>, HTMLAttributes<'span'> {
  html?: string | undefined
  text?: string | undefined
}

const { html, text, ...rest } = Astro.props
---

<Element
  class:list="tagline"
  as="span"
  {...rest}
>
  <slot>
    <Fragment set:html={html} />
    <Fragment set:text={text} />
  </slot>
</Element>

<style is:global lang="scss">
  @layer fulldev {
    .tagline {
      color: var(--color-11);
      font-size: var(--text-2);
      line-height: 1;
      text-align: left;
      white-space: nowrap;
    }
  }
</style>
