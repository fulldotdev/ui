---
import type { ComponentProps } from 'astro/types'
import Avatar from 'fulldev-ui/components/Avatar.astro'

interface Props extends ComponentProps<typeof Avatar> {
  avatar?: ComponentProps<typeof Avatar> | undefined
  avatars?: ComponentProps<typeof Avatar>[] | undefined
}

const { avatar, avatars, ...rest } = Astro.props
---

{
  [avatar, ...(avatars || [])].filter(Boolean).map((avatar) => (
    <Avatar
      {...rest}
      {...avatar}
    />
  ))
}
