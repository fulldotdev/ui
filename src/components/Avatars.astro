---
import type { ComponentProps, HTMLAttributes } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'
import Avatar from './Avatar.astro'

interface Props extends HTMLAttributes<'div'> {
  size?: any
  avatars?: ComponentProps<typeof Avatar>[] | undefined
  avatar?: ComponentProps<typeof Avatar>['id'] | undefined
}

const { size = 'md', avatars = [], avatar, ...rest } = Astro.props
---

<Element
  class:list="avatars"
  {size}
  {...rest}
>
  {
    [avatar, ...avatars].filter(Boolean).map((id) => (
      <Avatar
        {size}
        {id}
      />
    ))
  }
</Element>

<style is:global>
  @layer fulldev {
    .avatars {
      @apply inline-flex -space-x-3;
    }
  }
</style>
