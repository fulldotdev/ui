---
import type { ComponentProps } from 'astro/types'
import Menu from 'fulldev-ui/components/Menu.astro'

interface Props extends ComponentProps<typeof Menu> {
  menu?: ComponentProps<typeof Menu> | undefined
  menus?: ComponentProps<typeof Menu>[] | undefined
}

const { menu, menus, ...rest } = Astro.props
---

{
  [menu, ...(menus || [])].filter(Boolean).map((menu) => (
    <Menu
      {...rest}
      {...menu}
    />
  ))
}
