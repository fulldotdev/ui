---
import Menu from '@/components/Menu.astro'
import type { ComponentProps } from 'astro/types'
import Box from './Box.astro'

interface Props extends ComponentProps<typeof Menu> {
  menus?: ComponentProps<typeof Menu>[] | undefined
}

const { menus, ...rest } = Astro.props
---

<Box
  class:list="grid grid-cols-[repeat(auto-fit,minmax(176px,1fr))] gap-8"
  {...rest}
>
  {
    menus?.map((menu) => (
      <Menu
        {...rest}
        {...menu}
      />
    ))
  }
</Box>
