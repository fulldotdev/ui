---
import "@/styles/globals.css"
import "@/styles/theme.css"

import { SEO } from "astro-seo"
import type { HTMLAttributes } from "astro/types"
import { twMerge } from "tailwind-merge"

interface Props extends HTMLAttributes<"html"> {
  company?: string
  head?: string
  body?: string
  css?: string
  title?: string
  description?: string
  image?: {
    src?: string
    alt?: string
  }
  canonical?: string
  noindex?: boolean
  nofollow?: boolean
}

const {
  lang = "en",
  company,
  title,
  description,
  image,
  canonical,
  noindex,
  nofollow,
  head,
  body,
  css,
  class: className,
} = Astro.props
---

<!doctype html>
<html
  class:list={twMerge(
    "layout text-foreground bg-background h-full w-full font-sans text-base scheme-light dark:scheme-dark",
    className
  )}
  {lang}
>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      charset="UTF-8"
      title={title || undefined}
      description={description || description || undefined}
      noindex={noindex || undefined}
      nofollow={nofollow || undefined}
      canonical={canonical || Astro.url.href}
      openGraph={{
        basic: {
          title: title || "",
          image: Astro.url.origin + image?.src,
          type: "website",
          url: Astro.url.href,
        },
        image: {
          url: Astro.url.origin + image?.src,
          alt: image?.alt || title || title || company || undefined,
        },
        optional: {
          description: description || undefined,
          siteName: company || undefined,
        },
      }}
    />
    <Fragment set:html={head} />
  </head>
  <body>
    <slot />
    <style set:html={css}></style>
    <Fragment set:html={body} />
  </body>
</html>
