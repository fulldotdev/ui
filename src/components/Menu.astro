---
import Element from '@/components/Element.astro'
import Link from '@/components/Link.astro'
import type { ComponentProps, HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {
  size?: 'sm' | 'defaut' | 'lg' | undefined
  heading?: string | undefined
  links?: ComponentProps<typeof Link>[] | undefined
}

const { size = 'md', heading, links, ...rest } = Astro.props
---

<Element
  class:list="menu inline-flex flex-col items-start gap-4 "
  as="div"
  {...rest}
>
  {
    links && links.length > 0 && (
      <Element
        class="text-sm font-semibold"
        set:html={heading}
        as="h6"
        size="sm"
      />
    )
  }
  <Element
    as="menu"
    class="flex flex-col gap-2"
  >
    {
      links?.map((link) => (
        <Element as="li">
          <Link
            size="sm"
            {...link}
          />
        </Element>
      ))
    }
  </Element>
</Element>
