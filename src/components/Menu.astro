---
import Box from '@/components/Box.astro'
import Link from '@/components/Link.astro'
import type { MenuSchema } from '@/schemas/fields/menu'
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'>, MenuSchema {}

const { text, href, links, ...rest } = Astro.props
---

<Box
  class:list="menu inline-flex flex-col items-start gap-2 text-foreground"
  as="div"
  {...rest}
>
  <Box
    class="font-medium"
    as={text ? 'h6' : 'div'}
  >
    {
      href ? (
        <Link
          {href}
          {text}
        />
      ) : (
        <Fragment set:html={text} />
      )
    }
  </Box>
  <Box
    as="menu"
    class="flex flex-col gap-2"
  >
    {
      links?.map((link) => (
        <Box as="li">
          <Link
            class="font-normal text-muted-foreground transition-colors hover:text-foreground"
            {...link}
          />
        </Box>
      ))
    }
  </Box>
</Box>
