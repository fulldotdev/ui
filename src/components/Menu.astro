---
import type { HTMLAttributes } from 'astro/types'
import Box from 'fulldev-ui/components/Box.astro'
import Link from './Link.astro'

interface Props extends HTMLAttributes<'div'> {
  text?: string | undefined
  links?:
    | {
        text?: string
        href?: string
      }[]
    | undefined
}

const { text, links, ...rest } = Astro.props
---

<Box
  class:list="menu inline-flex flex-col items-start gap-4"
  as="div"
  {...rest}
>
  {
    links && links.length > 0 && (
      <Box
        class="font-medium"
        as="h6"
        set:html={text}
      />
    )
  }
  <Box
    as="menu"
    class="flex flex-col gap-2"
  >
    {
      links?.map((link) => (
        <Box as="li">
          <Link
            class="font-normal text-muted-foreground transition-colors hover:text-foreground"
            {...link}
          />
        </Box>
      ))
    }
  </Box>
</Box>
