---
import type { ComponentProps } from 'astro/types'
import Button from 'fulldev-ui/components/Button.astro'
import Heading from 'fulldev-ui/components/Heading.astro'
import Text from 'fulldev-ui/components/Text.astro'
import Root from './Root.astro'

interface Props extends ComponentProps<typeof Button<'a'>> {
  structure?: 'row' | 'column' | undefined
  align?: 'start' | 'center' | undefined
  heading?: string | undefined
  text?: string | undefined
  target?: string | undefined
}

const {
  variant = 'secondary',
  structure = 'row',
  color = 'brand',
  align = 'start',
  target = '_blank',
  heading,
  text,
  icon,
  href,
  ...rest
} = Astro.props
---

<Root
  class:list={'channel'}
  {structure}
  {align}
  {...rest}
>
  <Button
    {target}
    {variant}
    {color}
    {href}
    {icon}
  />
  <Root class:list={'column'}>
    <Heading
      level={6}
      html={heading}
    />
    <Text html={text} />
  </Root>
</Root>

<style>
  .channel {
    gap: var(--space-4);

    .column {
      display: flex;
      flex-direction: column;
      align-items: inherit;
      gap: var(--space-1);
    }

    &.structure-row {
      .column {
        align-items: flex-start;
      }
    }
  }
</style>
