---
import Element from '@/components/Element.astro'
import type { HTMLAttributes } from 'astro/types'
import Icon from './Icon.astro'

interface Props extends HTMLAttributes<'div'> {
  size?: 'sm' | 'default' | 'lg' | undefined
  heading?: string | undefined
  text?: string | undefined
  href?: string | undefined
  icon?: string | undefined
}

const { size = 'default', href, icon, heading, text, ...rest } = Astro.props
---

<Element
  class:list={['channel flex items-center gap-2 text-foreground/80 transition-colors hover:text-foreground']}
  as={href ? 'a' : 'div'}
  target={href ? '_blank' : undefined}
  {href}
  {...rest}
>
  <Icon name={icon} />
  <Fragment set:html={text} />
</Element>
