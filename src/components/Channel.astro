---
import type { ComponentProps } from 'astro/types'
import Button from 'fulldev-ui/components/Button.astro'
import Element from 'fulldev-ui/components/Element.astro'
import Heading from 'fulldev-ui/components/Heading.astro'
import Text from 'fulldev-ui/components/Text.astro'
import type { GlobalProps } from 'fulldev-ui/types/global-props'

interface Props extends GlobalProps, ComponentProps<typeof Button> {
  variant?: ComponentProps<typeof Button>['variant']
  icon?: ComponentProps<typeof Button>['icon']
  href?: ComponentProps<typeof Button>['href']
  heading?: ComponentProps<typeof Heading>['text']
  text?: ComponentProps<typeof Text>['text']
  structure?: 'row' | 'column' | undefined
  align?: 'start' | 'center' | undefined
}

const {
  variant = 'secondary',
  size = 'md',
  href,
  icon,
  heading,
  text,
  ...rest
} = Astro.props
---

<Element
  class:list="channel"
  {size}
  {...rest}
>
  <Button
    {variant}
    {size}
    {href}
    {icon}
    icon="circle"
  />
  <Element class:list="channel-content">
    <Heading
      level={6}
      text={heading}
      {size}
    />
    <Fragment set:html={text} />
    <slot />
  </Element>
</Element>

<style is:global>
  .channel {
    @apply flex gap-3;

    .channel-content {
      @apply flex flex-col text-muted-foreground;

      .heading {
        @apply leading-snug;
      }
    }

    &.size-sm {
      @apply gap-2;

      .channel-content {
        @apply text-xs leading-tight;
      }
    }

    &.size-md {
      @apply gap-2.5;

      .channel-content {
        @apply text-sm leading-tight;
      }
    }

    &.size-lg {
      @apply gap-3;

      .channel-content {
        @apply text-base leading-tight;
      }
    }
  }
</style>
