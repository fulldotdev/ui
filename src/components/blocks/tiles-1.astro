---
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import { Image } from "@/components/ui/image"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGrid,
  SectionProse,
  SectionSpread,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileDescription,
  TileMedia,
  TileSpread,
  TileTitle,
} from "@/components/ui/tile"

interface Props {
  buttons?: {
    text?: string
    href?: string
  }[]
  items?: {
    href?: string
    tagline?: string
    title?: string
    description?: string
    image?: {
      src: string
      alt: string
    }
  }[]
}

const { buttons, items } = Astro.props
---

<Section>
  <SectionSpread class="lg:items-end">
    <SectionContent>
      <SectionProse>
        <slot />
      </SectionProse>
    </SectionContent>
    <SectionActions>
      {
        buttons?.map(({ text, ...button }, i) => (
          <Button variant={i === 0 ? "default" : "outline"} {...button}>
            {text}
          </Button>
        ))
      }
    </SectionActions>
  </SectionSpread>
  <SectionGrid>
    {
      items?.map(({ title, tagline, description, href, image }) => (
        <Tile href={href}>
          <TileMedia>
            <Image {...image} />
          </TileMedia>
          <TileSpread>
            <TileContent>
              {tagline && (
                <p
                  class="text-primary text-xs font-medium"
                  set:html={tagline}
                />
              )}
              <TileTitle>{title}</TileTitle>
              <TileDescription>{description}</TileDescription>
            </TileContent>
            {href && <Icon name="arrow-right" />}
          </TileSpread>
        </Tile>
      ))
    }
  </SectionGrid>
</Section>
