---
import type { ComponentProps } from "astro/types"
import CircleCheck from "lucide-static/icons/circle-check.svg"
import X from "lucide-static/icons/x.svg"

import { cn } from "@/lib/utils"
import { Button } from "@/components/ui/button"
import { List, ListItem } from "@/components/ui/list"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGroup,
  SectionSplit,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileDescription,
  TileTitle,
} from "@/components/ui/tile"
import { Typography } from "@/components/ui/typography"

interface Props extends ComponentProps<typeof Section> {
  size?: ComponentProps<typeof Typography>["size"]
  buttons?: ComponentProps<typeof Button>[]
  items?: {
    title?: string
    description?: string
    list?: string[]
  }[]
}

const {
  class: className,
  align,
  order,
  size,
  buttons,
  items,
  ...props
} = Astro.props
---

<Section class={cn("", className)} {...props}>
  <SectionContent>
    <SectionGroup align={align}>
      <Typography size={size} align={align}>
        <slot />
      </Typography>
      <SectionActions align={align}>
        {
          buttons?.map((button, i) => (
            <Button
              variant={i === 0 ? "default" : "outline"}
              size={size}
              {...button}
            />
          ))
        }
      </SectionActions>
    </SectionGroup>
    <SectionSplit class="gap-8" order={order}>
      {
        items?.map(({ title, description, list }, i) => (
          <Tile class="items-start" variant={i === 0 ? "outline" : "muted"}>
            <TileContent>
              <TileTitle>{title}</TileTitle>
              <TileDescription>{description}</TileDescription>
              <List
                class={`not-first:mt-4 ${i === 0 ? "text-muted-foreground" : "text-foreground"}`}
              >
                {list?.map((item) => (
                  <ListItem>
                    {i === 0 ? <X /> : <CircleCheck />}
                    {item}
                  </ListItem>
                ))}
              </List>
            </TileContent>
          </Tile>
        ))
      }
    </SectionSplit>
  </SectionContent>
</Section>
