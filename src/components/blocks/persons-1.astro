---
import { Button } from "@/components/ui/button"
import { Image } from "@/components/ui/image"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGrid,
  SectionTypography,
} from "@/components/ui/section"
import { Tile, TileContent, TileDescription, TileTitle } from "@/components/ui/tile"

interface Props {
  buttons?: {
    icon?: string
    text?: string
    href?: string
    target?: string
  }[]
  items?: {
    href?: string
    title?: string
    tagline?: string
    image?: {
      src: string
      alt: string
      title?: string
    }
  }[]
}

const { buttons, items } = Astro.props
---

<Section>
  <SectionContent>
    <SectionTypography size="lg">
      <slot />
    </SectionTypography>
    <SectionActions>
      {
        buttons?.map(({ icon, text, ...button }, i) => (
          <Button variant={i === 0 ? "default" : "outline"} size="lg" {...button}>
            {icon && <Icon name={icon} />}
            {text}
          </Button>
        ))
      }
    </SectionActions>
    <SectionGrid class="gap-4">
      {
        items?.map(({ title, tagline, image, href }) => (
          <Tile href={href} variant="muted">
            <Image
              class="aspect-square rounded-lg object-cover"
              sizes="300px"
              {...image}
            />
            <TileContent>
              <TileTitle>{title}</TileTitle>
              <TileDescription>{tagline}</TileDescription>
            </TileContent>
          </Tile>
        ))
      }
    </SectionGrid>
  </SectionContent>
</Section>
