---
import type { ContactSchema } from "@/schemas/blocks/contact"
import { transformImage } from "@/lib/transform-image"
import Contact1 from "@/components/blocks/contact-1"
import Contact2 from "@/components/blocks/contact-2"
import Contact3 from "@/components/blocks/contact-3"

type Props = ContactSchema

const { variant, image, html, ...schema } = Astro.props

const props = {
  ...schema,
  image: await transformImage(image),
}
---

{
  variant === "1" && (
    <Contact1 {...props}>
      <Fragment set:html={html} />
    </Contact1>
  )
}

{
  variant === "2" && (
    <Contact2 {...props}>
      <Fragment set:html={html} />
    </Contact2>
  )
}
{
  variant === "3" && (
    <Contact3 {...props}>
      <Fragment set:html={html} />
    </Contact3>
  )
}
