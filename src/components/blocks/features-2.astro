---
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGrid,
  SectionTypography,
} from "@/components/ui/section"
import {
  Tile,
  TileActions,
  TileContent,
  TileMedia,
  TileTypography,
} from "@/components/ui/tile"

interface Props {
  links?: {
    icon?: string
    text?: string
    href?: string
    target?: string
  }[]
  items?: {
    title?: string
    description?: string
    icon?: string
    href?: string
    links?: {
      icon?: string
      text?: string
      href?: string
      target?: string
    }[]
  }[]
}

const { links, items } = Astro.props
---

<Section>
  <SectionContent align="center">
    <SectionTypography align="center">
      <slot />
    </SectionTypography>
    <SectionActions align="center">
      {
        links?.map(({ icon, text, ...button }, i) => (
          <Button variant={i === 0 ? "default" : "outline"} {...button}>
            {icon && <Icon name={icon} />}
            {text}
          </Button>
        ))
      }
    </SectionActions>
  </SectionContent>
  <SectionGrid>
    {
      items?.map(({ title, description, icon, links }) => (
        <Tile class="items-center">
          <TileMedia variant="icon">
            <Icon name={icon} />
          </TileMedia>
          <TileContent align="center">
            <TileTypography
              align="center"
              title={title}
              description={description}
            />
            <TileActions align="center">
              {links?.map(({ icon, text, href, target }) => (
                <Button
                  class="-mx-4"
                  variant="link"
                  href={href}
                  target={target}
                >
                  {icon && <Icon name={icon} />}
                  {text}
                </Button>
              ))}
            </TileActions>
          </TileContent>
        </Tile>
      ))
    }
  </SectionGrid>
</Section>
