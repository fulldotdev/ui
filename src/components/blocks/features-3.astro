---
import { Image } from "@/components/ui/image"
import {
  Section,
  SectionContent,
  SectionGrid,
  SectionTypography,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileMedia,
  TileSplit,
  TileTypography,
} from "@/components/ui/tile"

interface Props {
  items?: {
    href?: string
    title?: string
    description?: string
    image?: {
      src: string
      alt: string
    }
  }[]
}

const { items } = Astro.props
---

<Section>
  <SectionContent class="items-center">
    <SectionTypography align="center">
      <slot />
    </SectionTypography>
  </SectionContent>
  <SectionGrid>
    {
      items?.map(({ title, description, href, image }) => (
        <Tile href={href}>
          <TileSplit align="center">
            <TileMedia>
              <Image {...image} />
            </TileMedia>
            <TileContent>
              <TileTypography
                size="sm"
                title={title}
                description={description}
              />
            </TileContent>
          </TileSplit>
        </Tile>
      ))
    }
  </SectionGrid>
</Section>
