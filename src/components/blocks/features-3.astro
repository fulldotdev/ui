---
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionSpread,
  SectionTypography,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileMedia,
  TileTypography,
} from "@/components/ui/tile"

interface Props {
  buttons?: {
    icon?: string
    text?: string
    href?: string
    target?: string
  }[]
  items?: {
    title?: string
    description?: string
    html?: string
    icon?: string
    button?: {
      text?: string
      href?: string
      target?: string
    }
  }[]
}

const { buttons, items } = Astro.props
---

<Section>
  <SectionContent>
    <SectionTypography>
      <slot />
    </SectionTypography>
    <SectionActions>
      {
        buttons?.map(({ icon, text, ...button }, i) => (
          <Button variant={i === 0 ? "default" : "outline"} {...button}>
            {icon && <Icon name={icon} />}
            {text}
          </Button>
        ))
      }
    </SectionActions>
  </SectionContent>
  <SectionSpread>
    {
      items?.map(({ title, description, html, icon, button }) => (
        <Tile>
          <TileMedia variant="icon">
            <Icon name={icon} />
          </TileMedia>
          <TileContent>
            <TileTypography
              title={title}
              description={description}
              html={html}
            />
            <Button
              class="px-0"
              variant="link"
              href={button?.href}
              target={button?.target}
            >
              {button?.text}
            </Button>
          </TileContent>
        </Tile>
      ))
    }
  </SectionSpread>
</Section>
