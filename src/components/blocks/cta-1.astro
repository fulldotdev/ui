---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Background } from "@/components/ui/background"
import { Button } from "@/components/ui/button"
import {
  Section,
  SectionActions,
  SectionContainer,
  SectionContent,
} from "@/components/ui/section"
import { Typography } from "@/components/ui/typography"

interface Props extends ComponentProps<typeof Section> {
  background?: ComponentProps<typeof Background>["variant"]
  buttons?: ComponentProps<typeof Button>[]
}

const {
  class: className,
  align,
  size,
  background,
  buttons,
  ...props
} = Astro.props
---

<Section class={cn("", className)} align={align} size={size} {...props}>
  <Background
    class="mask-y-from-white mask-y-from-75% mask-y-to-transparent"
    variant={background}
  />
  <SectionContainer>
    <SectionContent align={align}>
      <Typography align={align} size={size}>
        <slot />
      </Typography>
      <SectionActions align={align}>
        {
          buttons?.map((button, i) => (
            <Button
              variant={i === 0 ? "default" : "outline"}
              size={size}
              {...button}
            />
          ))
        }
      </SectionActions>
    </SectionContent>
  </SectionContainer>
</Section>
