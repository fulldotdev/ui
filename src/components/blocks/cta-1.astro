---
// Stack
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Avatar, AvatarImage } from "@/components/ui/avatar"
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import { Image } from "@/components/ui/image"
import {
  Item,
  ItemContent,
  ItemDescription,
  ItemMedia,
} from "@/components/ui/item"
import { List, ListItem } from "@/components/ui/list"
import { Rating } from "@/components/ui/rating"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionMedia,
  SectionTypography,
} from "@/components/ui/section"

interface Props extends ComponentProps<typeof Section> {
  size?: ComponentProps<typeof SectionTypography>["size"]
  list?: string[]
  buttons?: ComponentProps<typeof Button>[]
  image?: ComponentProps<typeof Image>
  item?: {
    avatars?: ComponentProps<typeof Avatar>[]
    rating?: ComponentProps<typeof Rating>["rating"]
    description?: string
  }
}

const {
  class: className,
  align,
  size,
  list,
  buttons,
  image,
  item,
  frame,
  ...props
} = Astro.props
---

<Section class={cn("", className)} {...props}>
  <SectionContent align={align}>
    <SectionTypography align={align} size={size}>
      <slot />
    </SectionTypography>
    <List>
      {
        list?.map((item) => (
          <ListItem>
            <Icon name="check" />
            {item}
          </ListItem>
        ))
      }
    </List>
    <SectionActions align={align}>
      {
        buttons?.map((button, i) => (
          <Button
            variant={i === 0 ? "default" : "outline"}
            size={size}
            {...button}
          />
        ))
      }
    </SectionActions>
    <Item class="items-center p-0">
      <ItemMedia class="-space-x-4">
        {
          item?.avatars?.map((avatar) => (
            <Avatar class="ring-background size-10 ring-2">
              <AvatarImage {...avatar} />
            </Avatar>
          ))
        }
      </ItemMedia>
      <ItemContent>
        <Rating rating={item?.rating} />
        <ItemDescription>
          {item?.description}
        </ItemDescription>
      </ItemContent>
    </Item>
  </SectionContent>
  <SectionMedia position="inset">
    <Image {...image} />
  </SectionMedia>
</Section>
