---
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import { List, ListItem } from "@/components/ui/list"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGrid,
  SectionSplit,
  SectionTypography,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileDescription,
  TileTitle,
} from "@/components/ui/tile"

interface Props {
  buttons?: {
    icon?: string
    text?: string
    href?: string
    target?: string
  }[]
  items?: {
    href?: string
    title?: string
    description?: string
    location?: string
    salary?: string
    hours?: string
  }[]
}

const { items, buttons } = Astro.props
---

<Section>
  <SectionSplit>
    <SectionContent>
      <SectionTypography>
        <slot />
      </SectionTypography>
      <SectionActions>
        {
          buttons?.map(({ icon, text, ...button }, i) => (
            <Button variant={i === 0 ? "default" : "outline"} {...button}>
              {icon && <Icon name={icon} />}
              {text}
            </Button>
          ))
        }
      </SectionActions>
    </SectionContent>
    <SectionGrid>
      {
        items?.map(({ href, title, description, location, salary, hours }) => (
          <Tile href={href}>
            <TileContent>
              <TileTitle>{title}</TileTitle>
              <TileDescription>{description}</TileDescription>
              <List class="not-first:mt-4">
                <ListItem>{location}</ListItem>
                <ListItem>{salary}</ListItem>
                <ListItem>{hours}</ListItem>
              </List>
            </TileContent>
          </Tile>
        ))
      }
    </SectionGrid>
  </SectionSplit>
</Section>
