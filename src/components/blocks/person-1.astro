---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Button } from "@/components/ui/button"
import { Image } from "@/components/ui/image"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGroup,
  SectionSplit,
} from "@/components/ui/section"
import { Typography } from "@/components/ui/typography"

interface Props extends ComponentProps<typeof Section> {
  size?: ComponentProps<typeof Typography>["size"]
  title?: string
  tagline?: string
  description?: string
  image?: ComponentProps<typeof Image>
  buttons?: ComponentProps<typeof Button>[]
}

const {
  class: className,
  align = "center",
  size,
  title,
  tagline,
  description,
  image,
  buttons,
  ...props
} = Astro.props
---

<Section class={cn("", className)} {...props}>
  <SectionContent class="max-w-screen-lg" align={align}>
    <SectionSplit align={align}>
      <SectionGroup>
        <Typography size={size} title={title} description={description} />
        <SectionActions align={align}>
          {
            buttons?.map((button, i) => (
              <Button
                variant={i === 0 ? "default" : "outline"}
                size={size}
                {...button}
              />
            ))
          }
        </SectionActions>
      </SectionGroup>
      <Image
        class="aspect-square rounded-lg object-cover"
        sizes="(max-width: 1024px) 100vw, 1024px"
        {...image}
      />
    </SectionSplit>
    <Typography>
      <slot />
    </Typography>
  </SectionContent>
</Section>
