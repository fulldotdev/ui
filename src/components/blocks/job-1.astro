---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Button } from "@/components/ui/button"
import { List, ListItem } from "@/components/ui/list"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionTypography,
} from "@/components/ui/section"

interface Props extends ComponentProps<typeof Section> {
  size?: ComponentProps<typeof SectionTypography>["size"]
  title?: string
  description?: string
  location?: string
  salary?: string
  hours?: string
  buttons?: ComponentProps<typeof Button>[]
}

const {
  class: className,
  align,
  size,
  title,
  description,
  location,
  salary,
  hours,
  buttons,
  ...props
} = Astro.props
---

<Section class={cn("", className)} {...props}>
  <SectionContent class="max-w-screen-md">
    <SectionTypography
      align={align}
      size={size}
      title={title}
      description={description}
    />
    <List>
      <ListItem>{location}</ListItem>
      <ListItem>{salary}</ListItem>
      <ListItem>{hours}</ListItem>
    </List>
    <SectionActions>
      {
        buttons?.map((button, i) => (
          <Button
            variant={i === 0 ? "default" : "outline"}
            size={size}
            {...button}
          />
        ))
      }
    </SectionActions>
    <SectionTypography size={size}>
      <slot />
    </SectionTypography>
  </SectionContent>
</Section>
