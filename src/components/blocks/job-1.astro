---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Button } from "@/components/ui/button"
import { List, ListItem } from "@/components/ui/list"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGroup,
} from "@/components/ui/section"
import { Typography } from "@/components/ui/typography"

interface Props extends ComponentProps<typeof Section> {
  size?: ComponentProps<typeof Typography>["size"]
  title?: string
  description?: string
  location?: string
  salary?: string
  hours?: string
  buttons?: ComponentProps<typeof Button>[]
}

const {
  class: className,
  align,
  size,
  title,
  description,
  location,
  salary,
  hours,
  buttons,
  ...props
} = Astro.props
---

<Section class={cn("", className)} {...props}>
  <SectionContent class="max-w-screen-md">
    <SectionGroup align={align}>
      <Typography
        size={size}
        align={align}
        title={title}
        description={description}
      />
      <List>
        <ListItem>{location}</ListItem>
        <ListItem>{salary}</ListItem>
        <ListItem>{hours}</ListItem>
      </List>
    </SectionGroup>
    <SectionActions>
      {
        buttons?.map((button, i) => (
          <Button
            variant={i === 0 ? "default" : "outline"}
            size={size}
            {...button}
          />
        ))
      }
    </SectionActions>
    <Typography size={size}>
      <slot />
    </Typography>
  </SectionContent>
</Section>
