---
import { Avatar, AvatarImage } from "@/components/ui/avatar"
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import { Image } from "@/components/ui/image"
import {
  Item,
  ItemContent,
  ItemDescription,
  ItemMedia,
} from "@/components/ui/item"
import { Rating } from "@/components/ui/rating"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGrid,
  SectionTypography,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileMedia,
  TileTypography,
} from "@/components/ui/tile"

interface Props {
  buttons?: {
    icon?: string
    text?: string
    href?: string
    target?: string
  }[]
  image?: {
    src: string
    alt: string
    title?: string
  }
  item?: {
    avatars?: {
      src: string
      alt: string
      title?: string
    }[]
    rating?: number
    description?: string
  }
  items?: {
    title?: string
    description?: string
    html?: string
    icon?: string
    button?: {
      text?: string
      href?: string
      target?: string
    }
  }[]
}

const { buttons, image, item, items } = Astro.props
---

<Section>
  <SectionContent>
    <SectionTypography size="lg">
      <slot />
    </SectionTypography>
    <SectionActions>
      {
        buttons?.map(({ icon, text, ...button }, i) => (
          <Button
            variant={i === 0 ? "default" : "outline"}
            size="lg"
            {...button}
          >
            {icon && <Icon name={icon} />}
            {text}
          </Button>
        ))
      }
    </SectionActions>
    <Item class="items-center p-0">
      <ItemMedia class="-space-x-4">
        {
          item?.avatars?.map((avatar) => (
            <Avatar class="ring-background size-10 ring-2">
              <AvatarImage {...avatar} />
            </Avatar>
          ))
        }
      </ItemMedia>
      <ItemContent class="gap-1.5">
        <Rating rating={item?.rating} />
        <ItemDescription class="leading-none">
          {item?.description}
        </ItemDescription>
      </ItemContent>
    </Item>
    <Image class="rounded-lg" {...image} />
    <SectionGrid class="gap-x-16">
      {
        items?.map(({ title, description, html, icon, button }) => (
          <Tile class="hover:bg-transparent" variant="default">
            <TileContent class="p-0">
              <TileMedia variant="icon">
                <Icon name={icon} />
              </TileMedia>
              <TileTypography
                size="lg"
                title={title}
                description={description}
                html={html}
              />
              <Button class="px-0" variant="link" size="lg" {...button} />
            </TileContent>
          </Tile>
        ))
      }
    </SectionGrid>
  </SectionContent>
</Section>
