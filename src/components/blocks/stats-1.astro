---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGrid,
  SectionGroup,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileDescription,
  TileMedia,
  TileTitle,
} from "@/components/ui/tile"
import { Typography } from "@/components/ui/typography"

interface Props extends ComponentProps<typeof Section> {
  size?: ComponentProps<typeof Typography>["size"]
  buttons?: ComponentProps<typeof Button>[]
  items?: {
    title?: string
    description?: string
    icon?: string
  }[]
}

const {
  class: className,
  align,
  order,
  size,
  buttons,
  items,
  ...props
} = Astro.props
---

<Section class={cn("", className)} {...props}>
  <SectionContent order={order}>
    <SectionGroup align={align}>
      <Typography size={size} align={align}>
        <slot />
      </Typography>
      <SectionActions align={align}>
        {
          buttons?.map((button, i) => (
            <Button
              variant={i === 0 ? "default" : "outline"}
              size={size}
              {...button}
            />
          ))
        }
      </SectionActions>
    </SectionGroup>
    <SectionGrid class="gap-x-16 gap-y-8">
      {
        items?.map(({ title, description, icon }) => (
          <Tile class="items-start">
            <TileContent class="p-0">
              <Icon class="text-primary" name={icon} />
              <TileTitle class="text-2xl">{title}</TileTitle>
              <TileDescription>{description}</TileDescription>
            </TileContent>
          </Tile>
        ))
      }
    </SectionGrid>
  </SectionContent>
</Section>
