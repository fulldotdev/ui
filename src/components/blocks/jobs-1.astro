---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Button } from "@/components/ui/button"
import { List, ListItem } from "@/components/ui/list"
import {
  Section,
  SectionActions,
  SectionContainer,
  SectionContent,
  SectionStack,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileDescription,
  TileTitle,
} from "@/components/ui/tile"
import { Typography } from "@/components/ui/typography"

interface Props extends ComponentProps<typeof Section> {
  buttons?: ComponentProps<typeof Button>[]
  jobs?: {
    href?: string
    title?: string
    description?: string
    published?: Date
    location?: string
    salary?: string
    hours?: string
  }[]
}

const { class: className, align, size, jobs, buttons, ...props } = Astro.props
---

<Section class={cn("", className)} size={size} align={align} {...props}>
  <SectionContainer class="max-w-screen-md">
    <SectionStack align={align}>
      <SectionContent align={align}>
        <Typography size={size} align={align}>
          <slot />
        </Typography>
        <SectionActions align={align}>
          {
            buttons?.map((button, i) => (
              <Button
                variant={i === 0 ? "default" : "outline"}
                size={size}
                {...button}
              />
            ))
          }
        </SectionActions>
      </SectionContent>
      {
        jobs && jobs.length > 0 && (
          <div class="flex w-full flex-col gap-4">
            {jobs.map(
              ({ href, title, description, location, salary, hours }) => {
                return (
                  <Tile href={href}>
                    <TileContent>
                      <TileTitle>{title}</TileTitle>
                      <TileDescription>{description}</TileDescription>
                      <List class="not-first:mt-4">
                        <ListItem>{location}</ListItem>
                        <ListItem>{salary}</ListItem>
                        <ListItem>{hours}</ListItem>
                      </List>
                    </TileContent>
                  </Tile>
                )
              }
            )}
          </div>
        )
      }
    </SectionStack>
  </SectionContainer>
</Section>
