---
import type { ComponentProps } from "astro/types"
import CircleCheck from "lucide-static/icons/circle-check.svg"
import X from "lucide-static/icons/x.svg"

import { cn } from "@/lib/utils"
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import { List, ListItem } from "@/components/ui/list"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGroup,
  SectionSplit,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileDescription,
  TileTitle,
} from "@/components/ui/tile"
import { Typography } from "@/components/ui/typography"

interface Props extends ComponentProps<typeof Section> {
  align?: ComponentProps<typeof Typography>["align"]
  size?: ComponentProps<typeof Typography>["size"]
  buttons?: ComponentProps<typeof Button>[]
  items?: {
    title?: string
    description?: string
    list?: string[]
  }[]
}

const { class: className, align, size, buttons, items, ...props } = Astro.props
---

<Section class={cn("", className)} {...props}>
  <SectionContent align={align}>
    <SectionGroup align={align}>
      <Typography size={size} align={align}>
        <slot />
      </Typography>
      <SectionActions align={align}>
        {
          buttons?.map((button, i) => (
            <Button
              variant={i === 0 ? "default" : "outline"}
              size={size}
              {...button}
            />
          ))
        }
      </SectionActions>
    </SectionGroup>
    {
      items && items.length > 0 && (
        <SectionSplit class="before:bg-border relative gap-8 before:absolute before:left-5.5 before:h-full before:w-px before:lg:top-5.5 before:lg:h-px before:lg:w-full">
          {items?.map(({ title, description, list }, i) => (
            <Tile class="items-start gap-8 gap-x-4 max-lg:flex-row">
              <Icon
                class="bg-accent text-accent-foreground flex size-10 shrink-0 items-center justify-center rounded-full"
                name={i + 1}
              />
              <TileContent class="p-0">
                <TileTitle class="not-first:mt-4">{title}</TileTitle>
                <TileDescription>{description}</TileDescription>
                <List
                  class={`not-first:mt-4 ${i === 0 ? "text-muted-foreground" : "text-foreground"}`}
                >
                  {list?.map((item) => (
                    <ListItem>
                      {i === 0 ? <X /> : <CircleCheck />}
                      {item}
                    </ListItem>
                  ))}
                </List>
              </TileContent>
            </Tile>
          ))}
        </SectionSplit>
      )
    }
  </SectionContent>
</Section>
