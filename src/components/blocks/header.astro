---
import { type HeaderSchema } from "@/schemas/blocks/header"
import { transformImage } from "@/lib/transform-image"
import Header1 from "@/components/blocks/header-1"

type Props = HeaderSchema

const { variant, logo, ...schema } = Astro.props

const props = {
  ...schema,
  logo: await transformImage(logo),
}
---

{variant === "1" && <Header1 client:load {...props} />}
