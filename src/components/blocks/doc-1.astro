---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Avatar, AvatarImage } from "@/components/ui/avatar"
import { Image } from "@/components/ui/image"
import {
  Item,
  ItemContent,
  ItemDescription,
  ItemMedia,
  ItemTitle,
} from "@/components/ui/item"
import { Section, SectionContent, SectionGroup } from "@/components/ui/section"
import { Typography } from "@/components/ui/typography"

interface Props extends ComponentProps<typeof Section> {
  size?: ComponentProps<typeof Typography>["size"]
  title?: ComponentProps<typeof Typography>["title"]
  description?: ComponentProps<typeof Typography>["description"]
  image?: ComponentProps<typeof Image>
  person?: {
    href?: ComponentProps<typeof Item>["href"]
    avatar?: ComponentProps<typeof Avatar>
    title?: string
    tagline?: string
  }
}

const {
  class: className,
  align,
  size,
  title,
  description,
  image,
  person,
  ...props
} = Astro.props
---

<Section class={cn("", className)} {...props}>
  <SectionContent class="max-w-screen-md" align={align}>
    <SectionGroup align={align}>
      <Typography
        size={size}
        align={align}
        title={title}
        description={description}
      />
    </SectionGroup>
    <Typography>
      <slot />
    </Typography>
  </SectionContent>
</Section>
