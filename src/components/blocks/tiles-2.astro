---
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import { Image } from "@/components/ui/image"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGrid,
  SectionTypography,
} from "@/components/ui/section"
import { Tile, TileContent, TileMedia } from "@/components/ui/tile"

interface Props {
  links?: {
    text?: string
    href?: string
    icon?: string
    target?: string
  }[]
  items?: {
    html?: string
    image?: {
      src: string
      alt: string
    }
    links?: {
      icon?: string
      text?: string
      href?: string
      target?: string
    }[]
  }[]
}

const { links, items } = Astro.props
---

<Section>
  <SectionContent>
    <SectionTypography>
      <slot />
    </SectionTypography>
    <SectionActions>
      {
        links?.map(({ text, icon, href, target }, i) => (
          <Button
            variant={i === 0 ? "default" : "outline"}
            href={href}
            target={target}
          >
            {icon && <Icon name={icon} />}
            {text}
          </Button>
        ))
      }
    </SectionActions>
  </SectionContent>

  <SectionGrid size="lg">
    {
      items?.map(({ html, image, links }) => (
        <Tile class="aspect-4/3 justify-end rounded-md bg-black" frame="panel">
          <TileMedia
            variant="background"
            class="mask-b-from-0% mask-b-to-black/50 opacity-100"
          >
            <Image {...image} />
          </TileMedia>
          <TileContent class="w-full">
            <SectionTypography html={html} />
            <SectionActions>
              {links?.map(({ text, icon, href, target }, i) => (
                <Button
                  variant={i === 0 ? "default" : "outline"}
                  href={href}
                  target={target}
                  size="sm"
                >
                  {icon && <Icon name={icon} />}
                  {text}
                </Button>
              ))}
            </SectionActions>
          </TileContent>
        </Tile>
      ))
    }
  </SectionGrid>
</Section>
