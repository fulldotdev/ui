---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Button } from "@/components/ui/button"
import { Form } from "@/components/ui/form"
import { Icon } from "@/components/ui/icon"
import {
  Item,
  ItemContent,
  ItemDescription,
  ItemGroup,
  ItemMedia,
  ItemTitle,
} from "@/components/ui/item"
import {
  Section,
  SectionContainer,
  SectionContent,
  SectionPanel,
  SectionSplit,
} from "@/components/ui/section"
import { Typography } from "@/components/ui/typography"

interface Props extends ComponentProps<typeof Section> {
  buttons?: ComponentProps<typeof Button>[]
  channels?: {
    title?: string
    description?: string
    variant?: ComponentProps<typeof Item>["variant"]
    href?: ComponentProps<typeof Button>["href"]
    icon?: ComponentProps<typeof Icon>["name"]
  }[]
  form?: any
}

const {
  class: className,
  align,
  size,
  buttons,
  channels,
  form,
  variant,
  ...props
} = Astro.props
---

<Section class={cn("", className)} size={size} align={align} {...props}>
  <SectionContainer>
    <SectionPanel variant={variant}>
      <SectionSplit align={align}>
        <SectionContent>
          <Typography size={size}>
            <slot />
          </Typography>
          <ItemGroup class="min-w-2xs gap-2">
            {
              channels?.map(
                ({ title, description, href, icon, variant = "muted" }) => (
                  <Item variant={variant} href={href}>
                    <ItemMedia variant="icon">
                      <Icon name={icon} />
                    </ItemMedia>
                    <ItemContent>
                      <ItemTitle>{title}</ItemTitle>
                      <ItemDescription>{description}</ItemDescription>
                    </ItemContent>
                  </Item>
                )
              )
            }
          </ItemGroup>
        </SectionContent>
        <Form {...form} />
      </SectionSplit>
    </SectionPanel>
  </SectionContainer>
</Section>
