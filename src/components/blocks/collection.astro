type Props = BlogSchema

const { variant = "1", id, ...block } = Astro.props

const productsData = (
  await getCollection("products", (product) =>
    product.data.collections?.some((collection) => collection.id === id)
  )
).map((product) => ({
  href: `/products/${product.id}/`,
  ...product.data,
}))
