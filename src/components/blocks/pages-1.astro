---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Button } from "@/components/ui/button"
import { Image } from "@/components/ui/image"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGrid,
  SectionGroup,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileDescription,
  TileTitle,
} from "@/components/ui/tile"
import { Typography } from "@/components/ui/typography"

interface Props extends ComponentProps<typeof Section> {
  size?: ComponentProps<typeof Typography>["size"]
  buttons?: ComponentProps<typeof Button>[]
  items?: {
    href?: string
    title?: string
    description?: string
    image?: ComponentProps<typeof Image>
  }[]
}

const { class: className, align, size, buttons, items, ...props } = Astro.props
---

<Section class={cn("", className)} {...props}>
  <SectionContent align={align}>
    <SectionGroup align={align}>
      <Typography class="not-first:mt-4" size={size}>
        <slot />
      </Typography>
      <SectionActions class="not-first:mt-8 not-last:mb-4">
        {
          buttons?.map((button, i) => (
            <Button
              variant={i === 0 ? "default" : "outline"}
              size={size}
              {...button}
            />
          ))
        }
      </SectionActions>
    </SectionGroup>
    <SectionGrid class="gap-4">
      {
        items?.map(({ title, description, image, href }) => (
          <Tile href={href} class="group flex flex-col items-start">
            <Image
              class="aspect-4/3 rounded-lg object-cover transition-opacity group-hover:opacity-75"
              sizes="200px"
              {...image}
            />
            <TileContent class="flex flex-col gap-2 not-first:mt-4">
              <TileTitle>{title}</TileTitle>
              <TileDescription>{description}</TileDescription>
            </TileContent>
          </Tile>
        ))
      }
    </SectionGrid>
  </SectionContent>
</Section>
