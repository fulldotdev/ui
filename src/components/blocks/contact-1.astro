---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Button } from "@/components/ui/button"
import { Form } from "@/components/ui/form"
import { Icon } from "@/components/ui/icon"
import {
  Item,
  ItemContent,
  ItemDescription,
  ItemGroup,
  ItemMedia,
  ItemTitle,
} from "@/components/ui/item"
import {
  Section,
  SectionContent,
  SectionTypography,
} from "@/components/ui/section"

interface Props extends ComponentProps<typeof Section> {
  size?: ComponentProps<typeof SectionTypography>["size"]
  form?: any
  items?: {
    title?: string
    description?: string
    variant?: ComponentProps<typeof Item>["variant"]
    href?: ComponentProps<typeof Button>["href"]
    icon?: ComponentProps<typeof Icon>["name"]
  }[]
}

const {
  class: className,
  align,
  order,
  size,
  form,
  items,
  ...props
} = Astro.props
---

<Section class={cn("", className)} align={align} order={order} {...props}>
  <SectionContent align={align}>
    <SectionTypography align={align} size={size}>
      <slot />
    </SectionTypography>
    <ItemGroup class="gap-4">
      {
        items?.map(({ title, description, href, icon, variant = "muted" }) => (
          <Item variant={variant} href={href}>
            <ItemMedia variant="icon">
              <Icon name={icon} href={href} />
            </ItemMedia>
            <ItemContent>
              <ItemTitle>{title}</ItemTitle>
              <ItemDescription>{description}</ItemDescription>
            </ItemContent>
          </Item>
        ))
      }
    </ItemGroup>
  </SectionContent>
  <Form {...form} />
</Section>
