---
import { Image } from "@/components/ui/image"
import {
  Section,
  SectionContent,
  SectionGrid,
  SectionProse,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileDescription,
  TileMedia,
  TileSpread,
  TileTitle,
} from "@/components/ui/tile"

interface Props {
  title?: string
  description?: string
  price?: string | number
  items?: {
    title?: string
    description?: string
    price?: string
    unit?: string
    image?: {
      src?: string
      alt?: string
    }
  }[]
}

const { items } = Astro.props
---

<Section>
  <SectionContent>
    <SectionProse>
      <slot />
    </SectionProse>
  </SectionContent>
  <SectionGrid size="lg">
    {
      items?.map(({ title, description, price, image }) => (
        <Tile class="m-0 rounded-none border-t p-0 pt-6">
          <TileSpread>
            <TileContent>
              <TileTitle>{title}</TileTitle>
              <TileDescription>{description}</TileDescription>
            </TileContent>
            <p>{price}</p>
          </TileSpread>
        </Tile>
      ))
    }
  </SectionGrid>
</Section>
