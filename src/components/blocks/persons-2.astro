---
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import { Image } from "@/components/ui/image"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGrid,
  SectionProse,
  SectionSplit,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileDescription,
  TileMedia,
  TileTitle,
} from "@/components/ui/tile"

interface Props {
  links?: {
    icon?: string
    text?: string
    href?: string
    target?: string
  }[]
  items?: {
    title?: string
    description?: string
    html?: string
    image?: {
      src: string
      alt: string
      title?: string
    }
  }[]
}

const { links, items } = Astro.props
---

<Section>
  <SectionSplit>
    <SectionContent class="xl:col-span-2">
      <SectionProse>
        <slot />
      </SectionProse>
      <SectionActions>
        {
          links?.map(({ icon, text, ...button }, i) => (
            <Button variant={i === 0 ? "default" : "outline"} {...button}>
              {icon && <Icon name={icon} />}
              {text}
            </Button>
          ))
        }
      </SectionActions>
    </SectionContent>
    <SectionGrid class="xl:col-span-3">
      {
        items?.map(({ title, description, html, image }) => (
          <Tile>
            <TileContent>
              <TileMedia variant="icon">
                <Image {...image} />
              </TileMedia>
              <TileTitle>{title}</TileTitle>
              {description && <TileDescription>{description}</TileDescription>}
              {html && (
                <p class="text-muted-foreground text-sm" set:html={html} />
              )}
            </TileContent>
          </Tile>
        ))
      }
    </SectionGrid>
  </SectionSplit>
</Section>
