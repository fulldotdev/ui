---
import { cn } from "@/lib/utils"
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import { Image } from "@/components/ui/image"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionMedia,
  SectionProse,
  SectionSpread,
} from "@/components/ui/section"

interface Props {
  class?: string
  id?: string
  links?: {
    icon?: string
    text?: string
    href?: string
    target?: string
  }[]
  image?: {
    src: string
    alt: string
    title?: string
  }
}

const { class: className, id, links, image } = Astro.props
---

<Section class={cn("", className)} variant="floating" id={id}>
  <SectionSpread class="@5xl:items-center">
    <SectionContent>
      <SectionProse>
        <slot />
      </SectionProse>
    </SectionContent>
    <SectionContent>
      <SectionActions>
        {
          links?.map(({ icon, text, ...button }, i) => (
            <Button variant={i === 0 ? "default" : "outline"} {...button}>
              {icon && <Icon name={icon} />}
              {text}
            </Button>
          ))
        }
      </SectionActions>
    </SectionContent>
  </SectionSpread>
  <SectionMedia class="absolute inset-0 size-full opacity-50">
    <Image {...image} />
  </SectionMedia>
</Section>
