---
import { Button } from "@/components/ui/button"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionSplit,
  SectionTypography,
} from "@/components/ui/section"

interface Props {
  buttons?: {
    icon?: string
    text?: string
    href?: string
    target?: string
  }[]
  src?: string
}

const { buttons, src } = Astro.props
---

<Section>
  <SectionContent class="container">
    <SectionSplit>
      <div>
        <SectionTypography align="start" size="lg">
          <slot />
        </SectionTypography>
        <SectionActions>
          {
            buttons?.map(({ icon, text, ...button }, i) => (
              <Button variant={i === 0 ? "default" : "outline"} size="lg" {...button}>
                {icon && <Icon name={icon} />}
                {text}
              </Button>
            ))
          }
        </SectionActions>
      </div>
      <iframe
        src={src}
        width="640"
        height="480"
        class="bg-muted aspect-video h-full w-full overflow-hidden rounded-lg"
      ></iframe>
    </SectionSplit>
  </SectionContent>
</Section>
