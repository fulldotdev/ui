---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Button } from "@/components/ui/button"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionSplit,
  SectionTypography,
} from "@/components/ui/section"

interface Props extends ComponentProps<typeof Section> {
  size?: ComponentProps<typeof SectionTypography>["size"]
  buttons?: ComponentProps<typeof Button>[]
  src?: string
}

const { class: className, align, size, buttons, src, ...props } = Astro.props
---

<Section class={cn("", className)} {...props}>
  <SectionContent class="container">
    <SectionSplit align={align}>
      <div>
        <SectionTypography align="start" size={size}>
          <slot />
        </SectionTypography>
        <SectionActions>
          {
            buttons?.map((button, i) => (
              <Button
                variant={i === 0 ? "default" : "outline"}
                size={size}
                {...button}
              />
            ))
          }
        </SectionActions>
      </div>
      <iframe
        src={src}
        width="640"
        height="480"
        class="bg-muted aspect-video h-full w-full overflow-hidden rounded-lg"
      ></iframe>
    </SectionSplit>
  </SectionContent>
</Section>
