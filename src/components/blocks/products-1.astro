---
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import { Image } from "@/components/ui/image"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGrid,
  SectionProse,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileDescription,
  TileMedia,
  TileTitle,
} from "@/components/ui/tile"

interface Props {
  title?: string
  description?: string
  links?: {
    icon?: string
    text?: string
    href?: string
    target?: string
  }[]
  items?: {
    href?: string
    image?: {
      src: string
      alt: string
    }
    title?: string
    description?: string
    icon?: string
  }[]
}

const { links, items, title, description } = Astro.props
---

<Section>
  <SectionContent>
    <SectionProse title={title} description={description}>
      <slot />
    </SectionProse>
    <SectionActions>
      {
        links?.map(({ icon, text, ...button }, i) => (
          <Button variant={i === 0 ? "default" : "outline"} {...button}>
            {icon && <Icon name={icon} />}
            {text}
          </Button>
        ))
      }
    </SectionActions>
  </SectionContent>
  <SectionGrid>
    {
      items?.map(({ title, description, image, href }) => (
        <Tile href={href} frame="panel">
          <TileMedia>
            <Image class="aspect-video" {...image} />
          </TileMedia>
          <TileContent>
            <TileTitle>{title}</TileTitle>
            <TileDescription>{description}</TileDescription>
          </TileContent>
        </Tile>
      ))
    }
  </SectionGrid>
</Section>
