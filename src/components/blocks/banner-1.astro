---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Banner, BannerContainer, BannerContent } from "@/components/ui/banner"

interface Props extends ComponentProps<typeof Banner> {}

const { class: className, align, ...props } = Astro.props
---

<Banner class={cn("", className)} {...props}>
  <BannerContainer>
    <BannerContent align={align}>
      <slot />
    </BannerContent>
  </BannerContainer>
</Banner>
