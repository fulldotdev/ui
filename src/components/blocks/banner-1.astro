---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import Container from "@/components/elements/container.astro"
import Header from "@/components/elements/header.astro"

interface Props extends ComponentProps<typeof Header> {}

const { class: className, ...props } = Astro.props
---

<Header class={cn("bg-primary", className)} {...props}>
  <Container
    class="text-primary-foreground justify-center text-center text-sm font-medium"
  >
    <slot />
  </Container>
</Header>
