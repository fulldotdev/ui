---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import HeaderContainer from "@/components/ui/header-container.astro"
import Header from "@/components/ui/header.astro"

interface Props extends ComponentProps<typeof Header> {}

const { class: className, ...props } = Astro.props
---

<Header class={cn("bg-primary", className)} {...props}>
  <HeaderContainer
    class="text-primary-foreground justify-center text-center text-sm font-medium"
  >
    <slot />
  </HeaderContainer>
</Header>
