---
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import { Image } from "@/components/ui/image"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGrid,
  SectionTypography,
} from "@/components/ui/section"

interface Props {
  id?: string
  title?: string
  description?: string
  buttons?: {
    icon?: string
    text?: string
    href?: string
    target?: string
  }[]
  image?: {
    src: string
    alt: string
    title?: string
  }
}

const { id, title, description, buttons, image } = Astro.props
---

<Section id={id} width="sm">
  <SectionContent>
    <SectionTypography title={title} description={description} />
    <SectionActions>
      {
        buttons?.map(({ icon, text, ...button }, i) => (
          <Button variant={i === 0 ? "default" : "outline"} {...button}>
            {icon && <Icon name={icon} />}
            {text}
          </Button>
        ))
      }
    </SectionActions>
  </SectionContent>
  <SectionGrid>
    <Image {...image} />
    <Image {...image} />
    <Image {...image} />
  </SectionGrid>
  <SectionTypography>
    <slot />
  </SectionTypography>
</Section>
