---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Button } from "@/components/ui/button"
import { Image } from "@/components/ui/image"
import { Pattern } from "@/components/ui/pattern"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGroup,
  SectionSplit,
} from "@/components/ui/section"
import { Typography } from "@/components/ui/typography"

interface Props extends ComponentProps<typeof Section> {
  size?: ComponentProps<typeof Typography>["size"]
  buttons?: ComponentProps<typeof Button>[]
  image?: ComponentProps<typeof Image>
}

const { class: className, buttons, align, size, image, ...props } = Astro.props
---

<Section class={cn("", className)} {...props}>
  <SectionContent>
    <SectionSplit align={align}>
      <SectionGroup>
        <Typography size={size}>
          <slot />
        </Typography>
        <SectionActions>
          {
            buttons?.map((button, i) => (
              <Button
                variant={i === 0 ? "default" : "outline"}
                size={size}
                {...button}
              />
            ))
          }
        </SectionActions>
      </SectionGroup>
    </SectionSplit>
  </SectionContent>
  <Image
    class="h-full lg:absolute lg:left-1/2 lg:w-1/2 lg:max-w-5xl lg:object-cover"
    {...image}
  />
</Section>
