---
import { Avatar, AvatarImage } from "@/components/ui/avatar"
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import { Image } from "@/components/ui/image"
import {
  Item,
  ItemContent,
  ItemDescription,
  ItemMedia,
} from "@/components/ui/item"
import { List, ListItem } from "@/components/ui/list"
import { Rating } from "@/components/ui/rating"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionMedia,
  SectionSplit,
  SectionTypography,
} from "@/components/ui/section"

interface Props {
  list?: string[]
  buttons?: {
    icon?: string
    text?: string
    href?: string
    target?: string
  }[]
  image?: {
    src: string
    alt: string
    title?: string
  }
  item?: {
    avatars?: {
      src: string
      alt: string
      title?: string
    }[]
    rating?: number
    description?: string
  }
}

const { list, buttons, image, item } = Astro.props
---

<Section>
  <SectionSplit>
    <SectionContent class="lg:col-span-3">
      <SectionTypography size="lg">
        <slot />
      </SectionTypography>
      <SectionActions>
        {
          buttons?.map(({ icon, text, ...button }, i) => (
            <Button variant={i === 0 ? "default" : "outline"} size="lg" {...button}>
              {icon && <Icon name={icon} />}
              {text}
            </Button>
          ))
        }
      </SectionActions>
    </SectionContent>
    <SectionContent class="lg:col-span-2">
      <List>
        {
          list?.map((item) => (
            <ListItem>
              <Icon name="check" />
              {item}
            </ListItem>
          ))
        }
      </List>
      <Item class="items-center p-0">
        <ItemMedia class="-space-x-4">
          {
            item?.avatars?.map((avatar) => (
              <Avatar class="ring-background size-10 ring-2">
                <AvatarImage {...avatar} />
              </Avatar>
            ))
          }
        </ItemMedia>
        <ItemContent class="gap-1.5">
          <Rating rating={item?.rating} />
          <ItemDescription class="leading-none">
            {item?.description}
          </ItemDescription>
        </ItemContent>
      </Item>
    </SectionContent>
  </SectionSplit>
  <SectionMedia variant="inset">
    <Image {...image} />
  </SectionMedia>
</Section>
