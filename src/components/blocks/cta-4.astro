---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Avatar, AvatarImage } from "@/components/ui/avatar"
import { Button } from "@/components/ui/button"
import { Image } from "@/components/ui/image"
import {
  Item,
  ItemContent,
  ItemDescription,
  ItemMedia,
} from "@/components/ui/item"
import { Rating } from "@/components/ui/rating"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGroup,
  SectionSplit,
} from "@/components/ui/section"
import { Typography } from "@/components/ui/typography"

interface Props extends ComponentProps<typeof Section> {
  size?: ComponentProps<typeof Typography>["size"]
  buttons?: ComponentProps<typeof Button>[]
  image?: ComponentProps<typeof Image>
  item?: {
    avatars?: ComponentProps<typeof Avatar>[]
    rating?: ComponentProps<typeof Rating>["rating"]
    description?: string
  }
}

const {
  class: className,
  align,
  order,
  size,
  buttons,
  image,
  item,
  ...props
} = Astro.props
---

<Section class={cn("grid", className)} {...props}>
  <SectionContent class="lg:col-start-1 lg:row-start-1">
    <SectionSplit class="z-10 h-full" align={align} order={order}>
      <SectionGroup>
        <Typography size={size}>
          <slot />
        </Typography>
        <SectionActions>
          {
            buttons?.map((button, i) => (
              <Button
                variant={i === 0 ? "default" : "outline"}
                size={size}
                {...button}
              />
            ))
          }
        </SectionActions>
        <Item class="items-center p-0">
          <ItemMedia class="-space-x-4">
            {
              item?.avatars?.map((avatar) => (
                <Avatar class="ring-background size-10 ring-2">
                  <AvatarImage {...avatar} />
                </Avatar>
              ))
            }
          </ItemMedia>
          <ItemContent class="gap-1.5">
            <Rating rating={item?.rating} />
            <ItemDescription class="leading-none">
              {item?.description}
            </ItemDescription>
          </ItemContent>
        </Item>
      </SectionGroup>
    </SectionSplit>
  </SectionContent>
  <SectionSplit
    class="mx-auto max-w-screen-2xl lg:col-start-1 lg:row-start-1"
    order={order === "reverse" ? "default" : "reverse"}
  >
    <Image class="size-full object-cover 2xl:rounded-lg" {...image} />
  </SectionSplit>
</Section>
