---
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import { Image } from "@/components/ui/image"
import { List, ListItem } from "@/components/ui/list"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionMedia,
  SectionSplit,
  SectionTypography,
} from "@/components/ui/section"

interface Props {
  list?: string[]
  links?: {
    icon?: string
    text?: string
    href?: string
    target?: string
  }[]
  image?: {
    src: string
    alt: string
    title?: string
  }
}

const { list, links, image } = Astro.props
---

<Section>
  <SectionSplit>
    <SectionContent>
      <SectionTypography>
        <slot />
      </SectionTypography>
      <List>
        {
          list?.map((item) => (
            <ListItem>
              <Icon name="check" />
              {item}
            </ListItem>
          ))
        }
      </List>
      <SectionActions>
        {
          links?.map(({ icon, text, ...button }, i) => (
            <Button variant={i === 0 ? "default" : "outline"} {...button}>
              {icon && <Icon name={icon} />}
              {text}
            </Button>
          ))
        }
      </SectionActions>
    </SectionContent>
    <SectionMedia>
      <Image {...image} />
    </SectionMedia>
  </SectionSplit>
</Section>
