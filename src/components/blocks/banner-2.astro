---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import {
  Banner,
  BannerContainer,
  BannerContent,
  BannerPanel,
} from "@/components/ui/banner"

interface Props extends ComponentProps<typeof Banner> {
  align?: ComponentProps<typeof BannerContent>["align"]
}

const { class: className, align, variant, ...props } = Astro.props
---

<Banner class={cn("", className)} variant="ghost" {...props}>
  <BannerContainer>
    <BannerPanel variant={variant}>
      <BannerContainer>
        <BannerContent align={align}>
          <slot />
        </BannerContent>
      </BannerContainer>
    </BannerPanel>
  </BannerContainer>
</Banner>
