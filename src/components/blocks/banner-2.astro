---
import {
  Banner,
  BannerClose,
  BannerContent,
  BannerDescription,
  BannerTitle,
} from "@/components/ui/banner"

interface Props {
  title?: string
  description?: string
}

const { title, description } = Astro.props
---

<Banner>
  <BannerContent class="relative w-full justify-center">
    <BannerTitle>{title}</BannerTitle>
    <BannerDescription>{description}</BannerDescription>
    <BannerClose class="absolute top-1/2 right-0 -translate-y-1/2" />
  </BannerContent>
</Banner>
