---
import { Avatar, AvatarImage } from "@/components/ui/avatar"
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import { Image } from "@/components/ui/image"
import {
  Item,
  ItemContent,
  ItemDescription,
  ItemMedia,
} from "@/components/ui/item"
import { Rating } from "@/components/ui/rating"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionMedia,
  SectionSpread,
  SectionTypography,
} from "@/components/ui/section"

interface Props {
  links?: {
    icon?: string
    text?: string
    href?: string
    target?: string
  }[]
  image?: {
    src: string
    alt: string
    title?: string
  }
  item?: {
    images?: {
      src: string
      alt: string
    }[]
    rating?: number
    description?: string
  }
}

const { links, image, item } = Astro.props
---

<Section frame="panel">
  <SectionSpread>
    <SectionContent>
      <SectionTypography>
        <slot />
      </SectionTypography>
      <Item class="-m-4">
        <ItemMedia class="-space-x-4">
          {
            item?.images?.map((image) => (
              <Avatar class="ring-background size-10 ring-2">
                <AvatarImage {...image} />
              </Avatar>
            ))
          }
        </ItemMedia>
        <ItemContent>
          <Rating rating={item?.rating} />
          <ItemDescription>
            {item?.description}
          </ItemDescription>
        </ItemContent>
      </Item>
    </SectionContent>
    <SectionContent>
      <SectionActions>
        {
          links?.map(({ icon, text, ...button }, i) => (
            <Button variant={i === 0 ? "default" : "outline"} {...button}>
              {icon && <Icon name={icon} />}
              {text}
            </Button>
          ))
        }
      </SectionActions>
    </SectionContent>
  </SectionSpread>
  <SectionMedia variant="background">
    <Image {...image} />
  </SectionMedia>
</Section>
