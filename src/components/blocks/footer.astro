---
import { type FooterSchema } from "@/schemas/blocks/footer"
import Footer1 from "@/components/blocks/footer-1"
import Footer2 from "@/components/blocks/footer-2"

type Props = FooterSchema

const { variant = "1", ...block } = Astro.props
---

{variant === "1" && <Footer1 {...block} />}

{variant === "2" && <Footer2 {...block} />}
