---
import type { FooterSchema } from "@/schemas/blocks/footer"
import { transformImage } from "@/lib/transform-image"
import Footer1 from "@/components/blocks/footer-1"

type Props = FooterSchema

const { variant, logo, ...schema } = Astro.props

const props = {
  ...schema,
  logo: await transformImage(logo),
}
---

{variant === "1" && <Footer1 {...props} />}
