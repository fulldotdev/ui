---
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import { List, ListItem } from "@/components/ui/list"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionSpread,
  SectionTypography,
} from "@/components/ui/section"
import { Tile, TileContent, TileTypography } from "@/components/ui/tile"

interface Props {
  buttons?: {
    icon?: string
    text?: string
    href?: string
    target?: string
  }[]
  items?: {
    title?: string
    description?: string
    icon?: string
    list?: string[]
    button?: {
      text?: string
      href?: string
      target?: string
    }
    price?: string
    unit?: string
  }[]
}

const { buttons, items } = Astro.props
---

<Section>
  <SectionContent>
    <SectionTypography>
      <slot />
    </SectionTypography>
    <SectionActions>
      {
        buttons?.map(({ icon, text, ...button }, i) => (
          <Button variant={i === 0 ? "default" : "outline"} {...button}>
            {icon && <Icon name={icon} />}
            {text}
          </Button>
        ))
      }
    </SectionActions>
  </SectionContent>
  <SectionSpread>
    {
      items?.map(({ title, description, button, list, price, unit }) => (
        <Tile>
          <TileContent>
            <TileTypography title={title} description={description} />
            {(price || unit) && (
              <div class="font-semibold">
                {price && <span class="text-foreground text-2xl">{price}</span>}
                {unit && (
                  <span class="text-muted-foreground ml-1.5 text-sm font-normal">
                    / {unit}
                  </span>
                )}
              </div>
            )}
            <List>
              {list?.map((item) => (
                <ListItem>{item}</ListItem>
              ))}
            </List>
            <Button class="mt-auto w-full" {...button} />
          </TileContent>
        </Tile>
      ))
    }
  </SectionSpread>
</Section>
