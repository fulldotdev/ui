---
import { Form } from "@/components/ui/form"
import { Icon } from "@/components/ui/icon"
import {
  Item,
  ItemContent,
  ItemDescription,
  ItemGroup,
  ItemMedia,
  ItemTitle,
} from "@/components/ui/item"
import {
  Section,
  SectionContent,
  SectionProse,
  SectionSplit,
} from "@/components/ui/section"

interface Props {
  form?: any
  items?: {
    icon?: string
    title?: string
    description?: string
    href?: string
  }[]
}

const { form, items } = Astro.props
---

<Section>
  <SectionSplit align="sticky">
    <SectionContent>
      <SectionProse>
        <slot />
      </SectionProse>
      <ItemGroup class="max-w-lg gap-4">
        {
          items?.map(({ icon, title, description, href }) => (
            <Item href={href} variant="muted">
              <ItemMedia variant="icon">
                <Icon name={icon} href={href} />
              </ItemMedia>
              <ItemContent>
                <ItemTitle>{title}</ItemTitle>
                <ItemDescription>{description}</ItemDescription>
              </ItemContent>
            </Item>
          ))
        }
      </ItemGroup>
    </SectionContent>
    <Form {...form} />
  </SectionSplit>
</Section>
