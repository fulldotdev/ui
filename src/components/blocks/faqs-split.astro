---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import {
  Accordion,
  AccordionContent,
  AccordionItem,
  AccordionTrigger,
} from "@/components/ui/accordion"
import { Button } from "@/components/ui/button"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGroup,
  SectionSplit,
} from "@/components/ui/section"
import { Typography } from "@/components/ui/typography"

interface Props extends ComponentProps<typeof Section> {
  size?: ComponentProps<typeof Typography>["size"]
  buttons?: ComponentProps<typeof Button>[]
  items?: {
    title?: string
    description?: string
  }[]
}

const {
  class: className,
  align,
  order,
  size,
  buttons,
  items,
  ...props
} = Astro.props
---

<Section class={cn("", className)} {...props}>
  <SectionContent>
    <SectionSplit align={align} order={order}>
      <SectionGroup>
        <Typography class="text-balance" size={size}>
          <slot />
        </Typography>
        <SectionActions>
          {
            buttons?.map((button, i) => (
              <Button
                variant={i === 0 ? "default" : "outline"}
                size={size}
                {...button}
              />
            ))
          }
        </SectionActions>
      </SectionGroup>
      {
        items && items.length > 0 && (
          <Accordion class="w-full">
            {items?.map(({ title, description }) => (
              <AccordionItem>
                <AccordionTrigger>{title}</AccordionTrigger>
                <AccordionContent>{description}</AccordionContent>
              </AccordionItem>
            ))}
          </Accordion>
        )
      }
    </SectionSplit>
  </SectionContent>
</Section>
