---
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGrid,
  SectionTypography,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileMedia,
  TileTypography,
} from "@/components/ui/tile"

interface Props {
  buttons?: {
    icon?: string
    text?: string
    href?: string
    target?: string
  }[]
  items?: {
    title?: string
    description?: string
    html?: string
    icon?: string
    href?: string
    buttons?: {
      icon?: string
      text?: string
      href?: string
      target?: string
    }[]
  }[]
}

const { buttons, items } = Astro.props
---

<Section>
  <SectionContent>
    <SectionTypography>
      <slot />
    </SectionTypography>
    <SectionActions>
      {
        buttons?.map(({ icon, text, ...button }, i) => (
          <Button variant={i === 0 ? "default" : "outline"} {...button}>
            {icon && <Icon name={icon} />}
            {text}
          </Button>
        ))
      }
    </SectionActions>
  </SectionContent>
  <SectionGrid>
    {
      items?.map(({ title, description, html, icon, buttons, href }) => (
        <Tile href={href}>
          <TileMedia variant="icon">
            <Icon name={icon} />
          </TileMedia>
          <TileContent>
            <TileTypography
              title={title}
              description={description}
              html={html}
            />
            {buttons?.map(({ icon, text, href, target }, i) => (
              <Button class="-mx-4" variant="link" href={href} target={target}>
                {icon && <Icon name={icon} />}
                {text}
              </Button>
            ))}
          </TileContent>
        </Tile>
      ))
    }
  </SectionGrid>
</Section>
