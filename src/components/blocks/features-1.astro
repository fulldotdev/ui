---
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import { Image } from "@/components/ui/image"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGrid,
  SectionTypography,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileMedia,
  TileTypography,
} from "@/components/ui/tile"

interface Props {
  buttons?: {
    icon?: string
    text?: string
    href?: string
    target?: string
  }[]
  items?: {
    title?: string
    description?: string
    html?: string
    icon?: string
    button?: {
      text?: string
      href?: string
      target?: string
    }
    image?: {
      src: string
      alt: string
      title?: string
    }
  }[]
}

const { buttons, items } = Astro.props
---

<Section>
  <SectionContent>
    <SectionTypography size="lg">
      <slot />
    </SectionTypography>
    <SectionActions>
      {
        buttons?.map(({ icon, text, ...button }, i) => (
          <Button
            variant={i === 0 ? "default" : "outline"}
            size="lg"
            {...button}
          >
            {icon && <Icon name={icon} />}
            {text}
          </Button>
        ))
      }
    </SectionActions>
  </SectionContent>
  <SectionGrid position="inset">
    {
      items?.map(({ title, description, html, icon, image, button }) => (
        <Tile variant="default">
          <TileMedia position="top">
            <Image {...image} />
          </TileMedia>
          <Icon class="bg-muted size-9 rounded-sm border p-2" name={icon} />
          <TileContent>
            <TileTypography
              size="lg"
              title={title}
              description={description}
              html={html}
            />
            <Button class="px-0" variant="link" size="lg" {...button} />
          </TileContent>
        </Tile>
      ))
    }
  </SectionGrid>
</Section>
