---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import { Image } from "@/components/ui/image"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGrid,
  SectionTypography,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileMedia,
  TileTypography,
} from "@/components/ui/tile"

interface Props extends ComponentProps<typeof Section> {
  position?: ComponentProps<typeof TileMedia>["position"]
  size?: ComponentProps<typeof SectionTypography>["size"]
  buttons?: ComponentProps<typeof Button>[]
  items?: {
    title?: string
    description?: string
    html?: string
    icon?: string
    button?: ComponentProps<typeof Button>
    image?: ComponentProps<typeof Image>
    variant?: ComponentProps<typeof Tile>["variant"]
  }[]
}

const {
  class: className,
  align,
  order,
  size,
  buttons,
  items,
  variant,
  frame,
  position,
  ...props
} = Astro.props
---

<Section class={cn("", className)} {...props}>
  <SectionContent align={align} order={order}>
    <SectionTypography align={align} size={size}>
      <slot />
    </SectionTypography>
    <SectionActions align={align}>
      {
        buttons?.map((button, i) => (
          <Button
            variant={i === 0 ? "default" : "outline"}
            size={size}
            {...button}
          />
        ))
      }
    </SectionActions>
  </SectionContent>
  <SectionGrid>
    {
      items?.map(
        ({ title, description, html, icon, image, button, ...tile }) => (
          <Tile variant={variant} frame={frame} {...tile}>
            <TileMedia position={position}>
              <Image {...image} />
            </TileMedia>
            <Icon class="bg-muted size-9 rounded-sm border p-2" name={icon} />
            <TileContent align={align}>
              <TileTypography
                align={align}
                size={size}
                title={title}
                description={description}
                html={html}
              />
              <Button class="px-0" variant="link" size={size} {...button} />
            </TileContent>
          </Tile>
        )
      )
    }
  </SectionGrid>
</Section>
