---
import { Button } from "@/components/ui/button"
import { Icon } from "@/components/ui/icon"
import { Logo, LogoImage, LogoText } from "@/components/ui/logo"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGrid,
  SectionTypography,
} from "@/components/ui/section"

interface Props {
  buttons?: {
    icon?: string
    text?: string
    href?: string
    target?: string
  }[]
  logos?: {
    src?: string
    alt?: string
    title?: string
  }[]
}

const { buttons, logos } = Astro.props
---

<Section>
  <SectionContent>
    <SectionTypography>
      <slot />
    </SectionTypography>
    <SectionActions>
      {
        buttons?.map(({ icon, text, ...button }, i) => (
          <Button variant={i === 0 ? "default" : "outline"} {...button}>
            {icon && <Icon name={icon} />}
            {text}
          </Button>
        ))
      }
    </SectionActions>
    <SectionGrid class="flex flex-wrap justify-between gap-8">
      {
        logos?.map(({ src, alt, title }) => (
          <Logo href="/">
            <LogoImage src={src} alt={alt} />
            <LogoText>{title}</LogoText>
          </Logo>
        ))
      }
    </SectionGrid>
  </SectionContent>
</Section>
