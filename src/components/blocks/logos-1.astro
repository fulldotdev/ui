---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Button } from "@/components/ui/button"
import { Logo, LogoImage, LogoText } from "@/components/ui/logo"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGrid,
  SectionGroup,
} from "@/components/ui/section"
import { Typography } from "@/components/ui/typography"

interface Props extends ComponentProps<typeof Section> {
  size?: ComponentProps<typeof Typography>["size"]
  buttons?: ComponentProps<typeof Button>[]
  logos?: {
    src?: string
    alt?: string
    title?: string
  }[]
}

const {
  class: className,
  align,
  order,
  size,
  buttons,
  logos,
  ...props
} = Astro.props
---

<Section class={cn("", className)} {...props}>
  <SectionContent order={order}>
    <SectionGroup align={align}>
      <Typography size={size} align={align}>
        <slot />
      </Typography>
      <SectionActions align={align}>
        {
          buttons?.map((button, i) => (
            <Button
              variant={i === 0 ? "default" : "outline"}
              size={size}
              {...button}
            />
          ))
        }
      </SectionActions>
    </SectionGroup>
    <SectionGrid class="flex flex-wrap justify-between gap-8">
      {
        logos?.map(({ src, alt, title }, i) => (
          <Logo href="/">
            <LogoImage src={src} alt={alt} />
            <LogoText>{title}</LogoText>
          </Logo>
        ))
      }
    </SectionGrid>
  </SectionContent>
</Section>
