---
import { getEntry } from "astro:content"

import { type ArticleSchema } from "@/schemas/blocks/article"
import Article1 from "@/components/blocks/article-1"

type Props = ArticleSchema

const { variant = "1", person, ...block } = Astro.props

const personData = person && (await getEntry(person)).data
---

{
  variant === "1" && (
    <Article1 person={personData} {...block}>
      <slot />
    </Article1>
  )
}
