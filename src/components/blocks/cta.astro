---
import { type CtaSchema } from "@/schemas/blocks/cta"
import Cta1 from "@/components/blocks/cta-1"
import Cta2 from "@/components/blocks/cta-2"
import Cta3 from "@/components/blocks/cta-3"

type Props = CtaSchema

const { variant = "1", html, ...block } = Astro.props
---

{
  variant === "1" && (
    <Cta1 client:load {...block}>
      <Fragment set:html={html} />
    </Cta1>
  )
}

{
  variant === "2" && (
    <Cta2 client:load {...block}>
      <Fragment set:html={html} />
    </Cta2>
  )
}

{
  variant === "3" && (
    <Cta3 client:load {...block}>
      <Fragment set:html={html} />
    </Cta3>
  )
}
