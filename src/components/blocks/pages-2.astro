---
import type { ComponentProps } from "astro/types"
import ChevronRightIcon from "lucide-static/icons/chevron-right.svg"

import { cn } from "@/lib/utils"
import { Button } from "@/components/ui/button"
import { Image } from "@/components/ui/image"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGrid,
  SectionGroup,
  SectionSplit,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileDescription,
  TileTitle,
} from "@/components/ui/tile"
import { Typography } from "@/components/ui/typography"

interface Props extends ComponentProps<typeof Section> {
  align?: ComponentProps<typeof Typography>["align"]
  size?: ComponentProps<typeof Typography>["size"]
  buttons?: ComponentProps<typeof Button>[]
  items?: {
    href?: string
    title?: string
    description?: string
    image?: ComponentProps<typeof Image>
  }[]
}

const { class: className, align, size, buttons, items, ...props } = Astro.props
---

<Section class={cn("", className)} {...props}>
  <SectionContent>
    <SectionSplit align={align}>
      <SectionGroup align={align} class="lg:col-span-2">
        <Typography class="not-first:mt-4" size={size}>
          <slot />
        </Typography>
        <SectionActions class="not-first:mt-8 not-last:mb-4">
          {
            buttons?.map((button, i) => (
              <Button
                variant={i === 0 ? "default" : "outline"}
                size={size}
                {...button}
              />
            ))
          }
        </SectionActions>
      </SectionGroup>
      <SectionGrid class="gap-4 lg:col-span-3">
        {
          items?.map(({ title, description, image, href }) => (
            <Tile
              href={href}
              variant="muted"
              class="dark relative !bg-[#012172]"
            >
              <Image
                class="aspect-2/3 rounded-lg object-cover opacity-25 transition-opacity group-hover/tile:opacity-50"
                sizes="200px"
                {...image}
              />
              <TileContent class="dark absolute right-0 bottom-0 left-0">
                <TileTitle class="flex gap-4 text-white">
                  {title}
                  <ChevronRightIcon class="size-4 transition-transform group-hover/tile:translate-x-2" />
                </TileTitle>
                <TileDescription class="text-white">
                  {description}
                </TileDescription>
              </TileContent>
            </Tile>
          ))
        }
      </SectionGrid>
    </SectionSplit>
  </SectionContent>
</Section>
