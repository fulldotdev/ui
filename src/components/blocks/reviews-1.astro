---
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Avatar, AvatarImage } from "@/components/ui/avatar"
import { Button } from "@/components/ui/button"
import {
  Item,
  ItemContent,
  ItemDescription,
  ItemMedia,
  ItemTitle,
} from "@/components/ui/item"
import { Rating } from "@/components/ui/rating"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGroup,
  SectionMasonry,
} from "@/components/ui/section"
import {
  Tile,
  TileContent,
  TileDescription,
  TileTitle,
} from "@/components/ui/tile"
import { Typography } from "@/components/ui/typography"

interface Props extends ComponentProps<typeof Section> {
  size?: ComponentProps<typeof Typography>["size"]
  buttons?: ComponentProps<typeof Button>[]
  items?: {
    name?: string
    title?: string
    description?: string
    rating?: number
    href?: string
    avatar?: ComponentProps<typeof Avatar>
    tagline?: string
  }[]
}

const { class: className, align, size, buttons, items, ...props } = Astro.props
---

<Section class={cn("", className)} {...props}>
  <SectionContent align={align}>
    <SectionGroup align={align}>
      <Typography size={size} align={align}>
        <slot />
      </Typography>
      <SectionActions align={align}>
        {
          buttons?.map((button, i) => (
            <Button
              variant={i === 0 ? "default" : "outline"}
              size={size}
              {...button}
            />
          ))
        }
      </SectionActions>
    </SectionGroup>
    <SectionMasonry>
      {
        items?.map(
          ({ title, description, rating, href, avatar, name, tagline }) => (
            <Tile href={href} variant="outline">
              <TileContent>
                <Item class="items-center p-0">
                  <ItemMedia class="-space-x-4">
                    <Avatar class="ring-background size-10 ring-2">
                      <AvatarImage {...avatar} />
                    </Avatar>
                  </ItemMedia>
                  <ItemContent class="gap-1.5">
                    <ItemTitle>{name}</ItemTitle>
                    <ItemDescription class="leading-none">
                      {tagline}
                    </ItemDescription>
                  </ItemContent>
                </Item>
                <Rating rating={rating} />
                <TileTitle>{title}</TileTitle>
                <TileDescription>{description}</TileDescription>
              </TileContent>
            </Tile>
          )
        )
      }
    </SectionMasonry>
  </SectionContent>
</Section>
