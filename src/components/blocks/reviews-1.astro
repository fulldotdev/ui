---
// grid
import type { ComponentProps } from "astro/types"

import { cn } from "@/lib/utils"
import { Avatar, AvatarImage } from "@/components/ui/avatar"
import { Button } from "@/components/ui/button"
import {
  Item,
  ItemContent,
  ItemDescription,
  ItemMedia,
  ItemTitle,
} from "@/components/ui/item"
import { Rating } from "@/components/ui/rating"
import {
  Section,
  SectionActions,
  SectionContent,
  SectionGroup,
  SectionMasonry,
} from "@/components/ui/section"
import { Tile, TileContent, TileTypography } from "@/components/ui/tile"
import { Typography } from "@/components/ui/typography"

interface Props extends ComponentProps<typeof Section> {
  size?: ComponentProps<typeof Typography>["size"]
  buttons?: ComponentProps<typeof Button>[]
  items?: {
    name?: string
    title?: string
    description?: string
    html?: string
    rating?: number
    href?: string
    avatar?: ComponentProps<typeof Avatar>
    tagline?: string
  }[]
}

const {
  class: className,
  align,
  size,
  buttons,
  variant,
  items,
  ...props
} = Astro.props
---

<Section class={cn("", className)} {...props}>
  <SectionContent align={align}>
    <SectionGroup align={align}>
      <Typography size={size} align={align}>
        <slot />
      </Typography>
      <SectionActions align={align}>
        {
          buttons?.map((button, i) => (
            <Button
              variant={i === 0 ? "default" : "outline"}
              size={size}
              {...button}
            />
          ))
        }
      </SectionActions>
    </SectionGroup>
    <SectionMasonry>
      {
        items?.map(
          ({
            title,
            description,
            html,
            rating,
            href,
            avatar,
            name,
            tagline,
          }) => (
            <Tile href={href} variant={variant}>
              <TileContent>
                <Item class="-m-4">
                  <ItemMedia>
                    <Avatar>
                      <AvatarImage {...avatar} />
                    </Avatar>
                  </ItemMedia>
                  <ItemContent>
                    <ItemTitle>{name}</ItemTitle>
                    <ItemDescription>{tagline}</ItemDescription>
                  </ItemContent>
                </Item>
                <Rating rating={rating} />
                <TileTypography
                  size={size}
                  title={title}
                  description={description}
                  html={html}
                />
              </TileContent>
            </Tile>
          )
        )
      }
    </SectionMasonry>
  </SectionContent>
</Section>
