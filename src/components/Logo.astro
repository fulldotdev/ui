---
import type { ComponentProps } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'
import Image from 'fulldev-ui/components/Image.astro'

interface Props extends ComponentProps<typeof Image> {
  company?: string | undefined
}

const { size = 'md', company, ...rest } = Astro.props as Props

const sizeMap = {
  sm: 36,
  md: 40,
  lg: 44,
}
---

<Element
  class:list="logo"
  as="a"
  href="/"
  {size}
>
  <Image
    height={sizeMap[size]}
    width={sizeMap[size]}
    {...rest}
  />
  <Fragment set:html={company} />
</Element>

<style is:global>
  @layer fulldev {
    .logo {
      @apply flex items-center font-semibold;

      .image {
        @apply h-full w-auto;
      }

      &.size-sm {
        @apply h-6 gap-2 text-base;
      }

      &.size-md {
        @apply h-7 gap-2.5 text-lg;
      }

      &.size-lg {
        @apply h-8 gap-3 text-xl;
      }
    }
  }
</style>
