---
import type { ComponentProps, HTMLAttributes } from 'astro/types'
import Image from 'fulldev-ui/components/Image.astro'
import Element from './Element.astro'

interface Props extends HTMLAttributes<'a'>, HTMLAttributes<'div'> {
  image?: ComponentProps<typeof Image> | undefined
  size?: 'sm' | 'md' | 'lg' | undefined
  text?: string | undefined
  src?: string | undefined
  alt?: string | undefined
}

const { href = '/', size = 'md', image, text, src, alt, ...rest } = Astro.props as Props
---

<Element
  class:list="flex items-center gap-2 text-foreground font-bold text-base leading-none whitespace-nowrap"
  as={href ? 'a' : 'div'}
  {href}
  {...rest}
>
  <Image
    class="h-8 w-auto object-contain"
    {src}
    {alt}
  />
  <Fragment set:html={text} />
</Element>
