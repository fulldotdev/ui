---
import type { ComponentProps } from 'astro/types'
import Image from 'fulldev-ui/components/Image.astro'

interface Props extends ComponentProps<typeof Image> {
  company?: string | undefined
}

const { size = 'md', company, ...rest } = Astro.props as Props
---

<Image
  class:list="logo"
  {size}
  {...rest}
/>

<style is:global>
  @layer fulldev {
    .logo {
      @apply h-full w-auto object-contain;

      &.size-sm {
        @apply h-6;
      }

      &.size-md {
        @apply h-7;
      }

      &.size-lg {
        @apply h-8;
      }
    }
  }
</style>
