---
import type { HTMLAttributes } from 'astro/types'
import Image from 'fulldev-ui/components/Image.astro'
import Box from './Box.astro'

interface Props extends HTMLAttributes<'a'>, HTMLAttributes<'div'> {
  src?: string
  alt?: string
  text?: string
}

const { href = '/', class: className, text, src, alt, ...rest } = Astro.props as Props
---

<Box
  class:list={[
    'flex items-center gap-3 whitespace-nowrap text-base font-medium leading-none text-foreground',
    className,
  ]}
  as={href ? 'a' : 'div'}
  {href}
  {...rest}
>
  <Image
    class="h-9 w-auto object-contain"
    {src}
    {alt}
  />
  <Fragment set:html={text} />
</Box>
