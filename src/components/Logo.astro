---
import type { HTMLAttributes, HTMLTag } from 'astro/types'
import Image from 'fulldev-ui/components/Image.astro'
import type { LogoSchema } from 'fulldev-ui/schemas/logo'
import Element from './Element.astro'

interface Props
  extends Omit<HTMLAttributes<'a'>, 'href'>,
    HTMLAttributes<'div'>,
    LogoSchema {
  as?: HTMLTag
}

const {
  href = '/',
  as = href ? 'a' : 'div',
  size = 'md',
  image,
  text,
  ...rest
} = Astro.props as Props
---

<Element
  class:list="logo"
  {href}
  {as}
  {size}
  {...rest}
>
  <Image {...image} />
  <Fragment set:html={text} />
</Element>

<style is:global>
  @layer fulldev {
    .logo {
      @apply flex w-auto items-center gap-2 whitespace-nowrap object-contain text-base font-bold leading-none text-foreground;

      .image {
        @apply h-full w-auto object-contain;
      }

      &.size-sm {
        @apply h-6;
      }

      &.size-md {
        @apply h-7;
      }

      &.size-lg {
        @apply h-8;
      }
    }
  }
</style>
