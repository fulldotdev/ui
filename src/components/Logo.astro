---
import Box from '@/components/Box.astro'
import Image from '@/components/Image.astro'
import type { LogoSchema } from '@/schemas/fields/logo'
import type { HTMLAttributes } from 'astro/types'

interface Props extends Omit<HTMLAttributes<'a'>, 'href'>, LogoSchema {}

const { href = '/', class: className, text, src, alt, ...rest } = Astro.props as Props
---

<Box
  class:list={[
    'logo flex items-center gap-3 whitespace-nowrap text-base font-medium leading-none text-foreground',
    className,
  ]}
  as={href ? 'a' : 'div'}
  {href}
  {...rest}
>
  <Image
    class="h-9 w-auto max-w-[200px] object-contain"
    {src}
    {alt}
  />
  <Fragment set:html={text} />
</Box>
