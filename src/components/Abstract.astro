---
import Box from '@/components/Box.astro'
import { cn } from '@/lib/utils'
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {
  size?: 'sm' | 'default' | 'lg' | 'xl'
  align?: 'start' | 'center' | 'end'
}

const { size = 'default', align = 'start', class: className, ...rest } = Astro.props
---

<Box
  class={cn(
    'abstract',
    'flex w-full max-w-lg flex-col',
    'child:first:mt-0',
    'headings:text-pretty headings:font-medium headings:tracking-tight',
    'p:text-pretty p:leading-[1.8] p:text-muted-foreground',
    {
      // size
      'child:mt-1 headings:text-sm text-sm': size === 'sm',
      'child:mt-1 headings:text-base text-sm': size === 'default',
      'child:mt-1.5 headings:mt-3 headings:text-lg text-base': size === 'lg',
      'child:mt-2.5 headings:mt-5 headings:text-xl text-base': size === 'xl',
    },
    className
  )}
  {...rest}
>
  <slot />
</Box>
