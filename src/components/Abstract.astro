---
import Element from '@/components/Element.astro'
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {
  size?: 'sm' | 'default' | 'lg' | undefined
  align?: 'start' | 'center' | 'end' | undefined
}

const { size = 'default', align = 'start', ...rest } = Astro.props
---

<Element
  class:list={[
    'abstract',
    'flex-flex-col w-full max-w-sm',
    'child:first:mt-0',
    'headings:font-bold headings:scroll-mt-20 headings:text-pretty headings:tracking-tight',
    'p:max-w-[90%] p:text-pretty p:text-foreground/80 p:leading-[1.8]',
    {
      // size
      'child:mt-6 p:mt-3 headings:mt-3 text-sm': size === 'sm',
      'headings:text-lg child:mt-3 p:mt-2 headings:mt-3': size === 'default',
      'headings:text-xl child:mt-5 p:mt-2.5 headings:mt-5': size === 'lg',
      // align
      'child:mr-auto mr-auto items-start text-left': align === 'start',
      'child:mx-auto mx-auto items-center text-center': align === 'center',
      'child:ml-auto ml-auto items-end text-right': align === 'end',
    },
  ]}
  {...rest}
>
  <slot />
</Element>
