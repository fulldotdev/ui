---
import type { HTMLAttributes } from 'astro/types'
import Box from './Box.astro'

interface Props extends HTMLAttributes<'div'> {
  size?: 'sm' | 'default' | 'lg' | 'xl'
  align?: 'start' | 'center' | 'end'
}

const { size = 'default', align = 'start', class: className, ...rest } = Astro.props
---

<Box
  class:list={[
    'abstract',
    'flex-flex-col w-full max-w-lg',
    'first:child:mt-0',
    'headings:text-pretty headings:font-medium headings:tracking-tight',
    'p:max-w-[90%] p:text-pretty p:leading-[1.8] p:text-muted-foreground',
    {
      // size
      'text-sm child:mt-1 headings:text-sm': size === 'sm',
      'text-sm child:mt-1 headings:text-base': size === 'default',
      'text-base child:mt-1.5 headings:mt-3 headings:text-lg': size === 'lg',
      'text-base child:mt-2.5 headings:mt-5 headings:text-xl': size === 'xl',
      // align
      'mr-auto items-start text-left child:mr-auto': align === 'start',
      'mx-auto items-center text-center child:mx-auto': align === 'center',
      'ml-auto items-end text-right child:ml-auto': align === 'end',
    },
    className,
  ]}
  {...rest}
>
  <slot />
</Box>
