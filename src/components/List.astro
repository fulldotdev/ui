---
import type { HTMLAttributes } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'
import Icon from 'fulldev-ui/components/Icon.astro'

interface Props extends HTMLAttributes<'ul' | 'ol'> {
  as?: 'ul' | 'ol' | undefined
  size?: 'sm' | 'md' | 'lg' | undefined
  items?: string[] | undefined
  muted?: boolean | undefined
  icon?: string | undefined
}

const { as = 'ul', muted = false, items, icon, ...rest } = Astro.props
---

<Element
  class:list={['list', { 'has-icon': icon, muted }]}
  {as}
  {...rest}
>
  {
    items?.map((item) => (
      <Element as="li">
        <Icon name={icon} />
        <Element as="span">
          <Fragment set:html={item} />
        </Element>
      </Element>
    ))
  }
  <slot />
</Element>

<style is:global>
  @layer fulldev {
    .list,
    .prose :is(ul, ol) {
      padding-left: var(--spacing-4);

      &:is(ul) {
        list-style-type: disc;
      }

      ul {
        margin-top: var(--spacing-2);
        margin-left: var(--spacing-5);
        list-style-type: disc;
      }

      &:is(ol) {
        list-style-type: decimal;
      }

      ol {
        margin-top: var(--spacing-2);
        margin-left: var(--spacing-5);
        list-style-type: decimal;
      }

      li:not(:first-child) {
        margin-top: var(--spacing-2);
      }

      &.size-sm,
      &:where(.size-sm &) {
        font-size: var(--text-sm);

        .icon {
          margin-top: var(--spacing-0);
        }
      }

      &.size-lg,
      &:where(.size-lg &) {
        font-size: var(--text-lg);

        .icon {
          margin-top: var(--spacing-1);
        }
      }

      &.muted {
        color: var(--color-muted-foreground);
      }

      .icon {
        margin-top: var(--spacing-0-5);
        margin-left: calc(var(--spacing-5) * -1);
        color: inherit;
      }

      &.has-icon {
        margin-left: var(--spacing-0);
        list-style-type: none;

        li {
          display: flex;
          gap: var(--spacing-2);
        }
      }
    }
  }
</style>
