---
import type { HTMLAttributes } from 'astro/types'
import Box from 'fulldev-ui/components/Box.astro'
import Icon from 'fulldev-ui/components/Icon.astro'

interface Props extends HTMLAttributes<'ul' | 'ol'> {
  as?: 'ul' | 'ol'
  muted?: boolean
  items?: string[]
  icon?: string
}

const { as = 'ul', muted = false, class: className, items, icon, ...rest } = Astro.props
---

<Box
  class:list={['list ml-4 list-disc space-y-2', className]}
  {as}
  {...rest}
>
  {
    items?.map((item) => (
      <Box as="li">
        <Icon name={icon} />
        <Box as="span">
          <Fragment set:html={item} />
        </Box>
      </Box>
    ))
  }
  <slot />
</Box>
