---
import type { ComponentProps, Polymorphic } from 'astro/types'
import Root from 'fulldev-ui/components/Root.astro'

type Props<As extends 'ul' | 'ol' = 'ul'> = ComponentProps<typeof Root> &
  Polymorphic<{ as: As }> & {
    items?: string[] | undefined
  }

const { as = 'ul', items, ...rest } = Astro.props
---

<Root
  class:list="list"
  {as}
  {...rest}
>
  {items?.map((item) => <li set:html={item} />)}
</Root>

<style is:global lang="scss">
  @layer fulldev {
    .list {
      display: flex;
      flex-direction: column;
      padding-left: var(--space-5);
      color: var(--color-11);
      font-size: var(--text-2);
      line-height: 1.625;
      list-style-type: disc;

      li {
        align-items: center;
        max-width: calc(var(--space-4) * 44);
        color: var(--color-11);
        font-size: var(--text-2);
        line-height: 1.625;
      }
    }
  }
</style>
