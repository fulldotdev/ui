---
import type { HTMLAttributes } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'

interface Props extends HTMLAttributes<'div'> {
  size?: 'sm' | 'default' | 'lg' | undefined
  align?: 'start' | 'center' | 'end' | undefined
}

const { size = 'default', align = 'start', ...rest } = Astro.props
---

<Element
  class:list={[
    'writeup',
    'flex-flex-col w-full max-w-screen-md',
    'child:first:mt-0',
    'headings:font-medium headings:scroll-mt-20 headings:text-pretty headings:tracking-tight',
    'p:max-w-[85%] p:text-pretty p:leading-[1.8] p:text-foreground/80',
    {
      // size
      'headings:text-2xl child:mt-6 p:mt-3 headings:mt-3': size === 'sm',
      'headings:text-4xl child:mt-6 p:mt-4 headings:mt-4': size === 'default',
      'headings:text-4xl md:headings:text-5xl h1:text-5xl md:h1:text-6xl child:mt-9 p:mt-6 headings:mt-6 lead:text-xl text-lg':
        size === 'lg',
      // align
      'child:mr-auto mr-auto items-start text-left': align === 'start',
      'child:mx-auto mx-auto items-center text-center': align === 'center',
      'child:ml-auto ml-auto items-end text-right': align === 'end',
    },
  ]}
  {...rest}
>
  <slot />
</Element>
