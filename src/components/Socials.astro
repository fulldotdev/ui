---
import Box from '@/components/Box.astro'
import Social from '@/components/Social.astro'
import type { ComponentProps, HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {
  variant?: ComponentProps<typeof Social>['variant'] | undefined
  socials?: ComponentProps<typeof Social>['href'][] | undefined
}

const { variant = 'secondary', socials, ...rest } = Astro.props
---

<Box
  class:list="socials inline-flex gap-1"
  {...rest}
>
  {
    socials?.map((social) => (
      <Social
        href={social}
        {variant}
      />
    ))
  }
  <slot />
</Box>
