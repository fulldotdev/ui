---
import Element from '@/components/Element.astro'
import Social from '@/components/Social.astro'
import type { ComponentProps } from 'astro/types'

interface Props extends ComponentProps<typeof Social> {
  variant?: ComponentProps<typeof Social>['variant'] | undefined
  socials?: ComponentProps<typeof Social>['href'][] | undefined
}

const { variant, socials, ...rest } = Astro.props
---

<Element
  class:list="flex flex-wrap gap-1.5 justify-stretch"
  {...rest}
>
  {
    socials?.map((social) => (
      <Social
        href={social}
        {variant}
      />
    ))
  }
  <slot />
</Element>
