---
import type { HTMLAttributes } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'

interface Props extends HTMLAttributes<'div'> {
  size?: 'sm' | 'md' | 'lg' | undefined
}

const { size = 'md', ...rest } = Astro.props
---

<Element
  class:list={`masonry size-${size}`}
  {...rest}
>
  <slot />
</Element>

<style is:global>
  @layer fulldev {
    .masonry {
      position: relative;
      gap: var(--spacing-5);
      row-gap: var(--spacing-5);
      columns: var(--column-width);
      width: 100%;

      & > * {
        break-inside: avoid;

        &:not(:first-child) {
          margin-top: var(--spacing-5);
        }
      }

      &.size-sm {
        --column-width: var(--spacing-52);
      }

      &.size-md {
        --column-width: var(--spacing-64);
      }

      &.size-lg {
        --column-width: var(--spacing-80);
      }
    }
  }
</style>
