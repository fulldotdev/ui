---
import Box from '@/components/Box.astro'
import type { LinkSchema } from '@/schemas/fields/link'
import type { HTMLAttributes } from 'astro/types'

interface Props extends Omit<HTMLAttributes<'a'>, 'href'>, LinkSchema {}

const { href, target = href?.startsWith('http') ? '_blank' : undefined, class: className, text, ...rest } = Astro.props
---

<Box
  as="a"
  class:list={['link', className]}
  {href}
  {target}
  {...rest}
>
  <Fragment set:html={text} />
  <slot />
</Box>
