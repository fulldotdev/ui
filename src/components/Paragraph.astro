---
import type { HTMLAttributes, HTMLTag } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'
import type { GlobalProps } from 'fulldev-ui/types/global-props'

interface Props extends GlobalProps, HTMLAttributes<'p'> {
  as?: HTMLTag
  text?: string | undefined
}

const { as = 'p', text, ...rest } = Astro.props
---

<Element
  class:list="paragraph"
  {as}
  {...rest}
>
  <slot />
  <Fragment set:html={text} />
</Element>

<style is:global lang="scss">
  @layer fulldev {
    .paragraph,
    p {
      font-size: var(--font-size-base);
      line-height: var(--font-size-base--line-height);

      &:not(:first-child) {
        margin-top: var(--spacing-6);
      }

      &:is(&.size-sm, .size-sm &) {
        font-size: var(--font-size-sm);
        line-height: var(--font-size-sm--line-height);
      }

      &:is(&.size-lg, .size-lg &) {
        font-size: var(--font-size-lg);
        line-height: var(--font-size-lg--line-height);
      }
    }
  }
</style>
