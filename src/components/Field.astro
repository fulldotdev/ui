---
import Input from 'fulldev-ui/components/Input.astro'
import Select from 'fulldev-ui/components/Select.astro'
import Textarea from 'fulldev-ui/components/Textarea.astro'

interface Props {
  label?: string | undefined
  placeholder?: string | undefined
  value?: string | undefined
  required?: boolean | undefined
  disabled?: boolean | undefined
  type?: keyof typeof components | undefined
}

const { type = 'text', ...rest } = Astro.props

const components = {
  select: Select,
  textarea: Textarea,
  text: Input,
  number: Input,
  tel: Input,
  email: Input,
  password: Input,
}

const Component = components[type]
---

<Component
  class:list="field"
  {...rest}
/>
