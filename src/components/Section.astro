---
import type { ComponentProps, HTMLAttributes } from 'astro/types'
import Button from 'fulldev-ui/components/Button.astro'
import Buttons from 'fulldev-ui/components/Buttons.astro'
import type Card from 'fulldev-ui/components/Card.astro'
import Cards from 'fulldev-ui/components/Cards.astro'
import Element from 'fulldev-ui/components/Element.astro'
import Image from 'fulldev-ui/components/Image.astro'
import Writeup from 'fulldev-ui/components/Writeup.astro'
import type { GlobalProps } from 'fulldev-ui/types/global-props.js'

interface Props
  extends GlobalProps,
    ComponentProps<typeof Writeup>,
    HTMLAttributes<'section'> {
  image?: ComponentProps<typeof Image>
  position?: ComponentProps<typeof Image>['position']
  buttons?: ComponentProps<typeof Buttons>['buttons']
  button?: ComponentProps<typeof Button> | undefined
  variant?: ComponentProps<typeof Button>['variant']
  cards?: ComponentProps<typeof Cards>['cards']
  panel?: ComponentProps<typeof Card>['panel']
  component?: string
  structure?:
    | ComponentProps<typeof Cards>['structure']
    | 'column'
    | 'split'
    | 'spread'
}

const {
  cards,
  structure = cards ? 'grid' : 'column',
  align = 'start',
  level = 2,
  size = 'md',
  badge,
  tagline,
  rating,
  heading,
  lead,
  paragraph,
  text,
  list,
  button,
  buttons,
  variant,
  panel,
  image,
  theme,
  position,
  ...rest
} = Astro.props

const { component, ...props } = Astro.props

const allComponents = {
  ...import.meta.glob('/src/**/*.astro'),
  ...import.meta.glob('../../**/*.astro'),
}

const componentPath = Object.keys(allComponents).find(
  (path) => path.split('/').pop()?.split('.')[0] === component
)

const Component =
  componentPath && (await (allComponents[componentPath] as any)()).default
---

{
  Component ? (
    <Component {...props} />
  ) : (
    <Element
      class:list="section"
      as="section"
      panel={!cards && panel}
      theme={cards ? undefined : theme}
      structure={
        structure === 'grid' ||
        structure === 'carousel' ||
        structure === 'stack'
          ? text
            ? 'column'
            : 'spread'
          : structure
      }
      {align}
      {size}
      {...rest}
    >
      <Element class:list="segment">
        <slot name="segment">
          <slot name="writeup">
            <Writeup
              {level}
              {rating}
              {badge}
              {tagline}
              {heading}
              {lead}
              {paragraph}
              {text}
              {list}
            />
          </slot>
          <slot name="buttons">
            <Button
              {variant}
              {...button}
            />
            <Buttons
              {variant}
              {buttons}
            />
          </slot>
        </slot>
      </Element>
      <slot>
        <Cards
          level={(level + 2) as any}
          size={size === 'lg' ? 'md' : 'sm'}
          structure={
            structure === 'grid' ||
            structure === 'masonry' ||
            structure === 'stack' ||
            structure === 'carousel' ||
            structure === 'bento'
              ? structure
              : undefined
          }
          position={cards ? position : undefined}
          {theme}
          {cards}
          {panel}
          {position}
        />
        <Image
          position={cards ? undefined : position}
          {...image}
        />
      </slot>
    </Element>
  )
}

<style is:global lang="scss">
  @layer fulldev {
    .section {
      --inset-top: 0px;
      --inset-left: var(--gutter);
      --inset-right: var(--gutter);
      --inset-bottom: var(--spacer);

      display: flex;
      position: relative;
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-6) var(--space-7);
      padding: var(--spacer) var(--gutter);

      .segment {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: var(--space-5);
        z-index: 1;
      }

      &.panel {
        margin: var(--spacer) var(--gutter);
        border: 1px solid var(--base-a6);
        border-radius: var(--radius-2);
        background-color: var(--base-2);
        padding: min(var(--gutter), var(--spacer));
        overflow: hidden;
      }

      &.reverse {
        --inset-top: var(--spacer);
        --inset-left: var(--gutter);
        --inset-right: var(--gutter);
        --inset-bottom: 0px;

        &:not(.structure-split) {
          .segment {
            order: 999;
          }
        }

        @media (min-width: 1024px) {
          .segment {
            order: 999;
          }
        }
      }

      &.structure-column {
        display: flex;
        flex-direction: column;

        &.align-center {
          align-items: center;

          .segment {
            align-items: center;
            text-align: center;
          }
        }
      }

      &.structure-split {
        display: grid;
        grid-template-columns: 1fr;
        width: 100%;

        @media (min-width: 1024px) {
          --inset-top: var(--spacer);
          --inset-left: 0px;
          --inset-right: var(--gutter);
          --inset-bottom: var(--spacer);

          grid-auto-columns: 1fr;
          grid-auto-flow: column;

          &.reverse {
            --inset-right: 0px;
            --inset-left: var(--gutter);
          }
        }

        &.align-center {
          align-items: center;
        }
      }

      &.structure-spread {
        display: flex;
        flex-direction: column;

        .segment {
          flex-direction: row;
          flex-wrap: wrap;
          justify-content: space-between;
          width: 100%;
        }

        &.align-center {
          .segment {
            align-items: center;

            .writeup {
              align-items: flex-start;
            }
          }
        }
      }
    }
  }
</style>
