---
import type { HTMLAttributes } from 'astro/types'
import Box from 'fulldev-ui/components/Box.astro'

interface Props extends HTMLAttributes<'div'> {
  size?: 'sm' | 'default' | 'lg'
}

const { size = 'default', class: className, ...rest } = Astro.props
---

<Box
  class:list={[
    'mx-auto w-full gap-x-8 gap-y-16 px-4 lg:px-8',
    {
      'max-w-screen-md lg:px-16': size === 'sm',
      'max-w-screen-xl': size === 'default',
      'max-w-screen-2xl': size === 'lg',
    },
    className,
  ]}
  {...rest}
>
  <slot />
</Box>
