---
import Box from '@/components/Box.astro'
import { badgeVariants, type BadgeVariants } from '@/components/ui/badge'
import { buttonVariants } from '@/components/ui/button'
import type { BadgeSchema } from '@/schemas/fields/badge'
import type { HTMLAttributes } from 'astro/types'

interface Props extends Omit<HTMLAttributes<'a'>, 'href'>, BadgeSchema, BadgeVariants {
  size?: 'default' | 'lg'
}

const test: URL = new URL('https://www.google.com')

const { href, text, variant, class: className, size, ...rest } = Astro.props
---

<Box
  class:list={[
    'badge',
    href ? buttonVariants({ variant }) : '',
    badgeVariants({ variant }),
    {
      'h-7 px-3.5': size === 'lg',
    },
    className,
  ]}
  {href}
  {...rest}
>
  <Fragment set:html={text} />
  <slot />
</Box>
