---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Icon from 'fulldev-ui/components/Icon.astro'
import Root from 'fulldev-ui/components/Root.astro'

type Props<As extends HTMLTag = 'a'> = Polymorphic<{ as: As }> & {
  radius?: 'none' | 'auto' | 'full'
  size?: 'sm' | 'md' | 'lg'
  color?: 'base' | 'brand'
  contrast?: boolean
  html?: string
  text?: string
  icon?: string
}

const {
  href,
  html,
  text,
  as = href ? 'a' : 'div',
  radius = 'full',
  icon,
  ...rest
} = Astro.props
---

<Root
  class:list="badge"
  {radius}
  {as}
  {href}
  {...rest}
>
  <slot>
    <Fragment set:text={text} />
    <Fragment set:html={html} />
    <Icon name={icon} />
  </slot>
</Root>

<style is:global lang="scss">
  @layer fulldev {
    .badge {
      display: inline-flex;
      flex-shrink: 0;
      justify-content: center;
      align-items: center;
      vertical-align: top;
      gap: var(--space-2);
      transition: var(--transition);
      border: 1px solid var(--color-a6);
      padding: 0 var(--space-3);
      height: calc(var(--text-1) + 2 * var(--space-2));
      color: var(--color-11);
      font-weight: 500;
      font-size: var(--text-1);
      line-height: 1;
      text-align: center;
      text-decoration: none;
      white-space: nowrap;

      &[href] {
        border-color: var(--color-7);

        &:hover {
          border-color: var(--color-8);
        }
      }

      &.radius-none {
        border-radius: 0;
      }

      &.radius-auto {
        border-radius: var(--radius-1);
      }

      &.radius-full {
        border-radius: 9999px;
      }
    }
  }
</style>
