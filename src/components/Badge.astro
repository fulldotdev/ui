---
import type { HTMLAttributes } from 'astro/types'
import type { BadgeVariants } from 'fulldev-ui/components/ui/badge'
import { badgeVariants } from 'fulldev-ui/components/ui/badge/index.ts'
import Box from './Box.astro'

interface Props extends HTMLAttributes<'span'>, BadgeVariants {
  text?: string
}

const { variant, text, class: className, ...rest } = Astro.props
---

<Box
  class:list={['badge', badgeVariants({ variant }), className]}
  as="span"
  {...rest}
>
  <Fragment set:html={text} />
  <slot />
</Box>
