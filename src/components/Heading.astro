---
import type { HTMLAttributes, HTMLTag } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'
import type { GlobalProps } from 'fulldev-ui/types/global-props'

interface Props extends GlobalProps, HTMLAttributes<'h2'> {
  as?: HTMLTag
  level?: 1 | 2 | 3 | 4 | 5 | 6 | undefined
  text?: string | undefined
}

const { level = 2, as = `h${level}`, text, ...rest } = Astro.props
---

<Element
  class:list="heading"
  {as}
  {level}
  {...rest}
>
  <slot />
  <Fragment set:html={text} />
</Element>

<style is:global>
  .heading {
    @apply mt-8 scroll-mt-20 font-bold tracking-tight first:mt-0;

    &.size-sm {
      &.level-1 {
        @apply text-3xl;
      }

      &.level-2 {
        @apply text-2xl;
      }

      &.level-3 {
        @apply text-xl;
      }

      &.level-4 {
        @apply text-lg;
      }

      &.level-5 {
        @apply text-base;
      }

      &.level-6 {
        @apply text-sm;
      }
    }

    &.size-md {
      &.level-1 {
        @apply text-4xl;
      }

      &.level-2 {
        @apply text-3xl;
      }

      &.level-3 {
        @apply text-2xl;
      }

      &.level-4 {
        @apply text-xl;
      }

      &.level-5 {
        @apply text-lg;
      }

      &.level-6 {
        @apply text-base;
      }
    }

    &.size-lg {
      &.level-1 {
        @apply text-5xl lg:text-6xl;
      }

      &.level-2 {
        @apply text-4xl;
      }

      &.level-3 {
        @apply text-3xl;
      }

      &.level-4 {
        @apply text-2xl;
      }

      &.level-5 {
        @apply text-xl;
      }

      &.level-6 {
        @apply text-lg;
      }
    }
  }
</style>
