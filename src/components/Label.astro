---
import type { ComponentProps } from 'astro/types'
import LabelShadcn from 'fulldev-ui/components/shadcn/label/Label.vue'
import Element from './Element.astro'

interface Props extends ComponentProps<typeof LabelShadcn> {
  text?: string
}

const { text, ...rest } = Astro.props
---

<Element
  class:list={[
    'label',
    'text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70', // copied shadcn styles, because this component gave an error
  ]}
  as="label"
  {...rest}
>
  <Fragment set:html={text} />
  <slot />
</Element>
