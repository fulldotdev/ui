---
import type { ComponentProps, HTMLAttributes } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'
import type { GlobalProps } from 'fulldev-ui/types/global-props'
import Section from './SectionRenderer.astro'

interface Props extends GlobalProps, HTMLAttributes<'div'> {
  sections?: ComponentProps<typeof Section>[] | undefined
}

const { sections, ...rest } = Astro.props
---

<Element
  class:list="sections"
  {...rest}
>
  {sections?.map((section) => <Section {...section} />)}
</Element>

<style is:global>
  @layer fulldev {
    .sections {
      display: flex;
      flex-direction: column;
    }
  }
</style>
