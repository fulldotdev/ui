---
import type { ComponentProps } from 'astro/types'
import Buttons from 'fulldev-ui/components/Buttons.astro'
import Element from 'fulldev-ui/components/Element.astro'
import Prose from 'fulldev-ui/components/Prose.astro'

interface Props {
  size?: 'sm' | 'md' | 'lg' | undefined
  align?: 'start' | 'center' | 'end' | undefined
  title?: string | undefined
  description?: string | undefined
  content?: string | undefined
  buttons?: ComponentProps<typeof Buttons>['buttons']
}

const {
  size = 'lg',
  align = 'center',
  content,
  title,
  description,
  buttons,
} = Astro.props
---

<Element class:list={`cta cta-3 size-${size} align-${align}`}>
  <Element class:list={`container align-${align}`}>
    <Prose {size}>
      <Element as="h1">{title}</Element>
      <Element as="p">{description}</Element>
      <Fragment set:html={content} />
      <slot />
    </Prose>
    <Buttons
      {size}
      {buttons}
    />
  </Element>
</Element>

<style>
  @layer fulldev {
    .container {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-8);
      margin-right: auto;
      margin-left: auto;
      padding-top: var(--spacing-16);
      padding-right: var(--gutter);
      padding-bottom: var(--spacing-16);
      padding-left: var(--gutter);
      width: 100%;
      max-width: var(--breakpoint-2xl);

      @media (min-width: 1024px) {
        flex-direction: row;

        &.align-start {
          align-items: flex-start;
        }

        &.align-center {
          align-items: center;
        }

        &.align-end {
          align-items: flex-end;
        }
      }
    }
  }
</style>
