---
import Buttons from 'fulldev-ui/components/Buttons.astro'
import Container from 'fulldev-ui/components/Container.astro'
import Image from 'fulldev-ui/components/Image.astro'
import Section from 'fulldev-ui/components/Section.astro'
import Split from 'fulldev-ui/components/Split.astro'
import Writeup from 'fulldev-ui/components/Writeup.astro'
import type { ContentSchema } from 'fulldev-ui/schemas/blocks/content'

interface Props extends ContentSchema {}

const { writeup, buttons, image } = Astro.props
---

<Section class="content content-1">
  <Container>
    <Split align="center">
      <Writeup>
        <Fragment set:html={writeup} />
        <slot />
        <Buttons {buttons} />
      </Writeup>
      <Image
        class="rounded-lg"
        {...image}
      />
    </Split>
  </Container>
</Section>
