---
import Section from 'fulldev-ui/components/Section.astro'

const { ...rest } = Astro.props
---

<Section
  class:list="intro"
  structure="column"
  size="sm"
  level={1}
  position="background"
  {...rest}
/>

<style is:global lang="scss">
  @layer fulldev {
    .intro {
      border-bottom: 1px solid var(--base-6);
      padding-top: var(--space-7);
      padding-bottom: var(--space-7);
    }
  }
</style>
