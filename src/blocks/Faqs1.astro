---
import Accordion from '@/components/Accordion.vue'
import Buttons from '@/components/Buttons.astro'
import Container from '@/components/Container.astro'
import Section from '@/components/Section.astro'
import Writeup from '@/components/Writeup.astro'
import type { FaqsSchema } from '@/schemas/blocks/faqs'

interface Props extends FaqsSchema {}

const { writeup, buttons, faqs } = Astro.props
---

<Section class="faqs faqs-1">
  <Container
    class="flex flex-col gap-y-8"
    size="sm"
  >
    <Writeup>
      <Fragment set:html={writeup} />
      <slot />
      <Buttons {buttons} />
    </Writeup>
    <Accordion
      client:load
      items={faqs}
    />
  </Container>
</Section>
