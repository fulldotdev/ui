---
import Hero1 from 'fulldev-ui/blocks/Hero1.astro'
import Hero2 from 'fulldev-ui/blocks/Hero2.astro'
import Hero3 from 'fulldev-ui/blocks/Hero3.astro'
import Hero4 from 'fulldev-ui/blocks/Hero4.astro'
import Hero5 from 'fulldev-ui/blocks/Hero5.astro'
import Hero6 from 'fulldev-ui/blocks/Hero6.astro'
import Hero7 from 'fulldev-ui/blocks/Hero7.astro'
import Hero8 from 'fulldev-ui/blocks/Hero8.astro'
import Hero9 from 'fulldev-ui/blocks/Hero9.astro'
import type { BlockSchema } from 'fulldev-ui/schemas/block.ts'

interface Props extends BlockSchema {
  variant?: keyof typeof variants
  align?: 'start' | 'center' | 'end'
}

const variants = {
  1: Hero1,
  2: Hero2,
  3: Hero3,
  4: Hero4,
  5: Hero5,
  6: Hero6,
  7: Hero7,
  8: Hero8,
  9: Hero9,
}

const { variant = 1, ...rest } = Astro.props

const Block = variants[variant]
---

<Block
  class:list={`hero variant-${variant}`}
  {...rest}
>
  <slot />
</Block>
