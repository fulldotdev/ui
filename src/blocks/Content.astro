---
import Content1 from 'fulldev-ui/blocks/Content1.astro'
import Content2 from 'fulldev-ui/blocks/Content2.astro'
import Content3 from 'fulldev-ui/blocks/Content3.astro'
import type { BlockSchema } from 'fulldev-ui/schemas/block.ts'

interface Props extends BlockSchema {
  variant?: keyof typeof variants
  align?: 'start' | 'center' | 'end'
}

const variants = {
  1: Content1,
  2: Content2,
  3: Content3,
}

const { variant = 1, ...rest } = Astro.props

const Block = variants[variant]
---

<Block
  class:list={`content variant-${variant}`}
  {...rest}
>
  <slot />
</Block>
