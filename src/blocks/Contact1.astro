---
import Container from '@/components/Container.astro'
import Element from '@/components/Element.astro'
import Form from '@/components/Form.astro'
import Link from '@/components/Link.astro'
import Section from '@/components/Section.astro'
import Socials from '@/components/Socials.astro'
import Writeup from '@/components/Writeup.astro'
import type { ComponentProps } from 'astro/types'

interface Props {
  title?: string | undefined
  description?: string | undefined
  content?: string | undefined
  channels?: {
    href?: string | undefined
    icon?: string | undefined
    text?: string | undefined
  }[]
  socials?: ComponentProps<typeof Socials>['socials']
  form?: ComponentProps<typeof Form> | undefined
}

const { title, description, content, channels, socials, form } = Astro.props
---

<Section class="contact contact-1">
  <Container class="flex flex-col items-start gap-y-16 lg:grid lg:grid-cols-2">
    <Writeup class="lg:pr-16">
      <Element as="h1">{title}</Element>
      <Element as="p">{description}</Element>
      <Fragment set:html={content} />
      <Element class="flex flex-col items-start gap-2.5">
        {channels?.map((channel) => <Link {...channel} />)}
      </Element>
      <Socials
        variant="secondary"
        {socials}
      />
    </Writeup>
    <Form
      class="border-1 rounded-xl border-border p-8"
      {...form}
    />
  </Container>
</Section>
