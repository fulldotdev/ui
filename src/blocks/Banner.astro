---
import Element from 'fulldev-ui/components/Element.astro'
import Text from 'fulldev-ui/components/Text.astro'

type Props = {
  color?: 'base' | 'brand' | undefined
  size?: 'sm' | 'md' | 'lg' | undefined
  variant?: 'primary' | 'secondary' | undefined
  text?: string | undefined
}

const { variant = 'primary', size = 'sm', text, ...rest } = Astro.props
---

<Element
  class:list={'banner'}
  as="header"
  {size}
  {variant}
  {...rest}
>
  <Text text={text} />
</Element>

<style is:global>
  @layer fulldev {
    .banner {
      @apply relative z-50 flex w-full items-center justify-center overflow-hidden px-gutter text-center text-sm;
      height: var(--banner-height);

      &.variant-primary {
        @apply bg-primary text-primary-foreground;
      }

      &,
      & ~ * {
        --banner-height: 32px;
      }
    }
  }
</style>
