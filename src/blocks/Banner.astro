---
import type { ComponentProps } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'
import Text from 'fulldev-ui/components/Text.astro'

type Props = {
  size?: 'sm' | 'md' | 'lg' | undefined
  text?: ComponentProps<typeof Text>['text']
}

const { size = 'sm', text, ...rest } = Astro.props
---

<Element
  class:list={'banner'}
  as="header"
  {size}
  {...rest}
>
  <Text text={text} />
</Element>

<style is:global>
  @layer fulldev {
    .banner {
      @apply relative z-50 flex w-full items-center justify-center overflow-hidden bg-primary px-gutter text-center text-sm text-primary-foreground;
      height: var(--banner-height);

      &,
      & ~ * {
        --banner-height: 32px;
      }
    }
  }
</style>
