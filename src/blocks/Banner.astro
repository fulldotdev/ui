---
import Banner1 from 'fulldev-ui/blocks/Banner1.astro'

interface Props {
  variant?: keyof typeof variants | undefined
  text?: string | undefined
}

const variants = {
  1: Banner1,
}

const { variant = 1, ...rest } = Astro.props

const Block = variants[variant]
---

<Block
  class:list={`banner variant-${variant}`}
  {...rest}
>
  <slot />
</Block>
