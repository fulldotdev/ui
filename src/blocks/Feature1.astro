---
import Buttons from 'fulldev-ui/components/Buttons.astro'
import Heading from 'fulldev-ui/components/Heading.astro'
import Image from 'fulldev-ui/components/Image.astro'
import Paragraph from 'fulldev-ui/components/Paragraph.astro'
import Tagline from 'fulldev-ui/components/Tagline.astro'
import type { BlockSchema } from 'fulldev-ui/schemas/block'
import Container from 'fulldev-ui/structures/Container.astro'
import Section from 'fulldev-ui/structures/Section.astro'
import Writeup from 'fulldev-ui/structures/Writeup.astro'

interface Props extends BlockSchema {}

const {
  size = 'md',
  align = 'center',
  depth = 2,
  tagline,
  heading,
  paragraph,
  buttons,
  image,
  writeup,
} = Astro.props
---

<Section
  class:list={`feature feature-1 size-${size} align-${align} depth-${depth}`}
>
  <Container>
    <Writeup
      {size}
      {align}
    >
      <Tagline
        size="sm"
        text={tagline}
      />
      <Heading
        size="4xl"
        text={heading}
        {depth}
      />
      <Paragraph
        size="lg"
        text={paragraph}
      />
      <Fragment set:html={writeup} />
      <slot />
      <Buttons
        variant="secondary"
        {size}
        {buttons}
      />
    </Writeup>
    <Image {...image} />
  </Container>
</Section>

<style>
  @layer fulldev {
    .container {
      display: flex;
      flex-direction: column;
      gap: var(--spacer);

      .image {
        border-radius: var(--radius-lg);
      }
    }
  }
</style>
