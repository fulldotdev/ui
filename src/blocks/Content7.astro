---
import Buttons from 'fulldev-ui/components/Buttons.astro'
import Heading from 'fulldev-ui/components/Heading.astro'
import Image from 'fulldev-ui/components/Image.astro'
import Menus from 'fulldev-ui/components/Menus.astro'
import Paragraph from 'fulldev-ui/components/Paragraph.astro'
import Tagline from 'fulldev-ui/components/Tagline.astro'
import Toc from 'fulldev-ui/components/Toc.astro'
import type { BlockSchema } from 'fulldev-ui/schemas/block'
import Container from 'fulldev-ui/structures/Container.astro'
import Group from 'fulldev-ui/structures/Group.astro'
import Prose from 'fulldev-ui/structures/Prose.astro'
import Sidebar from 'fulldev-ui/structures/Sidebar.astro'

interface Props extends BlockSchema {}

const {
  depth,
  tagline,
  heading,
  paragraph,
  buttons,
  image,
  content,
  menus,
  headings,
} = Astro.props
---

<Container class="content-7">
  <Sidebar>
    <Menus
      size="sm"
      {menus}
    />
  </Sidebar>
  <Container>
    <Prose>
      <Tagline text={tagline} />
      <Heading
        size="4xl"
        text={heading}
        {depth}
      />
      <Paragraph
        muted
        size="lg"
        text={paragraph}
      />
      <Image {...image} />
      <Fragment set:html={content} />
      <slot />
      <Group>
        <Buttons {buttons} />
      </Group>
    </Prose>
  </Container>
  <Sidebar>
    <Toc
      size="sm"
      {heading}
      {headings}
    />
  </Sidebar>
</Container>

<style>
  @layer fulldev {
    .content-7 {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      padding-right: 0px;
      padding-left: 0px;
    }

    .container {
      max-width: calc(100%- (2 * var(--sidebar-width))) !important;
    }

    .prose {
      margin-right: auto;
      margin-left: auto;
      padding-top: var(--spacing-8);
      padding-bottom: var(--spacing-8);
    }
  }
</style>
