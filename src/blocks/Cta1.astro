---
import Buttons from '@/components/Buttons.astro'
import Container from '@/components/Container.astro'
import Panel from '@/components/Panel.astro'
import Section from '@/components/Section.astro'
import Writeup from '@/components/Writeup.astro'
import type { CtaSchema } from '@/schemas/blocks/cta'

interface Props extends CtaSchema {}

const { writeup, buttons } = Astro.props
---

<Section class="cta cta-1">
  <Container>
    <Panel>
      <Writeup
        size="lg"
        align="center"
      >
        <Fragment set:html={writeup} />
        <slot />
        <Buttons
          size="lg"
          {buttons}
        />
      </Writeup>
    </Panel>
  </Container>
</Section>
