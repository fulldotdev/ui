---
import Contact1 from 'fulldev-ui/blocks/Contact1.astro'
import Contact2 from 'fulldev-ui/blocks/Contact2.astro'
import Contact3 from 'fulldev-ui/blocks/Contact3.astro'
import type { BlockSchema } from 'fulldev-ui/schemas/block.ts'

interface Props extends BlockSchema {
  depth?: 1 | 2 | 3
  variant?: keyof typeof variants
  align?: 'start' | 'center' | 'end'
}

const variants = {
  1: Contact1,
  2: Contact2,
  3: Contact3,
}

const { variant = 1, ...rest } = Astro.props

const Block = variants[variant]
---

<Block
  class:list={`contact variant-${variant}`}
  {...rest}
>
  <slot />
</Block>
