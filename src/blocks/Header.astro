---
import Header1 from 'fulldev-ui/blocks/Header1.astro'
import type { GlobalSchema } from 'fulldev-ui/schemas/global'

interface Props extends GlobalSchema {}

const variants = {
  1: Header1,
}

const { variant = 1, ...rest } = Astro.props

const Block = variants[variant as keyof typeof variants]
---

<Block
  class:list={`header variant-${variant}`}
  {...rest}
>
  <slot />
</Block>
