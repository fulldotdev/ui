---
import Channels from 'fulldev-ui/components/Channels.astro'
import Element from 'fulldev-ui/components/Element.astro'
import Logo from 'fulldev-ui/components/Logo.astro'
import Menus from 'fulldev-ui/components/Menus.astro'
import { default as Paragraph } from 'fulldev-ui/components/Paragraph.astro'
import Socials from 'fulldev-ui/components/Socials.astro'
import type { BlockSchema } from 'fulldev-ui/schemas/block'
import Container from 'fulldev-ui/structures/Container.astro'
import Group from 'fulldev-ui/structures/Group.astro'
import Writeup from 'fulldev-ui/structures/Writeup.astro'

interface Props extends BlockSchema {}

const {
  logo,
  heading,
  paragraph,
  socials,
  channels,
  menus,
  // hours,
  // html,
  ...rest
} = Astro.props
---

<Element
  class:list="footer"
  as="footer"
  {...rest}
>
  <Container class:list="footer-container">
    <Writeup>
      <Logo
        size="sm"
        {...logo}
      />
      <Paragraph
        size="sm"
        text={paragraph}
      />
      <Group>
        <Socials
          size="sm"
          {socials}
        />
      </Group>
    </Writeup>
    <Element class:list="footer-channels">
      <Channels {channels} />
    </Element>
    <Menus
      size="sm"
      {menus}
    />
  </Container>
</Element>

<style is:global>
  @layer fulldev {
    .footer {
      position: relative;
      margin-top: auto;
      border-top: 1px solid var(--color-border);
      background-color: var(--color-background);
      width: 100%;

      .container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(14rem, 1fr));
        gap: var(--spacing-12);
        padding-top: var(--spacing-12);
        padding-bottom: var(--spacing-12);
      }

      .writeup,
      .footer-channels {
        max-width: var(--breakpoint-xs);
      }

      .writeup .group {
        margin-top: var(--spacing-2);
      }

      .footer-channels {
        display: flex;
        row-gap: var(--spacing-2);
        flex-direction: column;
      }
    }
  }
</style>
