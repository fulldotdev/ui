---
import type { ComponentProps } from 'astro/types'
import Hero from 'fulldev-ui/blocks/Hero.astro'
import Badge from 'fulldev-ui/components/Badge.astro'
import Buttons from 'fulldev-ui/components/Buttons.astro'
import Heading from 'fulldev-ui/components/Heading.astro'
import Image from 'fulldev-ui/components/Image.astro'
import Paragraph from 'fulldev-ui/components/Paragraph.astro'
import Proof from 'fulldev-ui/components/Proof.astro'
import Tagline from 'fulldev-ui/components/Tagline.astro'
import Container from 'fulldev-ui/structures/Container.astro'
import Section from 'fulldev-ui/structures/Section.astro'
import Spread from 'fulldev-ui/structures/Spread.astro'
import Writeup from 'fulldev-ui/structures/Writeup.astro'

interface Props extends ComponentProps<typeof Hero> {}

const {
  align = 'center',
  depth,
  proof,
  badge,
  tagline,
  heading,
  paragraph,
  buttons,
  image,
  content,
  ...rest
} = Astro.props
---

<Section {...rest}>
  <Image {...image} />
  <Container>
    <Spread {align}>
      <Writeup>
        <Proof {...proof} />
        <Badge
          size="lg"
          {...badge}
        />
        <Tagline
          size="sm"
          text={tagline}
        />
        <Heading
          size="6xl"
          text={heading}
          {depth}
        />
        <Paragraph
          size="xl"
          text={paragraph}
        />
        <Fragment set:html={content} />
        <slot />
      </Writeup>
      <Buttons
        size="lg"
        {buttons}
      />
    </Spread>
  </Container>
</Section>

<style>
  @layer fulldev {
    .section {
      display: flex;
      min-height: 100vh;

      &:first-child {
        margin-top: calc(var(--header-height) * -1);
        padding-top: calc(var(--header-height) + var(--spacer));
      }
    }

    .image {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      opacity: 0.5;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .container {
      display: flex;
      position: relative;
      flex-direction: column;
    }
  }
</style>
