---
import type { ComponentProps } from 'astro/types'
import type { CollectionEntry } from 'astro:content'
import Button from 'fulldev-ui/components/Button.astro'
import Element from 'fulldev-ui/components/Element.astro'
import Heading from 'fulldev-ui/components/Heading.astro'
import Image from 'fulldev-ui/components/Image.astro'
import List from 'fulldev-ui/components/List.astro'
import type { BlockSchema } from 'fulldev-ui/schemas/block'
import Card from 'fulldev-ui/structures/Card.astro'
import Container from 'fulldev-ui/structures/Container.astro'
import Matrix from 'fulldev-ui/structures/Matrix.astro'
import Section from 'fulldev-ui/structures/Section.astro'
import Writeup from 'fulldev-ui/structures/Writeup.astro'
import { getHref } from 'fulldev-ui/utils/getHref'

interface Props extends ComponentProps<typeof Section>, BlockSchema {
  pages: CollectionEntry<'pages'>[]
}

const { heading, button, pages, ...rest } = Astro.props
---

<Section
  class:list="industries-1"
  {...rest}
>
  <Container>
    <Element class:list="industries-1-segment">
      <Heading
        size="3xl"
        text={heading}
      />
      <Button
        size="sm"
        variant="ghost"
        {...button}
      />
    </Element>
    <Matrix size="lg">
      {
        pages?.map(({ slug, data: { title, list, image } }) => (
          <Card
            class="industries-1-card"
            href={getHref(slug)}
          >
            <Image {...image} />
            <Writeup>
              <Heading
                as="h2"
                size="lg"
                text={title}
              />
              <List
                size="sm"
                items={list}
              />
            </Writeup>
          </Card>
        ))
      }
    </Matrix>
  </Container>
</Section>

<style is:global>
  @layer fulldev {
    .industries-1 {
      .container {
        @apply flex flex-col gap-12;
      }

      .industries-1-segment {
        @apply flex items-center justify-between gap-8;
      }

      .card {
        @apply overflow-hidden p-0;

        .writeup {
          @apply p-4;
        }
      }
    }
  }
</style>
