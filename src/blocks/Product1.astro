---
import Container from '@/components/Container.astro'
import Element from '@/components/Element.astro'
import Gallery from '@/components/Gallery.astro'
import List from '@/components/List.astro'
import Price from '@/components/Price.astro'
import Writeup from '@/components/Writeup.astro'
import type { ComponentProps } from 'astro/types'

interface Props {
  title?: string | undefined
  description?: string | undefined
  list?: string[] | undefined
  price?: number | undefined
  images?: ComponentProps<typeof Gallery>['images'] | undefined
}

const { title, description, list, images, price } = Astro.props
---

<Element class={`product product-1`}>
  <Container>
    <Gallery {images} />
    <Writeup>
      <Element as="h1">{title}</Element>
      <Element as="p">{description}</Element>
      <List items={list} />
      <Price amount={price} />
      <slot />
    </Writeup>
  </Container>
</Element>

<style>
  .product {
    @media (min-width: 768px) {
      padding-top: var(--gutter);
    }
  }

  .container {
    display: flex;
    row-gap: var(--spacing-8);
    flex-direction: column;
    padding-right: 0px;
    padding-left: 0px;
    max-width: var(--breakpoint-xl);

    @media (min-width: 768px) {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      column-gap: var(--gutter);
      padding-right: var(--gutter);
      padding-left: var(--gutter);
    }
  }

  .prose {
    padding-right: var(--gutter);
    padding-left: var(--gutter);

    @media (min-width: 768px) {
      padding-right: 0px;
      padding-left: 0px;
    }
  }
</style>
