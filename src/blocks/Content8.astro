---
// Centered
import type { ComponentProps } from 'astro/types'
import Buttons from 'fulldev-ui/components/Buttons.astro'
import Heading from 'fulldev-ui/components/Heading.astro'
import Image from 'fulldev-ui/components/Image.astro'
import Menu from 'fulldev-ui/components/Menu.astro'
import Menus from 'fulldev-ui/components/Menus.astro'
import Paragraph from 'fulldev-ui/components/Paragraph.astro'
import Tagline from 'fulldev-ui/components/Tagline.astro'
import Container from 'fulldev-ui/structures/Container.astro'
import Group from 'fulldev-ui/structures/Group.astro'
import Prose from 'fulldev-ui/structures/Prose.astro'
import Section from 'fulldev-ui/structures/Section.astro'
import Sidebar from 'fulldev-ui/structures/Sidebar.astro'

interface Props extends ComponentProps<typeof Section> {
  depth?: 1 | 2 | undefined
  tagline?: string | undefined
  heading?: string | undefined
  paragraph?: string | undefined
  content?: string | undefined
  image?: ComponentProps<typeof Image> | undefined
  buttons?: ComponentProps<typeof Buttons>['buttons']
  toc?: ComponentProps<typeof Menu>
  sidebar?: ComponentProps<typeof Menus>['menus']
}

const {
  depth = 2,
  tagline,
  heading,
  paragraph,
  buttons,
  image,
  content,
  sidebar,
  toc,
  ...rest
} = Astro.props
---

<Container
  class:list="content-8"
  {...rest}
>
  <Sidebar>
    <Menus
      size="sm"
      menus={sidebar}
    />
  </Sidebar>
  <Container>
    <Prose>
      <Tagline text={tagline} />
      <Heading
        size="5xl"
        text={heading}
        {depth}
      />
      <Paragraph
        muted
        size="lg"
        text={paragraph}
      />
      <Image {...image} />
      <Fragment set:html={content} />
      <slot />
      <Group>
        <Buttons {buttons} />
      </Group>
    </Prose>
  </Container>
</Container>

<style is:global>
  @layer fulldev {
    .content-8 {
      @apply flex w-full items-start justify-between px-0;

      .sidebar {
        @apply hidden lg:flex;
      }

      .container {
        @apply lg:!max-w-[calc(100%-var(--sidebar-width))];
      }

      .prose {
        @apply mx-auto max-w-full py-8;
      }
    }
  }
</style>
