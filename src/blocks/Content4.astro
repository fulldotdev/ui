---
// Heading etc left, image and content right, sticky
import type { ComponentProps } from 'astro/types'
import Buttons from 'fulldev-ui/components/Buttons.astro'
import Heading from 'fulldev-ui/components/Heading.astro'
import Image from 'fulldev-ui/components/Image.astro'
import Paragraph from 'fulldev-ui/components/Paragraph.astro'
import Tagline from 'fulldev-ui/components/Tagline.astro'
import Container from 'fulldev-ui/structures/Container.astro'
import Group from 'fulldev-ui/structures/Group.astro'
import Prose from 'fulldev-ui/structures/Prose.astro'
import Section from 'fulldev-ui/structures/Section.astro'

interface Props extends ComponentProps<typeof Section> {
  depth?: 1 | 2 | undefined
  tagline?: string | undefined
  heading?: string | undefined
  paragraph?: string | undefined
  content?: string | undefined
  image?: ComponentProps<typeof Image> | undefined
  buttons?: ComponentProps<typeof Buttons>['buttons']
}

const {
  depth = 2,
  tagline,
  heading,
  paragraph,
  buttons,
  image,
  content,
  ...rest
} = Astro.props
---

<Section
  class:list="content-4"
  {...rest}
>
  <Container>
    <Prose>
      <Tagline text={tagline} />
      <Heading
        size="4xl"
        text={heading}
        {depth}
      />
      <Paragraph
        muted
        size="lg"
        text={paragraph}
      />
      <Group>
        <Buttons {buttons} />
      </Group>
    </Prose>
    <Prose>
      <Image {...image} />
      <Fragment set:html={content} />
      <slot />
    </Prose>
  </Container>
</Section>

<style is:global>
  @layer fulldev {
    .content-4 {
      .container {
        @apply flex flex-col items-start gap-x-gutter lg:grid lg:grid-cols-2;
      }

      .prose {
        @apply lg:sticky lg:top-sticky-16 lg:max-w-xl;
      }
    }
  }
</style>
