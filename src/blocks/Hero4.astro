---
import Badge from 'fulldev-ui/components/Badge.astro'
import Buttons from 'fulldev-ui/components/Buttons.astro'
import Heading from 'fulldev-ui/components/Heading.astro'
import Image from 'fulldev-ui/components/Image.astro'
import Paragraph from 'fulldev-ui/components/Paragraph.astro'
import Proof from 'fulldev-ui/components/Proof.astro'
import Tagline from 'fulldev-ui/components/Tagline.astro'
import type { BlockSchema } from 'fulldev-ui/schemas/block'
import Container from 'fulldev-ui/structures/Container.astro'
import Section from 'fulldev-ui/structures/Section.astro'
import Writeup from 'fulldev-ui/structures/Writeup.astro'

interface Props extends BlockSchema {
  align?: 'start' | 'center' | 'end'
}

const {
  align = 'center',
  depth,
  proof,
  badge,
  tagline,
  heading,
  paragraph,
  buttons,
  image,
  content,
} = Astro.props
---

<Section class="hero-1">
  <Image {...image} />
  <Container>
    <Writeup {align}>
      <Proof {...proof} />
      <Badge
        size="lg"
        {...badge}
      />
      <Tagline
        size="sm"
        text={tagline}
      />
      <Heading
        size="6xl"
        text={heading}
        {depth}
      />
      <Paragraph
        size="xl"
        text={paragraph}
      />
      <Fragment set:html={content} />
      <slot />
      <Buttons
        size="lg"
        {buttons}
      />
    </Writeup>
  </Container>
</Section>

<style>
  .section {
    display: flex;
    align-items: center;
    margin-top: calc(var(--header-height) * -1);
    padding-top: calc(var(--header-height) + var(--spacer));
    min-height: 100vh;
  }

  .image {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    opacity: 0.5;
    border-radius: var(--radius-none);
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .container {
    display: flex;
    position: relative;
    flex-direction: column;
    gap: var(--spacer);
    height: 100%;
  }

  .container {
    position: relative;
  }
</style>
