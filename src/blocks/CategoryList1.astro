---
import Abstract from '@/components/Abstract.astro'
import Box from '@/components/Box.astro'
import Button from '@/components/Button.astro'
import Container from '@/components/Container.astro'
import Grid from '@/components/Grid.astro'
import Image from '@/components/Image.astro'
import Section from '@/components/Section.astro'
import Writeup from '@/components/Writeup.astro'
import type { CategoryListSchema } from '@/schemas/blocks/categoryList'

interface Props extends CategoryListSchema {}

const { writeup, button, categories } = Astro.props
---

<Section class="categories categories-1">
  <Container class="flex flex-col gap-8">
    <Box class="flex w-full items-center justify-between gap-8">
      <Writeup size="sm">
        <Fragment set:html={writeup} />
        <slot />
      </Writeup>
      <Button
        class="max-lg:hidden"
        variant="link"
        reverse
        {...button}
      />
    </Box>
    <Grid length={categories?.length}>
      {
        categories?.map(({ href, image, title }) => (
          <Box
            class="group flex flex-col gap-4"
            {href}
          >
            <Image
              class="aspect-square rounded-lg transition-opacity group-hover:opacity-75"
              {...image}
            />
            <Abstract>
              <Box as="h3">{title}</Box>
            </Abstract>
          </Box>
        ))
      }
    </Grid>
    <Button
      class="lg:hidden"
      variant="secondary"
      {...button}
    />
  </Container>
</Section>
