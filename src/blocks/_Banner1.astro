---
import Container from 'fulldev-ui/components/Container.astro'
import Element from 'fulldev-ui/components/Element.astro'
import type { BlockSchema } from 'fulldev-ui/schemas/block'

interface Props extends BlockSchema {}

const { text } = Astro.props
---

<Element
  class="banner"
  as="header"
>
  <Container>
    <Fragment set:html={text} />
  </Container>
</Element>

<style>
  @layer fulldev {
    .banner {
      display: flex;
      position: relative;
      align-items: center;
      background-color: var(--color-primary);
      padding-top: var(--spacing-2-5);
      padding-bottom: var(--spacing-2-5);
      width: 100%;
      color: var(--color-primary-foreground);
    }

    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: var(--color-primary);
      overflow: hidden;
      color: var(--color-primary-foreground);
      font-size: var(--text-sm);
      line-height: 1;
      text-align: center;
    }
  }
</style>
