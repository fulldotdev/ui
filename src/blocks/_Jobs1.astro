---
import Button from '@/components/Button.astro'
import Card from '@/components/Card.astro'
import Container from '@/components/Container.astro'
import Element from '@/components/Element.astro'
import Heading from '@/components/Heading.astro'
import List from '@/components/List.astro'
import Matrix from '@/components/Matrix.astro'
import Section from '@/components/Section.astro'
import type { BlockSchema } from '@/schemas/fields/block.ts'

interface Props extends BlockSchema {}

const { heading, button, cards } = Astro.props
---

<Section class="jobs-1">
  <Container>
    <Element class="jobs-1-segment">
      <Heading
        size="3xl"
        text={heading}
      />
      <Button
        size="sm"
        variant="ghost"
        {...button}
      />
    </Element>
    <Matrix>
      {
        cards?.map(({ href, heading, list }) => (
          <Card
            class="jobs-1-card"
            {href}
          >
            <Heading
              as="h2"
              size="lg"
              text={heading}
            />
            <List
              size="sm"
              items={list}
            />
          </Card>
        ))
      }
    </Matrix>
  </Container>
</Section>

<style is:global>
  @layer fulldev {
    .jobs-1 {
      .container {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-12);
      }

      .jobs-1-segment {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: var(--spacing-8);
      }

      .card {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-3);
      }
    }
  }
</style>
