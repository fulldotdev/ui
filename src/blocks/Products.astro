---
import type { ComponentProps, HTMLAttributes } from 'astro/types'
import type { CollectionEntry } from 'astro:content'
import Button from 'fulldev-ui/components/Button.astro'
import Buttons from 'fulldev-ui/components/Buttons.astro'
import Element from 'fulldev-ui/components/Element.astro'
import Heading from 'fulldev-ui/components/Heading.astro'
import Image from 'fulldev-ui/components/Image.astro'
import Price from 'fulldev-ui/components/Price.astro'

interface Props extends HTMLAttributes<'section'> {
  heading?: ComponentProps<typeof Heading>['text']
  button?: ComponentProps<typeof Buttons> | undefined
  products?: CollectionEntry<'products'>[]
}

const { heading, button, products, ...rest } = Astro.props
---

<Element
  class:list="products"
  if={products?.length}
  as="section"
  {...rest}
>
  <Element class:list="products-container">
    <Element class:list="products-segment">
      <Heading
        level={2}
        size="sm"
        text={heading}
      />
      <Button
        variant="ghost"
        size="sm"
        {...button}
      />
    </Element>
    <Element class:list="products-cards">
      {
        products?.map(({ slug, data }) => (
          <Element
            class:list="products-card"
            as="a"
            href={`/producten/${slug}/`}
          >
            <Image
              class:list="products-card-image"
              {...data.images?.[0]}
            />
            <Element class:list="products-card-content">
              <Heading
                as="h3"
                level={5}
                size={'sm'}
                text={data.title}
              />
              <Price value={data.price} />
            </Element>
          </Element>
        ))
      }
    </Element>
  </Element>
</Element>

<style is:global>
  @layer fulldev {
    .products {
      @apply relative w-full py-16;

      .products-container {
        @apply container flex flex-col gap-8;
      }

      .products-segment {
        @apply flex items-center justify-between gap-8;
      }

      .products-cards {
        @apply grid grid-cols-2 items-start gap-4 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6;
      }

      .products-card {
        @apply relative flex flex-col gap-3;

        &:hover > .image {
          @apply opacity-75 transition-opacity;
        }

        .image {
          @apply rounded-md border;
        }
      }

      .products-card-content {
        @apply flex h-full flex-col gap-2;
      }
    }
  }
</style>
