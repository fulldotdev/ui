---
import Cta1 from 'fulldev-ui/blocks/Cta1.astro'
import Cta2 from 'fulldev-ui/blocks/Cta2.astro'
import Cta3 from 'fulldev-ui/blocks/Cta3.astro'
import Cta4 from 'fulldev-ui/blocks/Cta4.astro'
import Cta5 from 'fulldev-ui/blocks/Cta5.astro'
import Cta6 from 'fulldev-ui/blocks/Cta6.astro'
import Cta7 from 'fulldev-ui/blocks/Cta7.astro'
import Cta8 from 'fulldev-ui/blocks/Cta8.astro'
import Cta9 from 'fulldev-ui/blocks/Cta9.astro'
import type { BlockSchema } from 'fulldev-ui/schemas/block.ts'

interface Props extends BlockSchema {
  variant?: keyof typeof variants
  align?: 'start' | 'center' | 'end'
}

const variants = {
  1: Cta1,
  2: Cta2,
  3: Cta3,
  4: Cta4,
  5: Cta5,
  6: Cta6,
  7: Cta7,
  8: Cta8,
  9: Cta9,
}

const { variant = 1, ...rest } = Astro.props

const Block = variants[variant]
---

<Block
  class:list={`cta variant-${variant}`}
  {...rest}
>
  <slot />
</Block>
