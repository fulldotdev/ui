---
import Feature1 from 'fulldev-ui/blocks/Feature1.astro'
import Feature2 from 'fulldev-ui/blocks/Feature2.astro'
import Feature3 from 'fulldev-ui/blocks/Feature3.astro'
import Feature4 from 'fulldev-ui/blocks/Feature4.astro'
import Feature5 from 'fulldev-ui/blocks/Feature5.astro'
import Feature6 from 'fulldev-ui/blocks/Feature6.astro'
import type { BlockSchema } from 'fulldev-ui/schemas/block.ts'

interface Props extends BlockSchema {
  variant?: keyof typeof variants
  align?: 'start' | 'center' | 'end'
}

const variants = {
  1: Feature1,
  2: Feature2,
  3: Feature3,
  4: Feature4,
  5: Feature5,
  6: Feature6,
}

const { variant = 1, ...rest } = Astro.props

const Block = variants[variant]
---

<Block
  class:list={`feature variant-${variant}`}
  {...rest}
>
  <slot />
</Block>
