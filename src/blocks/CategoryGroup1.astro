---
import Abstract from 'fulldev-ui/components/Abstract.astro'
import Box from 'fulldev-ui/components/Box.astro'
import Container from 'fulldev-ui/components/Container.astro'
import Grid from 'fulldev-ui/components/Grid.astro'
import Image from 'fulldev-ui/components/Image.astro'
import Section from 'fulldev-ui/components/Section.astro'
import Writeup from 'fulldev-ui/components/Writeup.astro'
import type { CategoryGroupSchema } from 'fulldev-ui/schemas/blocks/categoryGroup'

interface Props extends CategoryGroupSchema {}

const { title, description, categories } = Astro.props
---

<Section class="categories categories-1">
  <Container class="flex flex-col gap-8">
    <Box class="flex w-full items-center justify-between gap-8">
      <Writeup size="sm">
        <Box as="h1">{title}</Box>
        <Box as="p">{description}</Box>
      </Writeup>
    </Box>
    <Grid length={categories?.length}>
      {
        categories?.map(({ href, image, title }) => (
          <Box
            class="group flex flex-col gap-4"
            {href}
          >
            <Image
              class="aspect-square rounded-lg transition-opacity group-hover:opacity-75"
              {...image}
            />
            <Abstract>
              <Box as="h3">{title}</Box>
            </Abstract>
          </Box>
        ))
      }
    </Grid>
  </Container>
</Section>
