---
import type { ComponentProps } from 'astro/types'
import Buttons from 'fulldev-ui/components/Buttons.astro'
import Container from 'fulldev-ui/components/Container.astro'
import Element from 'fulldev-ui/components/Element.astro'
import Prose from 'fulldev-ui/components/Prose.astro'

interface Props {
  size?: 'sm' | 'md' | 'lg' | undefined
  align?: 'start' | 'center' | 'end' | undefined
  title?: string | undefined
  description?: string | undefined
  content?: string | undefined
  buttons?: ComponentProps<typeof Buttons>['buttons']
}

const {
  size = 'lg',
  align = 'center',
  content,
  title,
  description,
  buttons,
} = Astro.props
---

<Element class:list={`cta cta-2 size-${size} align-${align}`}>
  <Container>
    <Element class="panel">
      <Prose
        {size}
        {align}
      >
        <Element as="h1">{title}</Element>
        <Element as="p">{description}</Element>
        <Fragment set:html={content} />
        <slot />
        <Buttons
          {size}
          {buttons}
        />
      </Prose>
    </Element>
  </Container>
</Element>

<style>
  @layer fulldev {
    .container {
      padding-top: var(--spacing-16);
      padding-bottom: var(--spacing-16);
    }

    .panel {
      position: relative;
      border: 1px solid var(--color-border);
      border-radius: var(--radius-lg);
      background-color: var(--color-card);
      padding-top: var(--spacing-16);
      padding-right: var(--gutter);
      padding-bottom: var(--spacing-16);
      padding-left: var(--gutter);
      width: 100%;
      overflow: hidden;
    }
  }
</style>
