---
import Element from 'fulldev-ui/components/Element.astro'
import Links from 'fulldev-ui/components/Links.astro'
import type { BlockSchema } from 'fulldev-ui/schemas/block'

interface Props extends BlockSchema {}

const { links, ...rest } = Astro.props
---

<Element
  class:list={['subheader']}
  as="subheader"
  {...rest}
>
  <Element class:list="subheader-container">
    <Links
      class:list="subheader-links"
      size="sm"
      {links}
    />
  </Element>
</Element>

<style is:global>
  @layer fulldev {
    .subheader {
      display: none;
      position: sticky;
      top: 0;
      top: var(--header-height);
      left: 0;
      align-items: center;
      z-index: 20;
      background-color: var(--color-card);
      max-width: 1024px;
      height: var(--subheader-height);
      overflow: hidden;

      @media (min-width: 1024px) {
        display: flex;
      }

      .subheader-container {
        display: flex;
        align-items: center;
        gap: var(--spacing-6);
        width: 100%;
        max-width: var(--breakpoint-2xl);
      }

      .subheader-links {
        justify-content: space-between;
        width: 100%;
      }

      &,
      & ~ * {
        --subheader-height: 2.75rem;
      }

      @media (max-width: 1023.999px) {
        &,
        & ~ * {
          --subheader-height: 0px;
        }
      }
    }
  }
</style>
