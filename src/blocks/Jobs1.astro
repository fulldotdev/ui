---
import type { ComponentProps } from 'astro/types'
import { getEntries } from 'astro:content'
import Heading from 'fulldev-ui/components/Heading.astro'
import List from 'fulldev-ui/components/List.astro'
import Paragraph from 'fulldev-ui/components/Paragraph.astro'
import Tagline from 'fulldev-ui/components/Tagline.astro'
import type { BlockSchema } from 'fulldev-ui/schemas/block'
import Card from 'fulldev-ui/structures/Card.astro'
import Container from 'fulldev-ui/structures/Container.astro'
import Grid from 'fulldev-ui/structures/Grid.astro'
import Section from 'fulldev-ui/structures/Section.astro'
import Writeup from 'fulldev-ui/structures/Writeup.astro'
import { getHref } from 'fulldev-ui/utils/getHref'

interface Props extends ComponentProps<typeof Section>, BlockSchema {}

const { tagline, heading, paragraph, pages, ...rest } = Astro.props

const entries = pages && (await getEntries(pages))
---

<Section
  class:list="jobs-1"
  {...rest}
>
  <Container>
    <Writeup align="center">
      <Tagline
        size="sm"
        text={tagline}
      />
      <Heading
        size="3xl"
        text={heading}
      />
      <Paragraph text={paragraph} />
    </Writeup>
    <Grid>
      {
        entries?.map(({ slug, data: { title, list } }) => (
          <Card
            class="jobs-1-card"
            href={getHref(slug)}
          >
            <Heading
              as="h2"
              size="lg"
              text={title}
            />
            <List
              size="sm"
              items={list}
            />
          </Card>
        ))
      }
    </Grid>
  </Container>
</Section>

<style is:global>
  @layer fulldev {
    .jobs-1 {
      .container {
        @apply flex flex-col items-center gap-16;
      }
      .card {
        @apply flex flex-col gap-3;
      }
    }
  }
</style>
