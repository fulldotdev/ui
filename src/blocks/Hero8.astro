---
import Badge from 'fulldev-ui/components/Badge.astro'
import Buttons from 'fulldev-ui/components/Buttons.astro'
import Container from 'fulldev-ui/components/Container.astro'
import Element from 'fulldev-ui/components/Element.astro'
import Image from 'fulldev-ui/components/Image.astro'
import Proof from 'fulldev-ui/components/Proof.astro'
import Prose from 'fulldev-ui/components/Prose.astro'
import Section from 'fulldev-ui/components/Section.astro'
import type { BlockSchema } from 'fulldev-ui/schemas/fields/block.ts'

interface Props extends BlockSchema {}

const {
  size = 'lg',
  align = 'center',
  proof,
  badge,
  buttons,
  image,
  content,
  title,
  description,
} = Astro.props
---

<Section class:list={`hero hero-8 size-${size} align-${align}`}>
  <Image {...image} />
  <Container>
    <Prose
      {size}
      {align}
    >
      <Proof
        {size}
        {...proof}
      />
      <Badge
        {size}
        {...badge}
      />
      <Element as="h1">{title}</Element>
      <Element as="p">{description}</Element>
      <Fragment set:html={content} />
      <slot />
      <Buttons
        {size}
        {buttons}
      />
    </Prose>
  </Container>
</Section>

<style>
  @layer fulldev {
    .section {
      display: flex;
      align-items: center;
      min-height: 100vh;

      &:first-child {
        margin-top: calc(var(--header-height) * -1);
        padding-top: calc(var(--header-height) + var(--spacer));
      }
    }

    .image {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      opacity: 0.5;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .container {
      display: flex;
      position: relative;
      flex-direction: column;
      gap: var(--spacer);
      height: 100%;
    }

    .container {
      position: relative;
    }
  }
</style>
