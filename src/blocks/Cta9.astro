---
import type { ComponentProps } from 'astro/types'
import Hero from 'fulldev-ui/blocks/Hero.astro'
import Buttons from 'fulldev-ui/components/Buttons.astro'
import Heading from 'fulldev-ui/components/Heading.astro'
import Image from 'fulldev-ui/components/Image.astro'
import Paragraph from 'fulldev-ui/components/Paragraph.astro'
import Tagline from 'fulldev-ui/components/Tagline.astro'
import Container from 'fulldev-ui/structures/Container.astro'
import Panel from 'fulldev-ui/structures/Panel.astro'
import Section from 'fulldev-ui/structures/Section.astro'
import Spread from 'fulldev-ui/structures/Spread.astro'
import Writeup from 'fulldev-ui/structures/Writeup.astro'

interface Props extends ComponentProps<typeof Hero> {}

const {
  align = 'center',
  depth,
  proof,
  badge,
  tagline,
  heading,
  paragraph,
  buttons,
  image,
  content,
  ...rest
} = Astro.props
---

<Section {...rest}>
  <Container>
    <Panel>
      <Image {...image} />
      <Spread {align}>
        <Writeup>
          <Tagline
            size="sm"
            text={tagline}
          />
          <Heading
            size="5xl"
            text={heading}
            {depth}
          />
          <Paragraph
            size="lg"
            text={paragraph}
          />
          <Fragment set:html={content} />
          <slot />
        </Writeup>
        <Buttons
          size="lg"
          {buttons}
        />
      </Spread>
    </Panel>
  </Container>
</Section>

<style>
  @layer fulldev {
    .panel {
      padding-top: var(--spacer);
      padding-right: var(--gutter);
      padding-bottom: var(--spacer);
      padding-left: var(--gutter);
    }

    .spread {
      position: relative;
    }

    .image {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      opacity: 0.5;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
</style>
