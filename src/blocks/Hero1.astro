---
import type { HTMLAttributes } from 'astro/types'
import Badge from 'fulldev-ui/components/Badge.astro'
import Buttons from 'fulldev-ui/components/Buttons.astro'
import Container from 'fulldev-ui/components/Container.astro'
import Element from 'fulldev-ui/components/Element.astro'
import Heading from 'fulldev-ui/components/Heading.astro'
import Image from 'fulldev-ui/components/Image.astro'
import Section from 'fulldev-ui/components/Section.astro'
import Tagline from 'fulldev-ui/components/Tagline.astro'
import Text from 'fulldev-ui/components/Text.astro'
import type { HeroSchema } from 'fulldev-ui/schemas/blocks/hero.ts'

interface Props extends HTMLAttributes<'section'>, HeroSchema {}

const { badge, tagline, heading, text, buttons, image, ...rest } = Astro.props
---

<Section
  class:list="hero"
  {...rest}
>
  <Container>
    <Element class="segment">
      <Element class="content">
        <Badge
          {...badge}
          size="lg"
        />
        <Tagline text={tagline} />
        <Heading
          text={heading}
          size="5xl"
          as="h1"
        />
        <Text
          text={text}
          size="xl"
        />
      </Element>
      <Buttons
        {buttons}
        size="lg"
      />
    </Element>
    <Image {...image} />
  </Container>
</Section>

<style is:global>
  @layer fulldev {
    .hero {
      .segment {
        @apply flex flex-col items-center gap-8 text-center;
      }

      .content {
        @apply flex max-w-screen-md flex-col items-center gap-4 text-center;
      }

      .text {
        @apply text-balance;
      }

      .image {
        @apply rounded-lg;
      }
    }
  }
</style>
