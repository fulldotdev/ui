---
import Badge from '@/components/Badge.astro'
import Buttons from '@/components/Buttons.astro'
import Container from '@/components/Container.astro'
import Element from '@/components/Element.astro'
import Image from '@/components/Image.astro'
import Section from '@/components/Section.astro'
import Writeup from '@/components/Writeup.astro'
import type { ComponentProps } from 'astro/types'

interface Props {
  size?: ComponentProps<typeof Writeup>['size']
  align?: ComponentProps<typeof Writeup>['align']
  badge?: ComponentProps<typeof Badge>
  title?: string | undefined
  description?: string | undefined
  content?: string | undefined
  buttons?: ComponentProps<typeof Buttons>['buttons']
  image?: ComponentProps<typeof Image>
}

const { size = 'lg', align = 'center', badge, title, description, content, buttons, image } = Astro.props
---

<Section class="hero hero-2 flex flex-col gap-16">
  <Container class="flex flex-col gap-16">
    <Writeup
      {size}
      {align}
    >
      <Badge
        variant="outline"
        {...badge}
      />
      <Element as="h1">{title}</Element>
      <Element as="p">{description}</Element>
      <Fragment set:html={content} />
      <slot />
      <Buttons
        {size}
        {buttons}
      />
    </Writeup>
    <Image
      class="rounded-xl"
      {...image}
    />
  </Container>
</Section>
