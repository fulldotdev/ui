---
import type { HTMLAttributes } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'

interface Props extends HTMLAttributes<'div'> {
  align?: 'start' | 'center' | 'end' | 'sticky' | undefined
}

const { align = 'start', ...rest } = Astro.props
---

<Element
  class:list={`split align-${align}`}
  {...rest}
>
  <slot />
</Element>

<style>
  @layer fulldev {
    .split {
      display: flex;
      column-gap: var(--gutter);
      row-gap: var(--spacer);
      flex-direction: column;

      @media (min-width: 1024px) {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));

        &.align-start {
          align-items: start;
        }

        &.align-center {
          align-items: center;
        }

        &.align-end {
          align-items: end;
        }

        &.align-sticky {
          align-items: start;

          @media (min-width: 1024px) {
            > * {
              position: sticky;
              /* TODO right value */
              top: 0;
              /* lg:[&>*]:top-sticky-16; */
            }
          }
        }
      }
    }
  }
</style>
