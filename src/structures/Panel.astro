---
import type { HTMLAttributes, HTMLTag } from 'astro/types'
import Element from 'fulldev-ui/components/Element.astro'

interface Props extends HTMLAttributes<'div'> {
  as?: HTMLTag
}

const { ...rest } = Astro.props
---

<Element
  class:list="panel"
  {...rest}
>
  <slot />
</Element>

<style is:global>
  @layer fulldev {
    .panel {
      @apply w-full gap-x-gutter rounded-lg border bg-card px-gutter py-20 text-card-foreground lg:px-20;
    }
  }
</style>
