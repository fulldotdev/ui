---
import Footer1 from '@/blocks/Footer1.astro'
import Header1 from '@/blocks/Header1.astro'
import Element from '@/components/Element.astro'
import Base from '@/layouts/Base.astro'
import type { ComponentProps } from 'astro/types'
import { getEntry } from 'astro:content'

interface Props extends ComponentProps<typeof Base> {}

const setting = await getEntry('settings', 'navigation')
---

<Base {...Astro.props}>
  <Header1 {...setting?.data?.header} />
  <Element as="main">
    <slot />
  </Element>
  <Footer1 {...setting?.data?.footer} />
</Base>
