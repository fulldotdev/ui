---
import type { ComponentProps } from 'astro/types'
import Article from 'fulldev-ui/blocks/Article.astro'
import Categories from 'fulldev-ui/blocks/Categories.astro'
import Intro from 'fulldev-ui/blocks/Intro.astro'
import Products from 'fulldev-ui/blocks/Products.astro'
import Sections from 'fulldev-ui/components/sections.astro'
import Layout from 'fulldev-ui/layouts/Layout.astro'
import { getCategoryPages } from 'fulldev-ui/utils/getCategoryPages'
import { getChildPages } from 'fulldev-ui/utils/getChildPages.ts'

type Props = ComponentProps<typeof Layout>

const { slug, sections, title, description } = Astro.props

const childPages = await getChildPages(slug)
const categoryPages = await getCategoryPages(slug)
// const siblingPages = await getSiblingPages(slug)
---

<Layout {...Astro.props}>
  <Intro
    heading={title}
    text={description}
  />
  <Categories
    cards={childPages}
    structure="grid"
    panel
  />
  <Products
    cards={categoryPages}
    structure="grid"
  />
  <Article style={{ '--screen': '768px' }} />
  <Sections {sections} />
  <slot />
</Layout>
