---
import type { ComponentProps } from 'astro/types'
import Block from 'fulldev-ui/components/Block.astro'
import Blocks from 'fulldev-ui/components/Blocks.astro'
import Prose from 'fulldev-ui/components/experimental/Prose.astro'
import Section from 'fulldev-ui/components/Section.astro'
import Layout from 'fulldev-ui/layouts/Layout.astro'

type Props = ComponentProps<typeof Layout>

const { render, sections, blocks, children, references, ...rest } = Astro.props
const { Content } = await render()
---

<Layout {...Astro.props}>
  <Block
    _bookshop_name="Hero"
    size="lg"
    {...rest}
  />
  <Block
    _bookshop_name="Categories"
    source="children"
    structure="grid"
    {...children ?? {}}
  />
  <Block
    _bookshop_name="ProductDeck"
    heading={rest.title && references
      ? `Alle ${rest.title.toLowerCase()}`
      : undefined}
    source="references"
    structure="grid"
    {...references ?? {}}
  />
  <Section style={{ '--screen': '768px' }}>
    <Prose id="prose">
      <Content />
    </Prose>
  </Section>
  <Blocks {...sections} />
  <Blocks {...blocks} />
  <slot />
</Layout>
