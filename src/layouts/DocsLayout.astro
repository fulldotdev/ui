---
import type { ComponentProps } from 'astro/types'
import Prose from 'fulldev-ui/components/experimental/Prose.astro'
import Layout from 'fulldev-ui/layouts/Layout.astro'

type Props = ComponentProps<typeof Layout>

const { render, ...rest } = Astro.props
const { Content } = await render()
---

<Layout
  class:list="docs-layout"
  {render}
  {...rest}
>
  <Prose>
    {Content && <Content />}
  </Prose>
</Layout>

<style lang="scss" is:global>
  @layer fulldev {
    .docs-layout {
      .prose {
        --screen: 768px;
        padding: var(--space-6) var(--gutter);
        color: var(--color-12);

        > h1 + p {
          color: var(--color-11);
        }

        > a,
        > p > a {
          color: var(--brand-11);

          &:hover {
            color: var(--brand-12);
          }
        }
      }
    }
  }
</style>
