---
import Layout from '@/layouts/Layout.astro'

interface Props {
  title?: string
  description?: string
  image?: {
    src?: string
    alt?: string
  }
  meta?: {
    title?: string
    description?: string
    canonical?: string
    noindex?: boolean
    nofollow?: boolean
  }
}

const { title, description, image, meta } = Astro.props
---

<Layout
  class="project"
  {title}
  {description}
  {image}
  {...meta}
/>
