---
import Layout from '@/layouts/Layout.astro'
import '@/styles/global.css'

interface Props {
  title?: string
  description?: string
  image?: {
    src?: string
    alt?: string
  }
  meta?: {
    title?: string
    description?: string
    canonical?: string
    noindex?: boolean
    nofollow?: boolean
  }
}

const { title, description, image, meta } = Astro.props
---

<Layout
  class="person"
  {title}
  {description}
  {image}
  {...meta}
>
  <slot />
</Layout>
