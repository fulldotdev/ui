---
import type { ComponentProps } from 'astro/types'
import type { CollectionEntry } from 'astro:content'
import Prose from 'fulldev-ui/components/Prose.astro'
import Layout from 'fulldev-ui/layouts/Layout.astro'
import type { DocSchema } from 'fulldev-ui/schemas/docSchema'

interface Props extends ComponentProps<typeof Layout>, DocSchema {
  render?: CollectionEntry<'docs'>['render']
}

const { render, ...rest } = Astro.props
---

<Layout {...rest}>
  <Prose
    {render}
    toc={true}
  />
  <slot />
</Layout>
