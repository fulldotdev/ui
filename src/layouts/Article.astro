---
import { Article1 } from '@/blocks/article-1'
import Block from '@/components/Block.astro'
import Layout from '@/layouts/Layout.astro'

interface Props {
  title?: string
  description?: string
  image?: {
    src?: string
    alt?: string
  }
  sections?: any[]
  meta?: {
    title?: string
    description?: string
    canonical?: string
    noindex?: boolean
    nofollow?: boolean
  }
}

const { title, description, image, sections, meta } = Astro.props
---

<Layout
  class="article"
  {title}
  {description}
  {image}
  {...meta}
>
  <Article1
    {title}
    {description}
    {image}
  >
    <slot />
  </Article1>
  {sections?.map((section) => <Block {...section} />)}
</Layout>
