---
import type { CollectionEntry } from 'astro:content'
import { getCollection, getEntry, render } from 'astro:content'
import Footer from 'fulldev-ui/blocks/Footer.astro'
import Header from 'fulldev-ui/blocks/Header.astro'
import Container from 'fulldev-ui/components/Container.astro'
import Element from 'fulldev-ui/components/Element.astro'
import Layout from 'fulldev-ui/components/Layout.astro'
import Menus from 'fulldev-ui/components/Menus.astro'
import Prose from 'fulldev-ui/components/Prose.astro'
import Sidebar from 'fulldev-ui/components/Sidebar.astro'
import Toc from 'fulldev-ui/components/Toc.astro'
import { getMenus } from 'fulldev-ui/lib/getMenus'

interface Props extends CollectionEntry<'docs'> {}

const { title, description, ...rest } = Astro.props.data
const { Content, headings } = await render(Astro.props)
const header = (await getEntry('globals', 'header'))?.data
const footer = (await getEntry('globals', 'footer'))?.data
const docs = await getCollection('docs')
---

<Layout {...rest}>
  <Header {...header} />
  <Element as="main">
    <Container>
      <Sidebar>
        <Menus
          menus={getMenus(docs)}
          size="sm"
        />
      </Sidebar>
      <Prose size="sm">
        <Element as="h1">{title}</Element>
        <Element as="p">{description}</Element>
        <Content />
      </Prose>
      <Sidebar>
        <Toc
          size="sm"
          heading={title}
          {headings}
        />
      </Sidebar>
    </Container>
  </Element>
  <Footer {...footer} />
</Layout>

<style>
  @layer fulldev {
    .section {
      padding-top: 0;
      padding-bottom: 0;
    }

    .prose {
      width: 100%;
    }

    .prose,
    .sidebar {
      padding-top: var(--spacing-8);
      padding-bottom: var(--spacing-8);
    }

    .prose {
      margin-right: auto;
      margin-left: auto;
    }

    .container {
      display: flex;
      column-gap: var(--gutter);
      justify-content: space-between;
      align-items: flex-start;
    }
  }
</style>
