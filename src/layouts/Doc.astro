---
import Container from '@/components/Container.astro'
import Element from '@/components/Element.astro'
import Menus from '@/components/Menus.astro'
import Prose from '@/components/Prose.astro'
import Sidebar from '@/components/Sidebar.astro'
import Toc from '@/components/Toc.astro'
import Navigation from '@/layouts/Navigation.astro'
import { getMenus } from '@/lib/getMenus'
import type { ComponentProps } from 'astro/types'
import { getCollection } from 'astro:content'

interface Props extends ComponentProps<typeof Navigation> {
  blocks?: any[]
}

const { title, description, ...rest } = Astro.props
const docs = await getCollection('docs')
---

<Navigation {...Astro.props}>
  <Container>
    <Sidebar>
      <Menus
        menus={getMenus(docs)}
        size="sm"
      />
    </Sidebar>
    <Prose size="sm">
      <Element as="h1">{title}</Element>
      <Element as="p">{description}</Element>
      <slot />
    </Prose>
    <Sidebar>
      <Toc
        size="sm"
        heading={title}
        {headings}
      />
    </Sidebar>
  </Container>
</Navigation>

<style>
  @layer fulldev {
    .section {
      padding-top: 0;
      padding-bottom: 0;
    }

    .prose {
      width: 100%;
    }

    .prose,
    .sidebar {
      padding-top: var(--spacing-8);
      padding-bottom: var(--spacing-8);
    }

    .prose {
      margin-right: auto;
      margin-left: auto;
    }

    .container {
      display: flex;
      column-gap: var(--gutter);
      justify-content: space-between;
      align-items: flex-start;
    }
  }
</style>
