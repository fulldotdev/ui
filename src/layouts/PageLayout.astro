---
import type { ComponentProps } from 'astro/types'
import Footer from 'fulldev-ui/blocks/Footer.astro'
import Header from 'fulldev-ui/blocks/Header.astro'
import Blocks from 'fulldev-ui/components/Blocks.astro'
import Sidebar from 'fulldev-ui/components/Sidebar.astro'
import Toc from 'fulldev-ui/components/Toc.astro'
import Layout from 'fulldev-ui/layouts/Layout.astro'

type Props = ComponentProps<typeof Layout>

const { header, sidebar, toc, footer, sections, ...rest } = Astro.props
---

<Layout
  class:list="page-layout"
  {...rest}
>
  <Header
    slot="top"
    {...header}
  />
  <Sidebar
    slot="left"
    {sidebar}
  />
  <Blocks {...sections} />
  <Toc
    slot="right"
    {toc}
  />
  <Footer
    slot="bottom"
    {...footer}
  />
</Layout>
