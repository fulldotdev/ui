---
import type { ComponentProps } from 'astro/types'
import Hero from 'fulldev-ui/blocks/Hero.astro'
import Prose from 'fulldev-ui/components/Prose.astro'
import Sections from 'fulldev-ui/components/sections.astro'
import Layout from 'fulldev-ui/layouts/Layout.astro'

interface Props
  extends ComponentProps<typeof Layout>,
    ComponentProps<typeof Prose> {
  hero?: ComponentProps<typeof Hero>
  sections?: ComponentProps<typeof Sections>['sections']
}

const { hero, render, toc, sections, ...rest } = Astro.props
---

<Layout {...rest}>
  <Hero {...hero} />
  <Prose
    {render}
    {toc}
  />
  <Sections {sections} />
  <slot />
</Layout>
