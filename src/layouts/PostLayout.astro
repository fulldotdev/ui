---
import type { ComponentProps } from 'astro/types'
import type { CollectionEntry } from 'astro:content'
import Prose from 'fulldev-ui/components/Prose.astro'
import Sections from 'fulldev-ui/components/sections.astro'
import Layout from 'fulldev-ui/layouts/Layout.astro'
import type { PostSchema } from 'fulldev-ui/schemas/postSchema'

interface Props extends ComponentProps<typeof Layout>, PostSchema {
  render?: CollectionEntry<'docs'>['render']
}

const { render, sections, ...rest } = Astro.props
---

<Layout {...rest}>
  <Prose
    {render}
    toc={true}
  />
  <Sections {sections} />
  <slot />
</Layout>
