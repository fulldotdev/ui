---
import { Page1 } from '@/blocks/page-1'
import Block from '@/components/Block.astro'
import Layout from '@/layouts/Layout.astro'
import '@/styles/global.css'

interface Props {
  title?: string
  description?: string
  image?: {
    src?: string
    alt?: string
  }
  sections?: any[]
  meta?: {
    title?: string
    description?: string
    canonical?: string
    noindex?: boolean
    nofollow?: boolean
  }
}

const { title, description, image, sections, meta } = Astro.props
---

<Layout
  class="page"
  {title}
  {description}
  {image}
  {...meta}
>
  <Page1 {image}>
    <slot />
  </Page1>
  {sections?.map((section) => <Block {...section} />)}
</Layout>
