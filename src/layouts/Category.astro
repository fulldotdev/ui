---
import Category1 from '@/blocks/Category1.astro'
import Footer from '@/blocks/Footer.astro'
import Header from '@/blocks/Header.astro'
import Block from '@/components/Block.astro'
import Element from '@/components/Element.astro'
import Layout from '@/components/Layout.astro'
import { getHref } from '@/lib/getHref'
import type { CollectionEntry } from 'astro:content'
import { getCollection, getEntry } from 'astro:content'

interface Props extends CollectionEntry<'categories'> {}

const { blocks, categories, ...rest } = Astro.props.data
const header = (await getEntry('globals', 'header'))?.data
const footer = (await getEntry('globals', 'footer'))?.data

const products = (
  await getCollection('products', ({ data }) => data.categories?.find((category) => category.id === Astro.props.id))
)?.map((product) => ({
  href: getHref(product),
  ...product.data,
}))
---

<Layout {...rest}>
  <Header {...header} />
  <Element as="main">
    <Category1
      {products}
      {...rest}
    />
    {blocks?.map((block) => <Block {...block} />)}
  </Element>
  <Footer {...footer} />
</Layout>

<style>
  .intro {
    border-bottom: 1px solid var(--color-border);
    padding-top: var(--spacing-10);
    padding-bottom: var(--spacing-10);

    p {
      color: var(--color-muted-foreground);
    }
  }

  .categories {
    border-bottom: 1px solid var(--color-border);
    padding-top: var(--spacing-6);
    padding-bottom: var(--spacing-6);
  }

  .categories .container {
    display: flex;
    justify-content: flex-start;
    gap: var(--spacing-4);
  }

  .category {
    display: flex;
    flex-direction: row;
    align-items: center;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background-color: var(--color-card);

    h3 {
      padding: var(--spacing-4);
    }

    .image {
      width: var(--spacing-14);
      height: var(--spacing-14);
      object-fit: cover;
    }
  }

  .toolbar {
    display: flex;
    position: sticky;
    top: var(--spacing-14);
    align-items: center;
    margin-top: -1px;
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
    padding-top: var(--spacing-3);
    padding-bottom: var(--spacing-3);

    .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: var(--header-height);
    }
  }
</style>
