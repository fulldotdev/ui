---
import Category1 from '@/blocks/Category1.astro'
import Block from '@/components/Block.astro'
import Navigation from '@/layouts/Navigation.astro'
import { getHref } from '@/lib/getHref'
import type { ComponentProps } from 'astro/types'
import { getCollection } from 'astro:content'

interface Props extends ComponentProps<typeof Navigation> {
  blocks?: any[]
  categories?: any[]
}

const { blocks, categories, ...rest } = Astro.props

const products = (
  await getCollection('products', ({ data }) => data.categories?.find((category) => category.id === Astro.props.id))
)?.map((product) => ({
  href: getHref(product),
  ...product.data,
}))
---

<Navigation {...Astro.props}>
  <Category1
    {products}
    {...rest}
  />
  {blocks?.map((block) => <Block {...block} />)}
</Navigation>

<style>
  .intro {
    border-bottom: 1px solid var(--color-border);
    padding-top: var(--spacing-10);
    padding-bottom: var(--spacing-10);

    p {
      color: var(--color-muted-foreground);
    }
  }

  .categories {
    border-bottom: 1px solid var(--color-border);
    padding-top: var(--spacing-6);
    padding-bottom: var(--spacing-6);
  }

  .categories .container {
    display: flex;
    justify-content: flex-start;
    gap: var(--spacing-4);
  }

  .category {
    display: flex;
    flex-direction: row;
    align-items: center;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background-color: var(--color-card);

    h3 {
      padding: var(--spacing-4);
    }

    .image {
      width: var(--spacing-14);
      height: var(--spacing-14);
      object-fit: cover;
    }
  }

  .toolbar {
    display: flex;
    position: sticky;
    top: var(--spacing-14);
    align-items: center;
    margin-top: -1px;
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
    padding-top: var(--spacing-3);
    padding-bottom: var(--spacing-3);

    .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: var(--header-height);
    }
  }
</style>
