---
import { Product1 } from '@/blocks/product-1'
import Layout from '@/layouts/Layout.astro'
import type { ComponentProps } from 'astro/types'

interface Props {
  title?: ComponentProps<typeof Product1>['title']
  description?: ComponentProps<typeof Product1>['description']
  gid?: ComponentProps<typeof Product1>['gid']
  price?: ComponentProps<typeof Product1>['price']
  images?: ComponentProps<typeof Product1>['images']
  options?: ComponentProps<typeof Product1>['options']
  variants?: ComponentProps<typeof Product1>['variants']
  meta?: Pick<ComponentProps<typeof Layout>, 'title' | 'description' | 'canonical' | 'noindex' | 'nofollow'>
}

const { gid, title, description, images, price, options, variants, meta } = Astro.props
---

<Layout
  class="product"
  {title}
  {description}
  image={images?.[0]}
  {...meta}
>
  <Product1
    {gid}
    {title}
    {description}
    {images}
    {price}
    {options}
    {variants}
  />
</Layout>
