---
import Product1 from '@/blocks/Product1.astro'
import Block from '@/components/Block.astro'
import Navigation from '@/layouts/Navigation.astro'
import type { ComponentProps } from 'astro/types'

interface Props extends ComponentProps<typeof Navigation> {
  blocks?: any[]
}

const { blocks, ...rest } = Astro.props
---

<Navigation {...Astro.props}>
  <Product1 {...rest}>
    <slot />
  </Product1>
  {blocks?.map((block) => <Block {...block} />)}
</Navigation>

<style>
  .carousel {
    display: flex;
    position: relative;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-height: 80vh;

    .buttons {
      position: absolute;
      bottom: var(--spacing-8);
    }
  }

  .carousel-container {
    display: inline-flex;
    box-sizing: border-box;
    width: 100%;
    overflow-x: scroll;
    scroll-behavior: smooth;
    scroll-snap-type: x mandatory;

    div {
      display: flex;
      flex: none;
      box-sizing: content-box;
      width: 100%;
      scroll-snap-align: center;

      .image {
        width: 100%;
        height: 100%;
        object-fit: contain;
      }
    }

    span {
      position: absolute;
      right: 0;
      bottom: 0;
      background-color: red;
      width: 40px;
      height: 40px;
    }
  }
</style>
